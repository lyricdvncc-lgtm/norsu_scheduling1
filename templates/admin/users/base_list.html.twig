        if ($('#collegeFilter').length) {
            $('#collegeFilter').val('');
        }
        if ($('#departmentFilter').length) {
            $('#departmentFilter').val('');
        }
        $('#searchInput').val('');
        
        // Clear all DataTables filters
        table.search('').columns().search('').draw();
        
        // Reset department dropdown to show all departments
        if (typeof filterDepartmentsByCollege === 'function') {
            filterDepartmentsByCollege();
        }
    });
});

// Filter departments by selected college
function filterDepartmentsByCollege() {
    const collegeSelect = document.querySelector('select[name="college_id"]');
    const deptSelect = document.querySelector('select[name="department_id"]');
    
    if (!collegeSelect || !deptSelect) return;
    
    const selectedCollegeId = collegeSelect.value;
    const deptOptions = deptSelect.querySelectorAll('option:not(:first-child)');
    
    // Store current department selection
    const currentDeptValue = deptSelect.value;
    let currentDeptStillVisible = false;
    
    // Show/hide departments based on college
    deptOptions.forEach(option => {
        if (!selectedCollegeId || option.dataset.collegeId === selectedCollegeId) {
            option.style.display = '';
            if (option.value === currentDeptValue) {
                currentDeptStillVisible = true;
            }
        } else {
            option.style.display = 'none';
        }
    });
    
    // Reset department selection if current selection is no longer visible
    if (!currentDeptStillVisible && currentDeptValue) {
        deptSelect.value = '';
    }
}

// Bulk actions
function bulkAction(action) {
    const checkboxes = document.querySelectorAll('.user-checkbox:checked');
    if (checkboxes.length === 0) {
        alert('Please select at least one user.');
        return;
    }

    const userIds = Array.from(checkboxes).map(cb => cb.value);
    const actionText = action === 'delete' ? 'delete' : action;
    
    if (!confirm(`Are you sure you want to ${actionText} ${userIds.length} selected user(s)?`)) {
        return;
    }

    fetch('{{ path('admin_api_users_bulk_action') }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify({
            action: action,
            user_ids: userIds
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Error: ' + data.message);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('An error occurred while performing the bulk action.');
    });
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    // Filter departments based on selected college on page load
    filterDepartmentsByCollege();
    
    // Bulk Actions Dropdown - Pure JavaScript Implementation
    const bulkActionsContainer = document.getElementById('bulkActionsContainer');
    const bulkActionsToggle = document.getElementById('bulkActionsToggle');
    const bulkActionsArrow = document.getElementById('bulkActionsArrow');
    const bulkActionsMenu = document.getElementById('bulkActionsMenu');
    
    let isBulkActionsOpen = false;
    
    // Function to show bulk actions dropdown
    function showBulkActionsDropdown() {
        if (isBulkActionsOpen) return;
        
        isBulkActionsOpen = true;
        bulkActionsMenu.classList.remove('hidden');
        bulkActionsArrow.classList.add('rotate-180');
        
        // Trigger animation
        setTimeout(() => {
            bulkActionsMenu.classList.remove('opacity-0', 'scale-95');
            bulkActionsMenu.classList.add('opacity-100', 'scale-100');
        }, 10);
    }
    
    // Function to hide bulk actions dropdown
    function hideBulkActionsDropdown() {
        if (!isBulkActionsOpen) return;
        
        isBulkActionsOpen = false;
        bulkActionsMenu.classList.remove('opacity-100', 'scale-100');
        bulkActionsMenu.classList.add('opacity-0', 'scale-95');
        bulkActionsArrow.classList.remove('rotate-180');
        
        // Hide after animation
        setTimeout(() => {
            bulkActionsMenu.classList.add('hidden');
        }, 200);
    }
    
    // Function to toggle bulk actions dropdown
    function toggleBulkActionsDropdown(event) {
        event.preventDefault();
        event.stopPropagation();
        
        if (isBulkActionsOpen) {
            hideBulkActionsDropdown();
        } else {
            showBulkActionsDropdown();
        }
    }
    
    // Add click handler to bulk actions toggle
    if (bulkActionsToggle) {
        bulkActionsToggle.addEventListener('click', toggleBulkActionsDropdown);
    }
    
    // Close bulk actions dropdown when clicking outside
    document.addEventListener('click', function(event) {
        if (!isBulkActionsOpen) return;
        
        // Check if click is inside the bulk actions container
        if (!bulkActionsContainer.contains(event.target)) {
            hideBulkActionsDropdown();
        }
    });
    
    // Enhanced delete confirmation
    const deleteButtons = document.querySelectorAll('button[title="Delete"]');
    deleteButtons.forEach(function(button) {
        button.addEventListener('click', function(e) {
            e.stopPropagation();
            if (!confirm('⚠️ Are you sure you want to delete this user?\n\nThis action cannot be undone and will permanently remove:\n• User account and profile\n• All associated data\n• Access permissions\n\nClick OK to proceed or Cancel to abort.')) {
                e.preventDefault();
                return false;
            }
        });
    });

    // Prevent Enter key from submitting forms (global handler for all inputs except submit buttons)
    $('body').on('keypress', 'input:not([type="submit"])', function(e) {
        if (e.which === 13) {
            e.preventDefault();
            return false;
        }
    });
});
