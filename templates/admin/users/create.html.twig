// Announce field context to screen readers
function announceFieldContext(field) {
    const label = field.closest('.form-field-container')?.querySelector('label')?.textContent;
    const isRequired = field.hasAttribute('required');
    const helpText = field.getAttribute('aria-describedby');
    
    let announcement = label || 'Form field';
    if (isRequired) {
        announcement += ', required';
    }
    if (helpText) {
        const helpElement = document.getElementById(helpText.split(' ')[0]);
        if (helpElement) {
            announcement += '. ' + helpElement.textContent;
        }
    }
    
    // Don't over-announce, just set aria-label if not already set
    if (!field.getAttribute('aria-label')) {
        field.setAttribute('aria-label', announcement);
    }
}

// Screen reader announcements
function announceToScreenReader(message) {
    const announcement = document.createElement('div');
    announcement.setAttribute('aria-live', 'polite');
    announcement.setAttribute('aria-atomic', 'true');
    announcement.className = 'sr-only';
    announcement.textContent = message;
    
    document.body.appendChild(announcement);
    
    // Remove after announcement
    setTimeout(() => {
        document.body.removeChild(announcement);
    }, 1000);
}

