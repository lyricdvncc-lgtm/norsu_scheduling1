    <!-- Alpine.js DataTable Logic -->
    <script>
        function roomsTable() {
            return {
                allData: [],
                filteredData: [],
                paginatedData: [],
                search: '',
                typeFilter: 'all',
                statusFilter: 'all',
                sortField: 'code',
                sortDirection: 'asc',
                perPage: 10,
                currentPage: 1,
                totalPages: 1,
                totalFiltered: 0,
                startEntry: 0,
                endEntry: 0,
                
                init() {
                    // Load data from server
                    this.allData = [
                        {% for room in rooms %}
                        {
                            id: {{ room.id }},
                            code: '{{ room.code|e('js') }}',
                            name: '{{ room.name|e('js') }}',
                            type: '{{ room.type|default('')|e('js') }}',
                            building: '{{ room.building|default('')|e('js') }}',
                            capacity: {{ room.capacity ?? 'null' }},
                            isActive: {{ room.isActive ? 'true' : 'false' }},
                            typeBadgeClass: '{{ room.typeBadgeClass|default('bg-gray-100 text-gray-800')|e('js') }}',
                            typeDisplay: '{{ room.typeIcon|default('')|raw }} {{ room.type|default('')|title|e('js') }}'
                        },
                        {% endfor %}
                    ];
                    this.filterData();
                },
                
                filterData() {
                    let filtered = [...this.allData];
                    
                    // Apply search filter
                    if (this.search) {
                        const searchLower = this.search.toLowerCase();
                        filtered = filtered.filter(room => 
                            room.code.toLowerCase().includes(searchLower) ||
                            room.name.toLowerCase().includes(searchLower) ||
                            (room.building && room.building.toLowerCase().includes(searchLower)) ||
                            (room.type && room.type.toLowerCase().includes(searchLower))
                        );
                    }
                    
                    // Apply type filter
                    if (this.typeFilter !== 'all') {
                        filtered = filtered.filter(room => room.type === this.typeFilter);
                    }
                    
                    // Apply status filter
                    if (this.statusFilter !== 'all') {
                        filtered = filtered.filter(room => {
                            if (this.statusFilter === 'active') return room.isActive;
                            if (this.statusFilter === 'inactive') return !room.isActive;
                            return true;
                        });
                    }
                    
                    // Apply sorting
                    filtered.sort((a, b) => {
                        let aVal = a[this.sortField];
                        let bVal = b[this.sortField];
                        
                        // Handle null/undefined values
                        if (aVal === null || aVal === undefined) aVal = '';
                        if (bVal === null || bVal === undefined) bVal = '';
                        
                        // Convert to lowercase for string comparison
                        if (typeof aVal === 'string') aVal = aVal.toLowerCase();
                        if (typeof bVal === 'string') bVal = bVal.toLowerCase();
                        
                        if (aVal < bVal) return this.sortDirection === 'asc' ? -1 : 1;
                        if (aVal > bVal) return this.sortDirection === 'asc' ? 1 : -1;
                        return 0;
                    });
                    
                    this.filteredData = filtered;
                    this.totalFiltered = filtered.length;
                    this.currentPage = 1;
                    this.updatePagination();
                },
                
                updatePagination() {
                    this.totalPages = Math.ceil(this.totalFiltered / this.perPage) || 1;
                    const start = (this.currentPage - 1) * this.perPage;
                    const end = start + this.perPage;
                    this.paginatedData = this.filteredData.slice(start, end);
                    
                    this.startEntry = this.totalFiltered > 0 ? start + 1 : 0;
                    this.endEntry = Math.min(end, this.totalFiltered);
                },
                
                sortBy(field) {
                    if (this.sortField === field) {
                        this.sortDirection = this.sortDirection === 'asc' ? 'desc' : 'asc';
                    } else {
                        this.sortField = field;
                        this.sortDirection = 'asc';
                    }
                    this.filterData();
                },
                
                changePerPage() {
                    this.currentPage = 1;
                    this.updatePagination();
                },
                
                prevPage() {
                    if (this.currentPage > 1) {
                        this.currentPage--;
                        this.updatePagination();
                    }
                },
                
                nextPage() {
                    if (this.currentPage < this.totalPages) {
                        this.currentPage++;
                        this.updatePagination();
                    }
                },
                
                goToPage(page) {
                    if (page !== '...' && page >= 1 && page <= this.totalPages) {
                        this.currentPage = page;
                        this.updatePagination();
                    }
                },
                
                get displayedPages() {
                    const pages = [];
                    const maxVisible = 7;
                    
                    if (this.totalPages <= maxVisible) {
                        for (let i = 1; i <= this.totalPages; i++) {
                            pages.push(i);
                        }
                    } else {
                        pages.push(1);
                        
                        let start = Math.max(2, this.currentPage - 1);
                        let end = Math.min(this.totalPages - 1, this.currentPage + 1);
                        
                        if (this.currentPage <= 3) {
                            end = 5;
                        }
                        if (this.currentPage >= this.totalPages - 2) {
                            start = this.totalPages - 4;
                        }
                        
                        if (start > 2) pages.push('...');
                        
                        for (let i = start; i <= end; i++) {
                            pages.push(i);
                        }
                        
                        if (end < this.totalPages - 1) pages.push('...');
                        
                        pages.push(this.totalPages);
                    }
                    
                    return pages;
                },
                
                clearFilters() {
                    this.search = '';
                    this.typeFilter = 'all';
                    this.statusFilter = 'all';
                    this.filterData();
                },
                
                confirmAction(event, action, room) {
                    const message = action === 'activate' 
                        ? `Are you sure you want to activate ${room.name} (${room.code})?`
                        : `Are you sure you want to deactivate ${room.name} (${room.code})?`;
                    
                    if (confirm(message)) {
                        event.target.submit();
                    }
                }
            };
        }
    </script>
