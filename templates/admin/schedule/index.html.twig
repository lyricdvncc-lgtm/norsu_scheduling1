                                <a href="{{ path('app_schedule_edit', {id: schedule.id}) }}" 
                                   class="ml-4 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors inline-flex items-center flex-shrink-0">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                    Edit
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-12">
                    <svg class="w-20 h-20 text-green-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <p class="text-gray-600 text-lg font-medium">No conflicts found</p>
                    <p class="text-gray-500 text-sm mt-2">All schedules are properly configured</p>
                </div>
            {% endif %}
        </div>
        
        <!-- Modal Footer -->
        <div class="bg-gray-50 px-6 py-4 flex items-center justify-end space-x-3 border-t">
            <button onclick="closeConflictsModal()" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-lg font-medium transition-colors">
                Close
            </button>
        </div>
    </div>
</div>

<script>
    function showConflictsModal() {
        const conflictCount = {{ conflictedCount }};
        if (conflictCount > 0) {
            const modal = document.getElementById('conflictsModal');
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            document.body.style.overflow = 'hidden';
        }
    }

    function closeConflictsModal() {
        const modal = document.getElementById('conflictsModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        document.body.style.overflow = '';
    }

    // Close modal on ESC key
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            closeConflictsModal();
        }
    });

    // Close modal when clicking outside
    document.getElementById('conflictsModal')?.addEventListener('click', function(event) {
        if (event.target === this) {
            closeConflictsModal();
        }
    });
</script>

{% endblock %}
