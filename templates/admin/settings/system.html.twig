{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('semesterChangeForm');
    const academicYearSelect = document.getElementById('academic_year');
    const semesterSelect = document.getElementById('semester');
    const previewButton = document.getElementById('previewButton');
    const applyButton = document.getElementById('applyButton');
    const warningMessage = document.getElementById('warningMessage');
    const warningContent = document.getElementById('warningContent');
    const confirmModal = document.getElementById('confirmModal');
    const confirmButton = document.getElementById('confirmButton');
    const cancelButton = document.getElementById('cancelButton');
    const confirmMessage = document.getElementById('confirmMessage');
    const semesterDatesSection = document.getElementById('semesterDatesSection');

    // All 3 semester date inputs
    const semesterDateInputs = {
        '1st': { start: document.getElementById('semester_1st_start'), end: document.getElementById('semester_1st_end') },
        '2nd': { start: document.getElementById('semester_2nd_start'), end: document.getElementById('semester_2nd_end') },
        'Summer': { start: document.getElementById('semester_summer_start'), end: document.getElementById('semester_summer_end') },
    };

    // Cache for loaded semester dates per academic year
    let semesterDatesCache = {};

    // Track the server-side active year ID so autoSuggest only fires for different years
    const activeYearId = '{{ active_year ? active_year.id : '' }}';
    let isInitialLoad = true;

    // Load current schedule count
    function loadScheduleCount() {
        fetch('{{ path('admin_get_semester_info') }}')
            .then(response => response.json())
            .then(data => {
                document.getElementById('currentScheduleCount').textContent = data.schedule_count || 0;
            })
            .catch(error => {
                console.error('Error loading schedule count:', error);
                document.getElementById('currentScheduleCount').textContent = '--';
            });
    }

    loadScheduleCount();

    // Show/hide semester dates section and load saved dates for ALL semesters
    function updateSemesterDatesVisibility() {
        const yearId = academicYearSelect.value;

        if (yearId) {
            semesterDatesSection.classList.remove('hidden');
            loadAllSemesterDates(yearId);
        } else {
            semesterDatesSection.classList.add('hidden');
            clearAllSemesterDates();
        }
    }

    // Clear all date inputs
    function clearAllSemesterDates() {
        for (const sem of ['1st', '2nd', 'Summer']) {
            semesterDateInputs[sem].start.value = '';
            semesterDateInputs[sem].end.value = '';
        }
    }

    // Load saved semester dates for all 3 semesters via AJAX
    function loadAllSemesterDates(yearId) {
        if (semesterDatesCache[yearId]) {
            applyAllSemesterDates(semesterDatesCache[yearId]);
            return;
        }

        fetch(`{{ path('admin_get_semester_dates', {yearId: '__YEAR_ID__'}) }}`.replace('__YEAR_ID__', yearId))
            .then(response => response.json())
            .then(data => {
                if (data.success && data.dates) {
                    semesterDatesCache[yearId] = data.dates;
                    applyAllSemesterDates(data.dates);
                }
            })
            .catch(error => {
                console.error('Error loading semester dates:', error);
            });
    }

    // Populate all 3 semester date input pairs and auto-suggest the right semester
    function applyAllSemesterDates(dates) {
        for (const sem of ['1st', '2nd', 'Summer']) {
            if (dates[sem]) {
                semesterDateInputs[sem].start.value = dates[sem].start || '';
                semesterDateInputs[sem].end.value = dates[sem].end || '';
            } else {
                semesterDateInputs[sem].start.value = '';
                semesterDateInputs[sem].end.value = '';
            }
        }

        // Only auto-suggest semester when the user changes to a DIFFERENT academic year.
        // On initial page load the server already selects the correct active semester.
        const selectedYearId = academicYearSelect.value;
        if (!isInitialLoad || selectedYearId !== activeYearId) {
            autoSuggestSemester(dates);
        }
        isInitialLoad = false;

        // Show/hide clear buttons based on which semesters have dates
        updateClearButtonVisibility();
    }

    // Determine which semester should be active based on today's date and the configured dates
    function autoSuggestSemester(dates) {
        // Only auto-suggest if the user hasn't manually picked a semester yet
        // (if the dropdown still matches the server-side active semester, suggest intelligently)
        const today = new Date();
        today.setHours(0, 0, 0, 0);
        const semesterOrder = ['1st', '2nd', 'Summer'];

        // 1) Try to find a semester whose date range contains today
        for (const sem of semesterOrder) {
            if (dates[sem] && dates[sem].start && dates[sem].end) {
                const start = new Date(dates[sem].start + 'T00:00:00');
                const end = new Date(dates[sem].end + 'T23:59:59');
                if (today >= start && today <= end) {
                    semesterSelect.value = sem;
                    return;
                }
            }
        }

        // 2) If no semester contains today, pick the next upcoming one
        for (const sem of semesterOrder) {
            if (dates[sem] && dates[sem].start) {
                const start = new Date(dates[sem].start + 'T00:00:00');
                if (today < start) {
                    semesterSelect.value = sem;
                    return;
                }
            }
        }

        // 3) Fallback: if all semesters have ended, keep whatever is selected (or default to 1st)
        if (!semesterSelect.value) {
            semesterSelect.value = '1st';
        }
    }

    // Collect all semester dates from the inputs
    function collectAllSemesterDates() {
        const allDates = {};
        for (const sem of ['1st', '2nd', 'Summer']) {
            const start = semesterDateInputs[sem].start.value;
            const end = semesterDateInputs[sem].end.value;
            if (start || end) {
                allDates[sem] = { start: start || null, end: end || null };
            }
        }
        return allDates;
    }

    // Validate that semester dates follow the correct sequence: 1st < 2nd < Summer
    function validateDateSequence() {
        const warningEl = document.getElementById('dateSequenceWarning');
        const warningTextEl = document.getElementById('dateSequenceWarningText');
        const errors = [];

        const allDates = collectAllSemesterDates();
        const semPairs = [
            { first: '1st', second: '2nd', firstLabel: '1st Semester', secondLabel: '2nd Semester' },
            { first: '2nd', second: 'Summer', firstLabel: '2nd Semester', secondLabel: 'Summer' },
        ];

        for (const pair of semPairs) {
            const firstDates = allDates[pair.first];
            const secondDates = allDates[pair.second];

            if (firstDates && secondDates && firstDates.end && secondDates.start) {
                const firstEnd = new Date(firstDates.end + 'T23:59:59');
                const secondStart = new Date(secondDates.start + 'T00:00:00');
                if (secondStart <= firstEnd) {
                    errors.push(`${pair.secondLabel} start (${secondDates.start}) must be after ${pair.firstLabel} end (${firstDates.end})`);
                }
            }
        }

        // Also check individual start < end
        for (const sem of ['1st', '2nd', 'Summer']) {
            const d = allDates[sem];
            if (d && d.start && d.end) {
                if (new Date(d.start) >= new Date(d.end)) {
                    const label = sem === 'Summer' ? 'Summer' : sem + ' Semester';
                    errors.push(`${label}: start date must be before end date`);
                }
            }
        }

        if (errors.length > 0) {
            warningTextEl.innerHTML = errors.join('<br>');
            warningEl.classList.remove('hidden');
            return false;
        } else {
            warningEl.classList.add('hidden');
            return true;
        }
    }

    // Add real-time validation on any date input change + toggle clear button styling
    function updateClearButtonVisibility() {
        for (const sem of ['1st', '2nd', 'Summer']) {
            const btn = document.querySelector('[data-clear-semester="' + sem + '"]');
            const hasValue = semesterDateInputs[sem].start.value || semesterDateInputs[sem].end.value;
            if (btn) {
                if (hasValue) {
                    btn.classList.remove('text-gray-400', 'cursor-not-allowed');
                    btn.classList.add('text-red-500', 'hover:text-red-700', 'hover:bg-red-50', 'cursor-pointer');
                    btn.disabled = false;
                } else {
                    btn.classList.add('text-gray-400', 'cursor-not-allowed');
                    btn.classList.remove('text-red-500', 'hover:text-red-700', 'hover:bg-red-50', 'cursor-pointer');
                    btn.disabled = true;
                }
            }
        }
    }

    for (const sem of ['1st', '2nd', 'Summer']) {
        semesterDateInputs[sem].start.addEventListener('change', function() { validateDateSequence(); updateClearButtonVisibility(); });
        semesterDateInputs[sem].end.addEventListener('change', function() { validateDateSequence(); updateClearButtonVisibility(); });
    }

    // Clear semester dates handler â€” use event delegation on the form for reliability
    document.getElementById('semesterChangeForm').addEventListener('click', function(e) {
        var btn = e.target.closest('.clear-semester-btn');
        if (!btn || btn.disabled) return;

        var sem = btn.getAttribute('data-clear-semester');
        var yearId = academicYearSelect.value;
        if (!yearId || !sem) return;

        var label = sem === 'Summer' ? 'Summer' : sem + ' Semester';
        if (!confirm('Clear dates for ' + label + '? This will remove the saved dates from the database.')) {
            return;
        }

        btn.disabled = true;
        btn.innerHTML = '<svg class="inline animate-spin h-3.5 w-3.5 mr-0.5" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Clearing...';

        fetch('{{ path('admin_clear_semester_dates') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify({ academic_year_id: yearId, semester: sem })
        })
        .then(function(r) { return r.json(); })
        .then(function(data) {
            if (data.success) {
                semesterDateInputs[sem].start.value = '';
                semesterDateInputs[sem].end.value = '';
                delete semesterDatesCache[yearId];
                updateClearButtonVisibility();
                validateDateSequence();
                showNotification(label + ' dates cleared', 'success');
                setTimeout(function() { window.location.href = '{{ path('admin_system_settings') }}'; }, 1500);
            } else {
                showNotification(data.message || 'Failed to clear dates', 'error');
                btn.disabled = false;
                btn.innerHTML = '<svg class="inline h-3.5 w-3.5 mr-0.5 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg> Clear';
            }
        })
        .catch(function(err) {
            showNotification('An error occurred: ' + err.message, 'error');
            btn.disabled = false;
            btn.innerHTML = '<svg class="inline h-3.5 w-3.5 mr-0.5 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg> Clear';
        });
    });

    // Listen to year dropdown change (loads all semester dates)
    academicYearSelect.addEventListener('change', function() {
        updateSemesterDatesVisibility();
    });

    // Initialize date visibility on page load
    updateSemesterDatesVisibility();

    // Preview button handler
    previewButton.addEventListener('click', function() {
        const yearId = academicYearSelect.value;
        const semester = semesterSelect.value;

        if (!yearId || !semester) {
            showNotification('Please select both academic year and semester', 'error');
            return;
        }

        const yearText = academicYearSelect.options[academicYearSelect.selectedIndex].text;
        const semesterText = semester + ' Semester';
        const allDates = collectAllSemesterDates();

        let dateInfo = '';
        let hasAnyDates = false;
        for (const sem of ['1st', '2nd', 'Summer']) {
            if (allDates[sem] && allDates[sem].start && allDates[sem].end) {
                const startFormatted = new Date(allDates[sem].start + 'T00:00:00').toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                const endFormatted = new Date(allDates[sem].end + 'T00:00:00').toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                dateInfo += `<li>${sem} Semester: ${startFormatted} â€” ${endFormatted}</li>`;
                hasAnyDates = true;
            }
        }
        if (hasAnyDates) {
            dateInfo += `<li>Auto-transition will chain through semesters with dates set</li>`;
        } else {
            dateInfo = `<li class="text-yellow-600">No semester dates set â€” auto-transition will be disabled</li>`;
        }

        warningContent.innerHTML = `
            <p>You are about to change the active semester to:</p>
            <p class="font-semibold mt-2">${yearText} | ${semesterText}</p>
            <p class="mt-2">This will affect:</p>
            <ul class="list-disc list-inside mt-1 space-y-1">
                <li>All schedule viewing and creation</li>
                <li>Faculty load assignments</li>
                <li>Room availability displays</li>
                ${dateInfo}
            </ul>
        `;
        warningMessage.classList.remove('hidden');
    });

    // Form submit handler
    form.addEventListener('submit', function(e) {
        e.preventDefault();

        const yearId = academicYearSelect.value;
        const semester = semesterSelect.value;

        if (!yearId || !semester) {
            showNotification('Please select both academic year and semester', 'error');
            return;
        }

        // Validate date sequence (1st < 2nd < Summer)
        if (!validateDateSequence()) {
            showNotification('Please fix the date sequence errors before applying', 'error');
            return;
        }

        const yearText = academicYearSelect.options[academicYearSelect.selectedIndex].text;
        const semesterText = semester + ' Semester';

        // Count how many semesters have dates configured
        const allDates = collectAllSemesterDates();
        const configuredCount = Object.keys(allDates).filter(s => allDates[s] && allDates[s].start && allDates[s].end).length;
        let dateMessage = configuredCount > 0 ? ` (${configuredCount} semester date(s) configured)` : '';

        confirmMessage.textContent = `Are you sure you want to change the active semester to ${yearText} | ${semesterText}${dateMessage}?`;
        confirmModal.classList.remove('hidden');
    });

    // Confirm button handler
    confirmButton.addEventListener('click', function() {
        const yearId = academicYearSelect.value;
        const semester = semesterSelect.value;
        const allDates = collectAllSemesterDates();

        applyButton.disabled = true;
        applyButton.innerHTML = `
            <svg class="inline-block animate-spin h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            Applying...
        `;

        const payload = {
            academic_year_id: yearId,
            semester: semester,
            all_semester_dates: allDates
        };

        fetch('{{ path('admin_set_active_semester') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(payload)
        })
        .then(response => response.json())
        .then(data => {
            confirmModal.classList.add('hidden');
            
            if (data.success) {
                showNotification('Active semester updated successfully!', 'success');
                // Clear cache so dates reload on next visit
                semesterDatesCache = {};
                setTimeout(() => {
                    window.location.href = '{{ path('admin_system_settings') }}';
                }, 1500);
            } else {
                showNotification(data.message || 'Failed to update active semester', 'error');
                applyButton.disabled = false;
                applyButton.innerHTML = `
                    <svg class="inline-block h-5 w-5 mr-2 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Apply Changes
                `;
            }
        })
        .catch(error => {
            confirmModal.classList.add('hidden');
            showNotification('An error occurred. Please try again.', 'error');
            applyButton.disabled = false;
            applyButton.innerHTML = `
                <svg class="inline-block h-5 w-5 mr-2 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Apply Changes
            `;
        });
    });

    // Cancel button handler
    cancelButton.addEventListener('click', function() {
        confirmModal.classList.add('hidden');
    });

    // Close modal on background click
    confirmModal.addEventListener('click', function(e) {
        if (e.target === confirmModal) {
            confirmModal.classList.add('hidden');
        }
    });

    // Notification function
    function showNotification(message, type = 'info') {
        const colors = {
            success: 'bg-green-500',
            error: 'bg-red-500',
            info: 'bg-blue-500'
        };

        const notification = document.createElement('div');
        notification.className = `fixed top-4 right-4 ${colors[type]} text-white px-6 py-3 rounded-lg shadow-lg z-50 transform transition-all duration-300`;
        notification.textContent = message;
        document.body.appendChild(notification);

        setTimeout(() => {
            notification.style.opacity = '0';
            setTimeout(() => notification.remove(), 300);
        }, 3000);
    }
});
</script>
