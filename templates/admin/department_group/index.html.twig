{% extends 'admin/base.html.twig' %}

{% block title %}Department Groups{% endblock %}

{% block main_content %}
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div class="flex-1 min-w-0">
                <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">
                    Department Groups
                </h1>
                <p class="mt-2 text-sm text-gray-500">
                    Manage department clusters for shared faculty resources
                </p>
            </div>
            <div class="mt-5 flex lg:mt-0 lg:ml-4">
                <button onclick="openCreateGroupModal()" 
                        class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Create Group
                </button>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">Total Groups</p>
                    <p class="text-2xl font-bold text-gray-900">{{ groups|length }}</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">Grouped Departments</p>
                    {% set groupedCount = 0 %}
                    {% for group in groups %}{% set groupedCount = groupedCount + group.departments|length %}{% endfor %}
                    <p class="text-2xl font-bold text-gray-900">{{ groupedCount }}</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">Ungrouped</p>
                    <p class="text-2xl font-bold text-gray-900">{{ ungroupedDepartments|length }}</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">Total Departments</p>
                    <p class="text-2xl font-bold text-gray-900">{{ groupedCount + ungroupedDepartments|length }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Info Banner -->
    <div class="mb-8 bg-blue-50 border border-blue-200 rounded-2xl p-4">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-blue-800">What are Department Groups?</h3>
                <p class="mt-1 text-sm text-blue-700">
                    Department Groups allow you to cluster related departments (e.g., IT & Computer Science) so they can share faculty members. 
                    When viewing faculty loading for any department in a group, you'll see faculty from all departments in that group.
                </p>
            </div>
        </div>
    </div>

    <!-- Department Groups Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        {% for group in groups %}
            <div class="bg-white rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-shadow duration-200 overflow-hidden">
                <!-- Group Header -->
                <div class="p-6 border-b border-gray-200">
                    <div class="flex items-start justify-between mb-3">
                        <div class="flex-1">
                            <div class="flex items-center gap-3 mb-2">
                                <div class="w-4 h-4 rounded-full shadow-sm ring-2 ring-white" style="background-color: {{ group.color|default('#6366f1') }};"></div>
                                <h3 class="text-lg font-semibold text-gray-900">{{ group.name }}</h3>
                            </div>
                            {% if group.description %}
                                <p class="text-sm text-gray-600">{{ group.description }}</p>
                            {% endif %}
                        </div>
                        <div class="flex gap-2">
                            <button onclick="openEditGroupModal({{ group.id }}, '{{ group.name|e('js') }}', '{{ (group.description ?? '')|e('js') }}', '{{ group.color|default('#6366f1') }}')"
                                    class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-md transition-colors"
                                    title="Edit group">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                            </button>
                            <button onclick="deleteGroup({{ group.id }}, '{{ group.name|e('js') }}')" 
                                    class="p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-md transition-colors"
                                    title="Delete group">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Departments in Group -->
                <div class="p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h4 class="text-sm font-medium text-gray-700">Departments ({{ group.departments|length }})</h4>
                        <button onclick="openAssignDepartmentModal({{ group.id }}, '{{ group.name }}')" 
                                class="text-sm text-indigo-600 hover:text-indigo-700 font-medium">
                            + Add Department
                        </button>
                    </div>

                    {% if group.departments is empty %}
                        <p class="text-sm text-gray-500 italic py-4 text-center">No departments assigned yet</p>
                    {% else %}
                        <div class="space-y-2">
                            {% for department in group.departments %}
                                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-md flex items-center justify-center text-white font-semibold text-xs" 
                                             style="background-color: {{ group.color|default('#6366f1') }};">
                                            {{ department.code|slice(0, 2)|upper }}
                                        </div>
                                        <div>
                                            <p class="text-sm font-medium text-gray-900">{{ department.name }}</p>
                                            <p class="text-xs text-gray-500">{{ department.code }}</p>
                                        </div>
                                    </div>
                                    <button onclick="unassignDepartment({{ department.id }}, '{{ department.name|e('js') }}', {{ group.id }})" 
                                            class="p-1.5 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-md transition-colors"
                                            title="Remove from group">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                        </svg>
                                    </button>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="col-span-full">
                <div class="bg-white rounded-2xl border-2 border-dashed border-gray-300 p-12 text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                    <h3 class="text-base font-medium text-gray-900 mb-2">No Department Groups Yet</h3>
                    <p class="text-sm text-gray-600 mb-4">Create your first department group to start sharing faculty across departments.</p>
                    <button onclick="openCreateGroupModal()" 
                            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        Create First Group
                    </button>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Ungrouped Departments Section -->
    {% if ungroupedDepartments is not empty %}
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-6">
            <h3 class="text-base font-semibold text-gray-900 mb-4">
                Ungrouped Departments 
                <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    {{ ungroupedDepartments|length }}
                </span>
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-3">
                {% for department in ungroupedDepartments %}
                    <div class="p-3 bg-gray-50 hover:bg-gray-100 border border-gray-200 rounded-lg transition-colors">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 bg-gray-300 rounded-md flex items-center justify-center text-gray-700 font-semibold text-xs">
                                {{ department.code|slice(0, 2)|upper }}
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-medium text-gray-900 truncate">{{ department.name }}</p>
                                <p class="text-xs text-gray-500">{{ department.code }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="mt-4 flex items-start gap-2 text-sm text-gray-600 bg-gray-50 rounded-lg p-3">
                <svg class="h-5 w-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <p>These departments don't belong to any group and will only show their own faculty members.</p>
            </div>
        </div>
    {% endif %}

    <!-- Create/Edit Group Modal -->
    <div id="groupModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
        <div class="flex items-center justify-center min-h-screen p-4">
            <div class="relative bg-white rounded-2xl shadow-xl max-w-lg w-full">
                <div class="px-6 py-4 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-900" id="modalTitle">Create Department Group</h3>
                        <button onclick="closeGroupModal()" class="text-gray-400 hover:text-gray-600 transition">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <form id="groupForm" onsubmit="saveGroup(event)">
                    <div class="px-6 py-4 space-y-4">
                        <input type="hidden" id="groupId" value="">
                        
                        <!-- Group Name -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">
                                Group Name <span class="text-red-500">*</span>
                            </label>
                            <input type="text" id="groupName" required
                                   placeholder="e.g., Technology Cluster"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                        </div>

                        <!-- Description -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                            <textarea id="groupDescription" rows="3"
                                      placeholder="Brief description of this group"
                                      class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                        </div>

                        <!-- Color Picker -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Group Color</label>
                            <input type="hidden" id="groupColor" value="#6366f1">
                            <div class="flex gap-2 flex-wrap" id="colorPicker">
                                {% set colors = ['#6366f1', '#8b5cf6', '#ec4899', '#f43f5e', '#ef4444', '#f97316', '#f59e0b', '#84cc16', '#10b981', '#14b8a6', '#06b6d4', '#3b82f6'] %}
                                {% for color in colors %}
                                    <div class="w-8 h-8 rounded-md border-2 cursor-pointer hover:scale-110 transition-all color-swatch{% if loop.first %} ring-2 ring-offset-2 border-gray-400{% else %} border-transparent{% endif %}" 
                                         style="background-color: {{ color }};{% if loop.first %} --tw-ring-color: {{ color }};{% endif %}"
                                         data-color="{{ color }}"
                                         onclick="selectColor(this, '{{ color }}')"></div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                    <!-- Modal Footer -->
                    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex gap-3">
                        <button type="button" onclick="closeGroupModal()" 
                                class="flex-1 px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Cancel
                        </button>
                        <button type="submit" 
                                class="flex-1 px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Save Group
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Assign Department Modal -->
    <div id="assignDepartmentModal" class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
        <div class="flex items-center justify-center min-h-screen p-4">
            <div class="relative bg-white rounded-2xl shadow-xl max-w-lg w-full">
                <div class="px-6 py-4 border-b border-gray-200">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">Assign Department</h3>
                            <p class="text-sm text-gray-600 mt-1">to <span id="assignGroupName" class="font-medium text-indigo-600"></span></p>
                        </div>
                        <button onclick="closeAssignDepartmentModal()" class="text-gray-400 hover:text-gray-600 transition">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <input type="hidden" id="assignToGroupId" value="">
                
                <div class="px-6 py-4">
                    <label class="block text-sm font-medium text-gray-700 mb-3">Select Department</label>
                    <div class="space-y-2 max-h-96 overflow-y-auto">
                        {% for department in ungroupedDepartments %}
                            <button type="button" onclick="assignDepartmentToGroup({{ department.id }})"
                                    class="w-full flex items-center gap-3 p-3 bg-gray-50 hover:bg-indigo-50 border border-gray-200 hover:border-indigo-300 rounded-md transition-colors text-left">
                                <div class="w-10 h-10 bg-indigo-100 rounded-md flex items-center justify-center text-indigo-600 font-semibold text-xs">
                                    {{ department.code|slice(0, 2)|upper }}
                                </div>
                                <div class="flex-1">
                                    <p class="text-sm font-medium text-gray-900">{{ department.name }}</p>
                                    <p class="text-xs text-gray-500">{{ department.code }}</p>
                                </div>
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                </svg>
                            </button>
                        {% else %}
                            <p class="text-sm text-gray-500 text-center py-8">No ungrouped departments available</p>
                        {% endfor %}
                    </div>
                </div>

                <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
                    <button type="button" onclick="closeAssignDepartmentModal()" 
                            class="w-full px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Color selector functionality
        function selectColor(el, color) {
            // Remove selection from all swatches
            document.querySelectorAll('.color-swatch').forEach(swatch => {
                swatch.classList.remove('ring-2', 'ring-offset-2', 'border-gray-400');
                swatch.classList.add('border-transparent');
            });
            // Highlight selected
            el.classList.remove('border-transparent');
            el.classList.add('ring-2', 'ring-offset-2', 'border-gray-400');
            el.style.setProperty('--tw-ring-color', color);
            // Store value
            document.getElementById('groupColor').value = color;
        }

        function setColorPickerValue(color) {
            document.getElementById('groupColor').value = color;
            document.querySelectorAll('.color-swatch').forEach(swatch => {
                swatch.classList.remove('ring-2', 'ring-offset-2', 'border-gray-400');
                swatch.classList.add('border-transparent');
                if (swatch.dataset.color === color) {
                    swatch.classList.remove('border-transparent');
                    swatch.classList.add('ring-2', 'ring-offset-2', 'border-gray-400');
                    swatch.style.setProperty('--tw-ring-color', color);
                }
            });
        }

        function openCreateGroupModal() {
            document.getElementById('modalTitle').textContent = 'Create Department Group';
            document.getElementById('groupId').value = '';
            document.getElementById('groupName').value = '';
            document.getElementById('groupDescription').value = '';
            setColorPickerValue('#6366f1');
            
            document.getElementById('groupModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function openEditGroupModal(id, name, description, color) {
            document.getElementById('modalTitle').textContent = 'Edit Department Group';
            document.getElementById('groupId').value = id;
            document.getElementById('groupName').value = name;
            document.getElementById('groupDescription').value = description;
            setColorPickerValue(color || '#6366f1');
            
            document.getElementById('groupModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeGroupModal() {
            document.getElementById('groupModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        async function saveGroup(event) {
            event.preventDefault();
            
            const groupId = document.getElementById('groupId').value;
            const name = document.getElementById('groupName').value;
            const description = document.getElementById('groupDescription').value;
            const color = document.getElementById('groupColor').value;

            const url = groupId 
                ? `/admin/department-groups/${groupId}/update`
                : '/admin/department-groups/create';

            try {
                const response = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, description, color })
                });

                const result = await response.json();

                if (result.success) {
                    closeGroupModal();
                    window.location.href = '{{ path("admin_department_groups") }}';
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while saving the group');
            }
        }

        async function deleteGroup(id, name) {
            if (!confirm(`Are you sure you want to delete the group "${name}"? Departments will be unassigned but not deleted.`)) {
                return;
            }

            try {
                const response = await fetch(`/admin/department-groups/${id}/delete`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const result = await response.json();

                if (result.success) {
                    window.location.href = '{{ path("admin_department_groups") }}';
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting the group');
            }
        }

        function openAssignDepartmentModal(groupId, groupName) {
            document.getElementById('assignToGroupId').value = groupId;
            document.getElementById('assignGroupName').textContent = groupName;
            document.getElementById('assignDepartmentModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeAssignDepartmentModal() {
            document.getElementById('assignDepartmentModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        async function assignDepartmentToGroup(departmentId) {
            const groupId = document.getElementById('assignToGroupId').value;

            try {
                const response = await fetch(`/admin/department-groups/${groupId}/assign-department`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ department_id: departmentId })
                });

                const result = await response.json();

                if (result.success) {
                    closeAssignDepartmentModal();
                    window.location.href = '{{ path("admin_department_groups") }}';
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while assigning the department');
            }
        }

        async function unassignDepartment(departmentId, departmentName, groupId) {
            if (!confirm(`Remove "${departmentName}" from this group?`)) {
                return;
            }

            try {
                const response = await fetch('/admin/department-groups/unassign-department', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ department_id: departmentId })
                });

                const result = await response.json();

                if (result.success) {
                    window.location.href = '{{ path("admin_department_groups") }}';
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while removing the department');
            }
        }
    </script>
