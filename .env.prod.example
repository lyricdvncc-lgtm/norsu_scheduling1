# Production Environment Configuration Template
# Copy this file to .env.prod and update with your actual values

###> symfony/framework-bundle ###
APP_ENV=prod
APP_DEBUG=0
# Generate a new secret with: php -r "echo bin2hex(random_bytes(32));"
APP_SECRET=your_secure_random_secret_here
###< symfony/framework-bundle ###

###> symfony/routing ###
DEFAULT_URI=https://your-production-domain.com
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# Use a dedicated database user with limited privileges
DATABASE_URL="mysql://db_user:db_password@db_host:3306/db_name?serverVersion=8.0&charset=utf8mb4"
###< doctrine/doctrine-bundle ###

###> symfony/messenger ###
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
###< symfony/messenger ###

###> symfony/mailer ###
MAILER_DSN=smtp://user:pass@smtp.example.com:465
###< symfony/mailer ###

###> redis (optional) ###
# REDIS_URL=redis://localhost:6379
###< redis ###
