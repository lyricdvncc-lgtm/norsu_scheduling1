{% extends 'department_head/base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
<style>
    @media print {
        /* Hide elements not needed in print */
        nav, .no-print, button, form, .print-hide,
        [onclick*="toggleDetails"], 
        td button {
            display: none !important;
        }
        
        /* Page setup */
        @page {
            size: A4;
            margin: 1.5cm 1cm;
        }
        
        body {
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
            font-size: 10pt;
        }
        
        /* Print header */
        .print-header {
            display: block !important;
            text-align: center;
            border-bottom: 3px solid #1e40af;
            padding-bottom: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .print-header h1 {
            font-size: 24pt;
            font-weight: bold;
            color: #1e40af;
            margin-bottom: 0.25rem;
        }
        
        .print-header .subtitle {
            font-size: 11pt;
            color: #4b5563;
        }
        
        .print-header .meta {
            font-size: 9pt;
            color: #6b7280;
            margin-top: 0.5rem;
        }
        
        /* Statistics cards in print */
        .print-stats {
            display: grid !important;
            grid-template-columns: repeat(5, 1fr);
            gap: 0.5rem;
            margin-bottom: 1rem;
            page-break-inside: avoid;
        }
        
        .print-stats .stat-card {
            border: 1px solid #e5e7eb;
            padding: 0.5rem;
            text-align: center;
            background: #f9fafb;
        }
        
        .print-stats .stat-label {
            font-size: 8pt;
            color: #6b7280;
            font-weight: 600;
        }
        
        .print-stats .stat-value {
            font-size: 18pt;
            font-weight: bold;
            color: #111827;
        }
        
        .print-stats .stat-unit {
            font-size: 7pt;
            color: #9ca3af;
        }
        
        /* Main content adjustments */
        .p-6, .p-8 {
            padding: 0 !important;
        }
        
        .mb-8 {
            margin-bottom: 1rem !important;
        }
        
        /* Table styling for print */
        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 9pt;
            page-break-inside: auto;
        }
        
        thead {
            display: table-header-group;
            background: #1e40af !important;
            color: white !important;
        }
        
        thead th {
            background: #1e40af !important;
            color: white !important;
            font-weight: 600;
            padding: 0.5rem 0.25rem;
            text-align: left;
            border: 1px solid #1e3a8a;
        }
        
        tbody tr {
            page-break-inside: avoid;
            border-bottom: 1px solid #e5e7eb;
        }
        
        tbody td {
            padding: 0.4rem 0.25rem;
            border: 1px solid #e5e7eb;
        }
        
        /* Status badges */
        .status-badge {
            display: inline-block;
            padding: 0.15rem 0.4rem;
            border-radius: 0.25rem;
            font-size: 8pt;
            font-weight: 600;
        }
        
        .status-overloaded {
            background: #fee2e2 !important;
            color: #991b1b !important;
        }
        
        .status-optimal {
            background: #d1fae5 !important;
            color: #065f46 !important;
        }
        
        .status-underloaded {
            background: #fef3c7 !important;
            color: #92400e !important;
        }
        
        /* Progress bar for print */
        .progress-bar {
            width: 80px;
            height: 8px;
            background: #e5e7eb;
            border-radius: 4px;
            overflow: hidden;
            display: inline-block;
        }
        
        .progress-fill {
            height: 100%;
            background: currentColor;
        }
        
        /* Expanded details for print */
        .faculty-details {
            display: block !important;
            page-break-inside: avoid;
        }
        
        .details-table {
            margin-top: 0.5rem;
            margin-left: 1rem;
            width: calc(100% - 1rem);
            font-size: 8pt;
            background: #f9fafb;
        }
        
        .details-table thead {
            background: #6b7280 !important;
        }
        
        .details-table td {
            padding: 0.25rem 0.3rem;
        }
        
        /* Footer for print */
        .print-footer {
            display: block !important;
            margin-top: 2rem;
            padding-top: 1rem;
            border-top: 1px solid #e5e7eb;
            font-size: 8pt;
            color: #6b7280;
            text-align: center;
        }
        
        /* Hide/show specific elements */
        .screen-only {
            display: none !important;
        }
        
        .print-only {
            display: block !important;
        }
        
        /* Faculty member rows */
        .faculty-row {
            page-break-inside: avoid;
        }
    }
    
    /* Default hide print-only elements */
    .print-only,
    .print-header,
    .print-stats {
        display: none !important;
    }
</style>
{% endblock %}

{% block main_content %}
<div class="p-6 lg:p-8">
    <!-- Page Header -->
    <div class="mb-8 screen-only">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Faculty Workload Report</h1>
                <p class="mt-2 text-sm text-gray-600">
                    Detailed analysis of faculty teaching loads
                    {% if selected_academic_year and selected_semester %}
                        <span class="ml-2 inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            {% for year in academic_years %}
                                {% if year.id == selected_academic_year %}
                                    {{ year.year }} | {{ selected_semester }} Semester
                                {% endif %}
                            {% endfor %}
                        </span>
                    {% endif %}
                </p>
            </div>
            <div class="flex space-x-3">
                <button onclick="window.print()" class="inline-flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors duration-200">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
                    </svg>
                    Print Report
                </button>
                <button class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors duration-200">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    Export to Excel
                </button>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8 screen-only print-hide">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Filters</h2>
        <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Academic Year</label>
                <select name="academic_year" class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" onchange="this.form.submit()">
                    <option value="">All Academic Years</option>
                    {% for year in academic_years %}
                        <option value="{{ year.id }}" {% if selected_academic_year is not empty and selected_academic_year == (year.id ~ '') %}selected{% endif %}>
                            {{ year.year }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Semester</label>
                <select name="semester" class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" onchange="this.form.submit()">
                    <option value="">All Semesters</option>
                    <option value="1st" {% if selected_semester == '1st' %}selected{% endif %}>1st Semester</option>
                    <option value="2nd" {% if selected_semester == '2nd' %}selected{% endif %}>2nd Semester</option>
                    <option value="summer" {% if selected_semester == 'summer' %}selected{% endif %}>Summer</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                <select name="status" class="block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" onchange="this.form.submit()">
                    <option value="all" {% if status_filter == 'all' %}selected{% endif %}>All Status</option>
                    <option value="overloaded" {% if status_filter == 'overloaded' %}selected{% endif %}>Overloaded (>21 units)</option>
                    <option value="optimal" {% if status_filter == 'optimal' %}selected{% endif %}>Optimal (15-21 units)</option>
                    <option value="underloaded" {% if status_filter == 'underloaded' %}selected{% endif %}>Underloaded (<15 units)</option>
                </select>
            </div>

            <div class="flex items-end">
                <a href="{{ path('department_head_reports_faculty_workload') }}" class="w-full inline-flex justify-center items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors duration-200">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                    Reset
                </a>
            </div>
        </form>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8 screen-only">
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total Faculty</p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">{{ statistics.total_faculty }}</p>
                </div>
                <div class="bg-blue-100 rounded-full p-3">
                    <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Overloaded</p>
                    <p class="text-3xl font-bold text-red-600 mt-2">{{ statistics.overloaded }}</p>
                </div>
                <div class="bg-red-100 rounded-full p-3">
                    <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Optimal</p>
                    <p class="text-3xl font-bold text-green-600 mt-2">{{ statistics.optimal }}</p>
                </div>
                <div class="bg-green-100 rounded-full p-3">
                    <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Underloaded</p>
                    <p class="text-3xl font-bold text-yellow-600 mt-2">{{ statistics.underloaded }}</p>
                </div>
                <div class="bg-yellow-100 rounded-full p-3">
                    <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Average Load</p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">{{ statistics.average_load }}</p>
                    <p class="text-xs text-gray-500 mt-1">units</p>
                </div>
                <div class="bg-purple-100 rounded-full p-3">
                    <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Faculty Workload Table -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <h2 class="text-lg font-semibold text-gray-900">Faculty Workload Details</h2>
        </div>

        {% if workload_data|length > 0 %}
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Faculty Member</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Courses</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Units</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Load Progress</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for faculty in workload_data %}
                            <tr class="hover:bg-gray-50 faculty-row">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white font-medium screen-only">
                                            {{ faculty.name|split(' ')|map(n => n|slice(0,1))|join }}
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900">{{ faculty.name }}</div>
                                            <div class="text-sm text-gray-500">{{ faculty.email }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">{{ faculty.course_count }} course{{ faculty.course_count != 1 ? 's' : '' }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-bold text-gray-900">{{ faculty.units }} / {{ statistics.standard_load }}</div>
                                    <div class="text-xs text-gray-500">units</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="w-full bg-gray-200 rounded-full h-2.5 screen-only">
                                        {% set percentage = faculty.percentage > 100 ? 100 : faculty.percentage %}
                                        <div class="h-2.5 rounded-full {% if faculty.status == 'overloaded' %}bg-red-600{% elseif faculty.status == 'underloaded' %}bg-yellow-500{% else %}bg-green-600{% endif %}" style="width: {{ percentage }}%"></div>
                                    </div>
                                    <div class="text-xs text-gray-500 mt-1">{{ faculty.percentage|number_format(1) }}%</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {% if faculty.status == 'overloaded' %}
                                        <span class="status-badge status-overloaded px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                            <svg class="w-4 h-4 mr-1 screen-only" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                            </svg>
                                            Overloaded
                                        </span>
                                    {% elseif faculty.status == 'underloaded' %}
                                        <span class="status-badge status-underloaded px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                            <svg class="w-4 h-4 mr-1 screen-only" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                            Underloaded
                                        </span>
                                    {% else %}
                                        <span class="status-badge status-optimal px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                            <svg class="w-4 h-4 mr-1 screen-only" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                            Optimal
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <button onclick="toggleDetails({{ faculty.id }})" class="text-blue-600 hover:text-blue-900 screen-only">
                                        View Details
                                    </button>
                                </td>
                            </tr>
                            <!-- Details Row (Hidden by default on screen, shown in print) -->
                            <tr id="details-{{ faculty.id }}" class="hidden faculty-details">
                                <td colspan="6" class="px-6 py-4">
                                    <div class="bg-white rounded-lg p-4 border border-gray-200">
                                        <h4 class="text-sm font-semibold text-gray-900 mb-3">Course Assignments ({{ faculty.course_count }})</h4>
                                        {% if faculty.courses|length > 0 %}
                                            <div class="overflow-x-auto">
                                                <table class="min-w-full divide-y divide-gray-200 details-table">
                                                    <thead class="bg-gray-50">
                                                        <tr>
                                                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Course Code</th>
                                                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Course Name</th>
                                                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Units</th>
                                                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Schedule</th>
                                                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Room</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="bg-white divide-y divide-gray-200">
                                                        {% for course in faculty.courses %}
                                                            <tr>
                                                                <td class="px-4 py-2 text-sm font-medium text-gray-900">{{ course.code }}</td>
                                                                <td class="px-4 py-2 text-sm text-gray-900">{{ course.name }}</td>
                                                                <td class="px-4 py-2 text-sm text-gray-900">{{ course.units }}</td>
                                                                <td class="px-4 py-2 text-sm text-gray-500">
                                                                    {% if course.schedule %}
                                                                        {{ course.schedule }}
                                                                    {% elseif course.dayPattern %}
                                                                        {{ course.dayPattern }} {{ course.startTime|date('g:i A') }}-{{ course.endTime|date('g:i A') }}
                                                                    {% else %}
                                                                        <span class="text-gray-400">Not scheduled</span>
                                                                    {% endif %}
                                                                </td>
                                                                <td class="px-4 py-2 text-sm text-gray-500">
                                                                    {% if course.room %}
                                                                        {{ course.room }}
                                                                    {% else %}
                                                                        <span class="text-gray-400">TBA</span>
                                                                    {% endif %}
                                                                </td>
                                                            </tr>
                                                        {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        {% else %}
                                            <p class="text-sm text-gray-500">No courses assigned</p>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="px-6 py-12 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No workload data</h3>
                <p class="mt-1 text-sm text-gray-500">No faculty members found with the selected filters.</p>
            </div>
        {% endif %}
    </div>

    <!-- Print Footer (Only visible when printing) -->
    <div class="print-footer print-only">
        <div style="margin-bottom: 0.5rem;">
            <strong>{{ dashboard_data.department.name }}</strong> - Faculty Workload Report
        </div>
        <div>
            Generated on {{ "now"|date("F d, Y") }} at {{ "now"|date("g:i A") }}
            {% if app.user %}
                by {{ app.user.firstName }} {{ app.user.lastName }}
            {% endif %}
        </div>
        <div style="margin-top: 0.5rem; font-size: 7pt; color: #9ca3af;">
            This document is confidential and intended for internal use only.
        </div>
    </div>
</div>

<script>
function toggleDetails(facultyId) {
    const detailsRow = document.getElementById('details-' + facultyId);
    if (detailsRow.classList.contains('hidden')) {
        // Hide all other details first
        document.querySelectorAll('[id^="details-"]').forEach(row => {
            row.classList.add('hidden');
        });
        detailsRow.classList.remove('hidden');
    } else {
        detailsRow.classList.add('hidden');
    }
}

// Automatically expand all details when printing
window.addEventListener('beforeprint', function() {
    document.querySelectorAll('[id^="details-"]').forEach(row => {
        row.classList.remove('hidden');
    });
});

// Optionally collapse them back after printing (for screen view)
window.addEventListener('afterprint', function() {
    document.querySelectorAll('[id^="details-"]').forEach(row => {
        row.classList.add('hidden');
    });
});
</script>
{% endblock %}
