{% extends 'department_head/base.html.twig' %}

{% block main_content %}
<div class="p-6 lg:p-8">
    <!-- Page Header -->
    <div class="page-header flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
        <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Add New Faculty Member</h1>
            <p class="text-gray-600 mt-1 text-sm sm:text-base">Create a new faculty member account for your department</p>
        </div>
        <a href="{{ path('department_head_faculty') }}" 
           class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200 shadow-sm">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Faculty List
        </a>
    </div>

    <!-- Flash Messages -->
    {% if form.vars.errors|length > 0 %}
        <div class="mb-6 bg-yellow-50 border border-yellow-200 text-yellow-800 px-4 py-3 rounded-lg" role="alert">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium">Form Validation Errors:</h3>
                    <ul class="mt-1 text-sm">
                        {% for error in form.vars.errors %}
                            <li>â€¢ {{ error.message }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Form Container -->
    <div class="max-w-4xl mx-auto pb-16">
        <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden mb-8">
            {{ form_start(form, {'attr': {'class': 'space-y-0', 'id': 'createFacultyForm'}}) }}
            
            <!-- Form Content -->
            <div class="px-6 py-6">
                <!-- Basic Information Section -->
                <div class="mb-8">
                    <h2 class="text-lg font-semibold text-gray-900 mb-6 flex items-center">
                        <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center mr-3">
                            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                        </div>
                        <div>
                            <div class="text-lg font-semibold">Basic Information</div>
                            <div class="text-sm text-gray-500">Personal details and contact information</div>
                        </div>
                    </h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Username -->
                        <div>
                            {{ form_label(form.username, 'Username', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            <div class="relative">
                                {{ form_widget(form.username, {'attr': {'class': 'w-full px-3 py-2 pr-10 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200', 'placeholder': 'Enter username', 'required': true, 'autocomplete': 'username'}}) }}
                            </div>
                            {{ form_errors(form.username) }}
                        </div>

                        <!-- Email -->
                        <div>
                            {{ form_label(form.email, 'Email Address', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            <div class="relative">
                                {{ form_widget(form.email, {'attr': {'class': 'w-full px-3 py-2 pr-10 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200', 'placeholder': 'faculty@norsu.edu.ph', 'required': true, 'autocomplete': 'email'}}) }}
                            </div>
                            {{ form_errors(form.email) }}
                        </div>

                        <!-- First Name -->
                        <div>
                            {{ form_label(form.firstName, 'First Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            <div class="relative">
                                {{ form_widget(form.firstName, {'attr': {'class': 'w-full px-3 py-2 pr-10 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200', 'placeholder': 'Enter first name', 'required': true}}) }}
                            </div>
                            {{ form_errors(form.firstName) }}
                        </div>

                        <!-- Middle Name -->
                        <div>
                            {{ form_label(form.middleName, 'Middle Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            <div class="relative">
                                {{ form_widget(form.middleName, {'attr': {'class': 'w-full px-3 py-2 pr-10 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200', 'placeholder': 'Enter middle name (optional)'}}) }}
                            </div>
                            {{ form_errors(form.middleName) }}
                        </div>
                    </div>

                    <div class="grid grid-cols-1 gap-6 mt-6">
                        <!-- Last Name -->
                        <div>
                            {{ form_label(form.lastName, 'Last Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            <div class="relative">
                                {{ form_widget(form.lastName, {'attr': {'class': 'w-full px-3 py-2 pr-10 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200', 'placeholder': 'Enter last name', 'required': true}}) }}
                            </div>
                            {{ form_errors(form.lastName) }}
                        </div>
                    </div>
                </div>

                <!-- Professional Information Section -->
                <div class="mb-8">
                    <h2 class="text-lg font-semibold text-gray-900 mb-6 flex items-center">
                        <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center mr-3">
                            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        <div>
                            <div class="text-lg font-semibold">Professional Information</div>
                            <div class="text-sm text-gray-500">Work-related details and identification</div>
                        </div>
                    </h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Employee ID -->
                        <div>
                            {{ form_label(form.employeeId, 'Employee ID', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            <div class="relative">
                                {{ form_widget(form.employeeId, {'attr': {'class': 'w-full px-3 py-2 pr-10 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200', 'placeholder': 'Enter employee ID', 'required': true, 'autocomplete': 'off'}}) }}
                            </div>
                            {{ form_errors(form.employeeId) }}
                        </div>

                        <!-- Position/Title -->
                        <div>
                            {{ form_label(form.position, 'Position/Title', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            <div class="relative">
                                {{ form_widget(form.position, {'attr': {'class': 'w-full px-3 py-2 pr-10 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200 bg-white'}}) }}
                            </div>
                            {{ form_errors(form.position) }}
                        </div>
                    </div>

                    <!-- Address (Full Width) -->
                    <div class="mt-6">
                        {{ form_label(form.address, 'Address', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        <div class="relative">
                            {{ form_widget(form.address, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200', 'placeholder': 'Enter address', 'rows': '3'}}) }}
                        </div>
                        {{ form_errors(form.address) }}
                    </div>
                </div>

                <!-- Security Settings Section -->
                <div class="mb-8">
                    <h2 class="text-lg font-semibold text-gray-900 mb-6 flex items-center">
                        <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center mr-3">
                            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                            </svg>
                        </div>
                        <div>
                            <div class="text-lg font-semibold">Security Settings</div>
                            <div class="text-sm text-gray-500">Login credentials and password security</div>
                        </div>
                    </h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Password -->
                        <div>
                            {{ form_label(form.plainPassword.first, 'Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            <div class="relative">
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200', 'placeholder': 'Enter password', 'required': true, 'autocomplete': 'new-password'}}) }}
                            </div>
                            {{ form_errors(form.plainPassword.first) }}
                            <p class="mt-1.5 text-xs text-gray-500">Minimum 6 characters</p>
                        </div>

                        <!-- Confirm Password -->
                        <div>
                            {{ form_label(form.plainPassword.second, 'Confirm Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            <div class="relative">
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200', 'placeholder': 'Confirm password', 'required': true, 'autocomplete': 'new-password'}}) }}
                            </div>
                            {{ form_errors(form.plainPassword.second) }}
                        </div>
                    </div>
                    {{ form_errors(form.plainPassword) }}
                </div>

                <!-- Account Settings Section -->
                <div class="mb-8">
                    <h2 class="text-lg font-semibold text-gray-900 mb-6 flex items-center">
                        <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center mr-3">
                            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                        </div>
                        <div>
                            <div class="text-lg font-semibold">Account Settings</div>
                            <div class="text-sm text-gray-500">Account status and department assignment</div>
                        </div>
                    </h2>
                    
                    <div class="bg-gray-50 rounded-lg p-4 mb-4">
                        <div class="flex items-start">
                            <div class="flex items-center h-5">
                                {{ form_widget(form.isActive, {'attr': {'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded transition-colors duration-200'}}) }}
                            </div>
                            <div class="ml-3 text-sm">
                                {{ form_label(form.isActive, 'Active User', {'label_attr': {'class': 'font-medium text-gray-700'}}) }}
                                <p class="text-gray-500 mt-1">When enabled, the faculty member can sign in and access the system. Disable to temporarily restrict access without deleting the account.</p>
                            </div>
                        </div>
                        {{ form_errors(form.isActive) }}
                    </div>

                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <div class="ml-3 flex-1">
                                <p class="text-sm text-blue-700">
                                    <strong>Note:</strong> This faculty member will be automatically assigned to your department: 
                                    <strong>{{ dashboard_data.department.name }}</strong>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Hidden fields that are auto-assigned #}
            <div class="hidden">
                {{ form_widget(form.role) }}
                {{ form_widget(form.college) }}
                {{ form_widget(form.department) }}
            </div>

            <!-- Form Actions -->
            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex flex-col sm:flex-row justify-between items-stretch sm:items-center gap-3">
                <a href="{{ path('department_head_faculty') }}" 
                   class="order-2 sm:order-1 w-full sm:w-auto inline-flex justify-center items-center px-6 py-3 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                    Cancel
                </a>
                <button type="submit" 
                        class="order-1 sm:order-2 w-full sm:w-auto inline-flex justify-center items-center px-8 py-3 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200 shadow-sm">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Create Faculty Member
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
