{% extends 'admin/base.html.twig' %}

{% block title %}Schedule Management{% endblock %}

{% block main_content %}
<div class="max-w-7xl mx-auto">
    <!-- Department Indicator Badge -->
    {% if selectedDepartment %}
    <div class="mb-4 bg-gradient-to-r from-blue-50 to-indigo-50 border-l-4 border-blue-600 rounded-lg p-4 shadow-sm">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                    </svg>
                </div>
                <div>
                    <p class="text-xs font-medium text-blue-600 uppercase tracking-wide">Currently Managing</p>
                    <h2 class="text-lg font-bold text-gray-900">{{ selectedDepartment.name }}</h2>
                    {% if selectedDepartment.college %}
                    <p class="text-sm text-gray-600">{{ selectedDepartment.college.name }}</p>
                    {% endif %}
                </div>
            </div>
            <button onclick="openDepartmentModal()" class="inline-flex items-center px-3 py-2 border border-blue-300 rounded-lg text-sm font-medium text-blue-700 bg-white hover:bg-blue-50 transition">
                <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                </svg>
                Change Department
            </button>
        </div>
    </div>
    {% endif %}

    <!-- Page Header -->
    <div class="mb-6">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div class="flex-1 min-w-0">
                <h1 class="text-3xl font-bold text-gray-900">
                    Schedule Management
                </h1>
                <p class="mt-2 text-sm text-gray-600">
                    Manage class schedules, view timetables, and handle scheduling conflicts
                </p>
            </div>
            <div class="mt-4 lg:mt-0 flex gap-3">
                {% if selectedDepartment %}
                <a href="{{ path('app_schedule_new', {department: selectedDepartment.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
                    <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Create Schedule
                </a>
                {% else %}
                <button onclick="openDepartmentModal()" class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
                    <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Create Schedule
                </button>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        {% set activeCount = 0 %}
        {% set conflictedCount = 0 %}
        {% set uniqueRooms = [] %}
        {% set uniqueFaculty = [] %}
        {% for schedule in schedules %}
            {% if schedule.status == 'active' %}
                {% set activeCount = activeCount + 1 %}
            {% endif %}
            {% if schedule.isConflicted %}
                {% set conflictedCount = conflictedCount + 1 %}
            {% endif %}
            {% if schedule.room and schedule.room.id not in uniqueRooms %}
                {% set uniqueRooms = uniqueRooms|merge([schedule.room.id]) %}
            {% endif %}
            {% if schedule.faculty and schedule.faculty.id not in uniqueFaculty %}
                {% set uniqueFaculty = uniqueFaculty|merge([schedule.faculty.id]) %}
            {% endif %}
        {% endfor %}

        <!-- Total Schedules -->
        <div class="bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition-all duration-300">
            <div class="flex items-start justify-between">
                <div class="flex-1">
                    <p class="text-sm text-gray-600 mb-2">Total Schedules</p>
                    <p class="text-4xl font-bold text-gray-900">{{ schedules|length }}</p>
                    <p class="text-sm text-gray-500 mt-2">
                        {% if selectedDepartment %}
                            {{ selectedDepartment.name }}
                        {% else %}
                            All departments
                        {% endif %}
                    </p>
                </div>
                <div class="bg-blue-500 rounded-xl p-4 flex items-center justify-center">
                    <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Active Schedules -->
        <div class="bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition-all duration-300">
            <div class="flex items-start justify-between">
                <div class="flex-1">
                    <p class="text-sm text-gray-600 mb-2">Active</p>
                    <p class="text-4xl font-bold text-gray-900">{{ activeCount }}</p>
                    <p class="text-sm text-green-600 mt-2 flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        Currently in use
                    </p>
                </div>
                <div class="bg-green-600 rounded-xl p-4 flex items-center justify-center">
                    <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Conflicts -->
        <div class="bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition-all duration-300">
            <div class="flex items-start justify-between">
                <div class="flex-1">
                    <p class="text-sm text-gray-600 mb-2">Conflicts</p>
                    <p class="text-4xl font-bold text-gray-900">{{ conflictedCount }}</p>
                    <p class="text-sm text-orange-600 mt-2 flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                        Need attention
                    </p>
                </div>
                <div class="bg-orange-500 rounded-xl p-4 flex items-center justify-center">
                    <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Rooms Utilized -->
        <div class="bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition-all duration-300">
            <div class="flex items-start justify-between">
                <div class="flex-1">
                    <p class="text-sm text-gray-600 mb-2">Rooms Used</p>
                    <p class="text-4xl font-bold text-gray-900">{{ uniqueRooms|length }}</p>
                    <p class="text-sm text-red-600 mt-2 flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                        {{ uniqueFaculty|length }} faculty assigned
                    </p>
                </div>
                <div class="bg-red-600 rounded-xl p-4 flex items-center justify-center">
                    <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Advanced Filters with Search -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6 mb-6">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                <svg class="h-5 w-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
                </svg>
                Filter & Search
            </h3>
            <button onclick="clearFilters()" class="text-sm text-gray-600 hover:text-blue-600 transition">
                <svg class="h-4 w-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
                Clear All
            </button>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
            <!-- Search -->
            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <svg class="h-4 w-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    Search
                </label>
                <input type="text" id="search-filter" oninput="filterSchedules()" 
                       placeholder="Search subject, faculty, room..." 
                       class="block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition">
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Room</label>
                <select id="room-filter" onchange="filterSchedules()" class="block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition">
                    <option value="">All Rooms</option>
                    {% for room in rooms %}
                        <option value="{{ room.id }}">{{ room.building }} - {{ room.name }}</option>
                    {% endfor %}
                </select>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Day Pattern</label>
                <select id="day-filter" onchange="filterSchedules()" class="block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition">
                    <option value="">All Days</option>
                    <option value="MWF">MWF</option>
                    <option value="TTH">TTH</option>
                    <option value="MTWTHF">MTWTHF</option>
                    <option value="SAT">Saturday</option>
                </select>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                <select id="status-filter" onchange="filterSchedules()" class="block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 transition">
                    <option value="">All Status</option>
                    <option value="pending">Pending</option>
                    <option value="approved">Approved</option>
                    <option value="rejected">Rejected</option>
                </select>
            </div>
        </div>
        
        <!-- Results Counter -->
        <div class="mt-4 pt-4 border-t border-gray-200">
            <p class="text-sm text-gray-600">
                Showing <span id="visible-count" class="font-semibold text-gray-900">{{ schedules|length }}</span> 
                of <span class="font-semibold text-gray-900">{{ schedules|length }}</span> schedules
            </p>
        </div>
    </div>

    <!-- Schedules Display -->
    {% if schedules is empty %}
        <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-12 text-center">
            <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
                <svg class="h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">No schedules found</h3>
            <p class="text-gray-500 mb-6">Create your first schedule to get started with managing class timetables.</p>
            {% if selectedDepartment %}
                <a href="{{ path('app_schedule_new', {department: selectedDepartment.id}) }}" 
                   class="inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 transition">
                    <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Create Schedule
                </a>
            {% else %}
                <button onclick="openDepartmentModal()" 
                        class="inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 transition">
                    <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Create Schedule
                </button>
            {% endif %}
        </div>
    {% else %}
        <!-- Schedule Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4" id="schedules-container">
            {% for schedule in schedules %}
                <div class="schedule-card bg-white rounded-lg shadow-md hover:shadow-lg border border-gray-200 overflow-hidden transition-all duration-200 transform hover:-translate-y-0.5"
                     data-room="{{ schedule.room.id }}"
                     data-day="{{ schedule.dayPattern }}"
                     data-status="{{ schedule.status }}"
                     data-subject="{{ schedule.subject.code }}">
                    
                    <!-- Card Header with Status -->
                    <div class="bg-gradient-to-r {% if schedule.status == 'approved' %}from-blue-500 to-blue-600{% elseif schedule.status == 'pending' %}from-blue-500 to-blue-600{% else %}from-blue-500 to-blue-600{% endif %} p-3">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-2">
                                <div class="bg-white bg-opacity-20 rounded-lg p-1.5">
                                    <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                                    </svg>
                                </div>
                                <div class="text-white">
                                    <h3 class="font-bold text-base">{{ schedule.subject.code }}</h3>
                                    <p class="text-xs opacity-90">{{ schedule.subject.title|slice(0, 35) }}{% if schedule.subject.title|length > 35 %}...{% endif %}</p>
                                </div>
                            </div>
                            <div class="flex items-center gap-1">
                                {% if schedule.isConflicted %}
                                    <span class="bg-red-100 text-red-800 px-2 py-0.5 rounded-full text-xs font-semibold mr-1" title="Schedule has conflicts">
                                        ⚠️ Conflict
                                    </span>
                                {% endif %}
                                <span class="bg-white bg-opacity-90 px-2 py-0.5 rounded-full text-xs font-semibold {% if schedule.status == 'approved' %}text-green-700{% elseif schedule.status == 'pending' %}text-yellow-700{% else %}text-red-700{% endif %}">
                                    {{ schedule.status|upper }}
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="p-3">
                        <!-- Section Info -->
                        <div class="flex items-center gap-3 mb-3 pb-2 border-b border-gray-200">
                            <div class="flex items-center text-xs text-gray-600">
                                <svg class="h-3.5 w-3.5 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                </svg>
                                Section {{ schedule.section }}
                            </div>
                            <div class="flex items-center text-xs text-gray-600">
                                <svg class="h-3.5 w-3.5 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                                Sem {{ schedule.semester }}
                            </div>
                        </div>

                        <!-- Room & Schedule Info -->
                        <div class="space-y-2 mb-3">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                                    <svg class="h-4 w-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                    </svg>
                                </div>
                                <div class="ml-2">
                                    <p class="text-xs text-gray-500">Room</p>
                                    <p class="text-sm font-semibold text-gray-900">{{ schedule.room.building }} - {{ schedule.room.name }}</p>
                                </div>
                            </div>

                            <div class="flex items-center">
                                <div class="flex-shrink-0 w-8 h-8 bg-indigo-100 rounded-lg flex items-center justify-center">
                                    <svg class="h-4 w-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                </div>
                                <div class="ml-2">
                                    <p class="text-xs text-gray-500">Schedule</p>
                                    <p class="text-sm font-semibold text-gray-900">
                                        <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 mr-1.5">
                                            {{ schedule.dayPattern }}
                                        </span>
                                        {{ schedule.startTime|date('h:i A') }} - {{ schedule.endTime|date('h:i A') }}
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="flex items-center justify-end gap-2 pt-2 border-t border-gray-200">
                            <button onclick="showScheduleDetails({{ schedule.id }})" 
                               class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-lg text-xs font-medium text-gray-700 bg-white hover:bg-gray-50 transition">
                                <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                </svg>
                                View
                            </button>
                            <a href="{{ path('app_schedule_edit', {id: schedule.id}) }}" 
                               class="inline-flex items-center px-3 py-2 border border-blue-300 rounded-lg text-xs font-medium text-blue-700 bg-blue-50 hover:bg-blue-100 transition">
                                <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                                Edit
                            </a>
                            <form method="post" action="{{ path('app_schedule_delete', {id: schedule.id}) }}" class="inline m-0" onsubmit="return confirm('Are you sure you want to delete this schedule?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ schedule.id) }}">
                                <button type="submit" class="inline-flex items-center px-3 py-2 border border-red-300 rounded-lg text-xs font-medium text-red-700 bg-red-50 hover:bg-red-100 transition">
                                    <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                    </svg>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                    
                    <!-- Hidden data for modal -->
                    <div id="schedule-data-{{ schedule.id }}" class="hidden"
                         data-code="{{ schedule.subject.code }}"
                         data-title="{{ schedule.subject.title }}"
                         data-section="{{ schedule.section }}"
                         data-semester="{{ schedule.semester }}"
                         data-year="{{ schedule.academicYear.year }}"
                         data-enrolled="{{ schedule.enrolledStudents }}"
                         data-days="{{ schedule.dayPattern }}"
                         data-start="{{ schedule.startTime|date('g:i A') }}"
                         data-end="{{ schedule.endTime|date('g:i A') }}"
                         data-room="{{ schedule.room.building }} - {{ schedule.room.name }}"
                         data-room-type="{{ schedule.room.type }}"
                         data-capacity="{{ schedule.room.capacity }}"
                         data-status="{{ schedule.status }}"
                         data-conflicted="{{ schedule.isConflicted ? 'yes' : 'no' }}"
                         data-notes="{{ schedule.notes|default('') }}"
                         data-created="{{ schedule.createdAt|date('F j, Y g:i A') }}"
                         data-updated="{{ schedule.updatedAt ? schedule.updatedAt|date('F j, Y g:i A') : '' }}">
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<script>
function filterSchedules() {
    const searchFilter = document.getElementById('search-filter').value.toLowerCase();
    const roomFilter = document.getElementById('room-filter').value;
    const dayFilter = document.getElementById('day-filter').value;
    const statusFilter = document.getElementById('status-filter').value;
    
    const cards = document.querySelectorAll('.schedule-card');
    let visibleCount = 0;
    
    cards.forEach(card => {
        const room = card.dataset.room;
        const day = card.dataset.day;
        const status = card.dataset.status;
        const subject = card.dataset.subject.toLowerCase();
        const faculty = card.dataset.faculty.toLowerCase();
        
        const matchesSearch = !searchFilter || subject.includes(searchFilter) || faculty.includes(searchFilter);
        const matchesRoom = !roomFilter || room === roomFilter;
        const matchesDay = !dayFilter || day === dayFilter;
        const matchesStatus = !statusFilter || status === statusFilter;
        
        if (matchesSearch && matchesRoom && matchesDay && matchesStatus) {
            card.style.display = 'block';
            visibleCount++;
        } else {
            card.style.display = 'none';
        }
    });
    
    // Update visible count
    document.getElementById('visible-count').textContent = visibleCount;
}

function clearFilters() {
    document.getElementById('search-filter').value = '';
    document.getElementById('room-filter').value = '';
    document.getElementById('day-filter').value = '';
    document.getElementById('status-filter').value = '';
    filterSchedules();
}

// Modal functions
function showScheduleDetails(scheduleId) {
    const data = document.getElementById('schedule-data-' + scheduleId).dataset;
    const modal = document.getElementById('schedule-modal');
    
    // Populate modal
    document.getElementById('modal-code').textContent = data.code;
    document.getElementById('modal-title').textContent = data.title;
    document.getElementById('modal-section').textContent = data.section;
    document.getElementById('modal-semester').textContent = data.semester;
    document.getElementById('modal-year').textContent = data.year;
    document.getElementById('modal-enrolled').textContent = data.enrolled;
    document.getElementById('modal-days').textContent = data.days;
    document.getElementById('modal-start').textContent = data.start;
    document.getElementById('modal-end').textContent = data.end;
    document.getElementById('modal-room').textContent = data.room;
    document.getElementById('modal-room-type').textContent = data.roomType;
    document.getElementById('modal-capacity').textContent = data.capacity;
    document.getElementById('modal-status').textContent = data.status.toUpperCase();
    document.getElementById('modal-created').textContent = data.created;
    
    // Handle capacity warning
    const capacityWarning = document.getElementById('modal-capacity-warning');
    const enrolled = parseInt(data.enrolled);
    const capacity = parseInt(data.capacity);
    
    if (enrolled > capacity) {
        capacityWarning.textContent = '⚠️ Overcapacity';
        capacityWarning.className = 'text-xs text-red-600 mt-1';
    } else if (enrolled > capacity * 0.9) {
        capacityWarning.textContent = '⚠️ Near capacity';
        capacityWarning.className = 'text-xs text-yellow-600 mt-1';
    } else {
        capacityWarning.textContent = '✓ Available space';
        capacityWarning.className = 'text-xs text-green-600 mt-1';
    }
    
    // Handle status badge color
    const statusBadge = document.getElementById('modal-status');
    if (data.status === 'active') {
        statusBadge.className = 'inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-green-100 text-green-800';
    } else if (data.status === 'pending') {
        statusBadge.className = 'inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-yellow-100 text-yellow-800';
    } else {
        statusBadge.className = 'inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-gray-100 text-gray-800';
    }
    
    // Handle conflicted badge
    const conflictBadge = document.getElementById('modal-conflict-badge');
    if (data.conflicted === 'yes') {
        conflictBadge.classList.remove('hidden');
    } else {
        conflictBadge.classList.add('hidden');
    }
    
    // Handle notes
    const notesSection = document.getElementById('modal-notes-section');
    const notesText = document.getElementById('modal-notes');
    if (data.notes) {
        notesText.textContent = data.notes;
        notesSection.classList.remove('hidden');
    } else {
        notesSection.classList.add('hidden');
    }
    
    // Handle updated time
    const updatedSection = document.getElementById('modal-updated-section');
    const updatedText = document.getElementById('modal-updated');
    if (data.updated) {
        updatedText.textContent = data.updated;
        updatedSection.classList.remove('hidden');
    } else {
        updatedSection.classList.add('hidden');
    }
    
    // Show modal
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
}

function closeModal() {
    const modal = document.getElementById('schedule-modal');
    modal.classList.add('hidden');
    document.body.style.overflow = 'auto';
}

// Close modal on escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        closeModal();
    }
});
</script>

