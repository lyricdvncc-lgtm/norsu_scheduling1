{% extends 'admin/base.html.twig' %}

{% block main_content %}
    <!-- Page Header -->
    <div class="mb-6 lg:mb-8">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div class="flex-1 min-w-0">
                <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900">
                    Welcome back, {{ app.user.firstName }}! 
                    <span class="text-xl sm:text-2xl">ðŸ‘‹</span>
                </h1>
                <div class="mt-2 lg:mt-3 flex flex-col sm:flex-row sm:flex-wrap sm:space-x-6">
                    <div class="mt-2 flex items-center text-sm text-gray-600">
                        <svg class="flex-shrink-0 mr-2 h-4 w-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                        </svg>
                        System Administrator Access
                    </div>
                    <div class="mt-2 flex items-center text-sm text-gray-600">
                        <svg class="flex-shrink-0 mr-2 h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        Last login: {{ 'now'|date('M j, Y g:i A') }}
                    </div>
                    <div class="mt-2 flex items-center text-sm text-gray-600">
                        <svg class="flex-shrink-0 mr-2 h-4 w-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        System Status: All Services Online
                    </div>
                </div>
            </div>
            <div class="mt-4 lg:mt-0 lg:ml-4">
                <a href="{{ path('admin_users_all') }}" class="inline-flex items-center px-4 lg:px-6 py-2 lg:py-3 border border-transparent rounded-lg lg:rounded-xl shadow-sm text-sm font-medium text-white gradient-primary hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200">
                    <svg class="-ml-1 mr-2 h-4 w-4 lg:h-5 lg:w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                    </svg>
                    Manage Users
                </a>
            </div>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 lg:gap-6 mb-6 lg:mb-8">
        <!-- Total Users -->
        <div class="stats-card bg-white rounded-2xl shadow-sm hover:shadow-md p-4 lg:p-6 border border-gray-100 transition-all duration-300">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 lg:w-12 lg:h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
                        <svg class="w-5 h-5 lg:w-6 lg:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-3 lg:ml-4 flex-1 min-w-0">
                    <p class="text-xs lg:text-sm font-medium text-gray-600 truncate">Total Users</p>
                    <p class="text-xl lg:text-2xl font-bold text-gray-900">{{ dashboard_data.total_users ?? '0' }}</p>
                    {% if dashboard_data.growth_percent is defined and dashboard_data.growth_percent != 0 %}
                        <p class="text-xs flex items-center mt-1 {{ dashboard_data.growth_percent > 0 ? 'text-green-600' : 'text-red-600' }}">
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                {% if dashboard_data.growth_percent > 0 %}
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17l5-5 5 5"/>
                                {% else %}
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 7l-5 5 5 5"/>
                                {% endif %}
                            </svg>
                            {{ dashboard_data.growth_percent > 0 ? '+' : '' }}{{ dashboard_data.growth_percent }}% this month
                        </p>
                    {% else %}
                        <p class="text-xs text-gray-500 mt-1">No change this month</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Total Rooms -->
        <div class="stats-card bg-white rounded-2xl shadow-sm hover:shadow-md p-4 lg:p-6 border border-gray-100 transition-all duration-300">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 lg:w-12 lg:h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center">
                        <svg class="w-5 h-5 lg:w-6 lg:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-3 lg:ml-4 flex-1 min-w-0">
                    <p class="text-xs lg:text-sm font-medium text-gray-600 truncate">Total Rooms</p>
                    <p class="text-xl lg:text-2xl font-bold text-gray-900">{{ dashboard_data.total_rooms ?? '0' }}</p>
                    <p class="text-xs text-green-600 flex items-center mt-1">
                        <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
                        {{ dashboard_data.available_rooms ?? '0' }} available
                    </p>
                </div>
            </div>
        </div>

        <!-- Active Users -->
        <div class="stats-card bg-white rounded-2xl shadow-sm hover:shadow-md p-4 lg:p-6 border border-gray-100 transition-all duration-300">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 lg:w-12 lg:h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center">
                        <svg class="w-5 h-5 lg:w-6 lg:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.636 18.364a9 9 0 010-12.728m12.728 0a9 9 0 010 12.728m-9.9-2.829a5 5 0 010-7.07m7.072 0a5 5 0 010 7.07M13 12a1 1 0 11-2 0 1 1 0 012 0z"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-3 lg:ml-4 flex-1 min-w-0">
                    <p class="text-xs lg:text-sm font-medium text-gray-600 truncate">Active Users</p>
                    <p class="text-xl lg:text-2xl font-bold text-gray-900">{{ dashboard_data.active_users ?? '0' }}</p>
                    <p class="text-xs text-blue-600 flex items-center mt-1">
                        <div class="w-2 h-2 bg-blue-500 rounded-full mr-2"></div>
                        Online now
                    </p>
                </div>
            </div>
        </div>

        <!-- System Health -->
        <div class="stats-card bg-white rounded-2xl shadow-sm hover:shadow-md p-4 lg:p-6 border border-gray-100 transition-all duration-300">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 lg:w-12 lg:h-12 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl flex items-center justify-center">
                        <svg class="w-5 h-5 lg:w-6 lg:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-3 lg:ml-4 flex-1 min-w-0">
                    <p class="text-xs lg:text-sm font-medium text-gray-600 truncate">System Health</p>
                    <p class="text-xl lg:text-2xl font-bold text-gray-900">99.9%</p>
                    <p class="text-xs text-green-600 flex items-center mt-1">
                        <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
                        All systems operational
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-8 mb-6 lg:mb-8">
        <!-- Recent Activity -->
        <div class="lg:col-span-2 order-2 lg:order-1">
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-4 lg:p-6">
                <div class="flex items-center justify-between mb-4 lg:mb-6">
                    <h3 class="text-lg font-semibold text-gray-900">Recent Activity</h3>
                    <a href="#" class="text-sm text-blue-600 hover:text-blue-700 font-medium transition-colors">View All</a>
                </div>
                
                <div class="space-y-3 lg:space-y-4" id="recent-activities-container">
                    {% if dashboard_data.recent_activities is defined and dashboard_data.recent_activities|length > 0 %}
                        {% for activity in dashboard_data.recent_activities %}
                            <div class="flex items-start space-x-3 lg:space-x-4 p-3 lg:p-4 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 {{ activity.iconClass }} rounded-full flex items-center justify-center">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            {{ activity.svgIcon|raw }}
                                        </svg>
                                    </div>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-medium text-gray-900">{{ activity.description }}</p>
                                    {% if activity.user %}
                                        <p class="text-xs text-gray-500 truncate">by {{ activity.user.firstName }} {{ activity.user.lastName }}</p>
                                    {% endif %}
                                    <p class="text-xs text-gray-400 mt-1">
                                        {{ activity.createdAt|date('M j, Y g:i A') }}
                                    </p>
                                </div>
                            </div>
                        {% endfor %}
                    {% elseif dashboard_data.recent_users is defined and dashboard_data.recent_users|length > 0 %}
                        {% for user in dashboard_data.recent_users %}
                            <div class="flex items-start space-x-3 lg:space-x-4 p-3 lg:p-4 rounded-lg bg-gray-50">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                                        <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                                        </svg>
                                    </div>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-medium text-gray-900">New user registered</p>
                                    <p class="text-xs text-gray-500 truncate">{{ user.firstName }} {{ user.lastName }} ({{ user.email }})</p>
                                    <p class="text-xs text-gray-400 mt-1">{{ user.createdAt ? user.createdAt|date('M j, Y g:i A') : 'Recently' }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="flex items-start space-x-3 lg:space-x-4 p-3 lg:p-4 rounded-lg bg-gray-50">
                            <div class="flex-shrink-0">
                                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                </div>
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-gray-900">System initialized</p>
                                <p class="text-xs text-gray-500">Smart Scheduling System is ready for use</p>
                                <p class="text-xs text-gray-400 mt-1">Today</p>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Sidebar: Quick Actions & System Status -->
        <div class="space-y-4 lg:space-y-6 order-1 lg:order-2">
            <!-- Quick Actions -->
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-4 lg:p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
                <div class="space-y-2 lg:space-y-3">
                    <a href="{{ path('admin_users_all') }}" class="w-full text-left px-3 lg:px-4 py-2 lg:py-3 rounded-lg border border-gray-200 hover:bg-gray-50 hover:border-gray-300 transition-all duration-200 flex items-center space-x-3">
                        <svg class="w-4 h-4 lg:w-5 lg:h-5 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                        </svg>
                        <span class="text-sm font-medium text-gray-700 truncate">Manage Users</span>
                    </a>
                    <a href="{{ path('admin_colleges') }}" class="w-full text-left px-3 lg:px-4 py-2 lg:py-3 rounded-lg border border-gray-200 hover:bg-gray-50 hover:border-gray-300 transition-all duration-200 flex items-center space-x-3">
                        <svg class="w-4 h-4 lg:w-5 lg:h-5 text-purple-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                        </svg>
                        <span class="text-sm font-medium text-gray-700 truncate">Manage Colleges</span>
                    </a>
                    <a href="{{ path('admin_curricula') }}" class="w-full text-left px-3 lg:px-4 py-2 lg:py-3 rounded-lg border border-gray-200 hover:bg-gray-50 hover:border-gray-300 transition-all duration-200 flex items-center space-x-3">
                        <svg class="w-4 h-4 lg:w-5 lg:h-5 text-orange-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        </svg>
                        <span class="text-sm font-medium text-gray-700 truncate">Manage Curricula</span>
                    </a>
                    <a href="{{ path('admin_academic_years') }}" class="w-full text-left px-3 lg:px-4 py-2 lg:py-3 rounded-lg border border-gray-200 hover:bg-gray-50 hover:border-gray-300 transition-all duration-200 flex items-center space-x-3">
                        <svg class="w-4 h-4 lg:w-5 lg:h-5 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <span class="text-sm font-medium text-gray-700 truncate">Academic Years</span>
                    </a>
                    <a href="{{ path('admin_subjects') }}" class="w-full text-left px-3 lg:px-4 py-2 lg:py-3 rounded-lg border border-gray-200 hover:bg-gray-50 hover:border-gray-300 transition-all duration-200 flex items-center space-x-3">
                        <svg class="w-4 h-4 lg:w-5 lg:h-5 text-teal-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        <span class="text-sm font-medium text-gray-700 truncate">Manage Subjects</span>
                    </a>
                    <a href="{{ path('admin_rooms') }}" class="w-full text-left px-3 lg:px-4 py-2 lg:py-3 rounded-lg border border-gray-200 hover:bg-gray-50 hover:border-gray-300 transition-all duration-200 flex items-center space-x-3">
                        <svg class="w-4 h-4 lg:w-5 lg:h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
