{% extends 'admin/base.html.twig' %}

{% block title %}Manage Curriculum Subjects - {{ curriculum.name }}{% endblock %}

{% block main_content %}
    <!-- Unpublished Curriculum Warning Banner -->
    {% if not curriculum.isPublished %}
    <div class="mb-6 bg-yellow-50 border-l-4 border-yellow-400 p-6 rounded-lg shadow-sm">
        <div class="flex items-start">
            <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
            </div>
            <div class="ml-3 flex-1">
                <h3 class="text-lg font-semibold text-yellow-800">
                    ⚠️ This Curriculum is Currently UNPUBLISHED (Draft)
                </h3>
                <div class="mt-2 text-sm text-yellow-700">
                    <p><strong>Important:</strong> This curriculum and its subjects are in DRAFT mode.</p>
                    <ul class="list-disc list-inside mt-2 space-y-1">
                        <li>These subjects will NOT appear in filtered views (e.g., "Published Curricula Only")</li>
                        <li>They are hidden from scheduling and reporting features</li>
                        <li>Students and faculty cannot see these subjects in published lists</li>
                    </ul>
                    <p class="mt-3">
                        <strong>To make these subjects visible:</strong> 
                        <a href="{{ path('admin_curricula_by_department', {departmentId: curriculum.department.id}) }}" 
                           class="underline font-semibold hover:text-yellow-900">
                            Go back to the curriculum list and click the "Publish" button
                        </a>
                    </p>
                </div>
            </div>
            <div class="ml-3">
                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-yellow-400 text-yellow-900 shadow-sm">
                    DRAFT
                </span>
            </div>
        </div>
    </div>
    {% else %}
    <div class="mb-6 bg-green-50 border-l-4 border-green-500 p-4 rounded-lg shadow-sm">
        <div class="flex items-center">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
            <div class="ml-3 flex-1">
                <p class="text-sm font-medium text-green-800">
                    ✓ This curriculum is <strong>PUBLISHED</strong> and active. Subjects are visible in all views.
                </p>
            </div>
            <div class="ml-3">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-green-500 text-white">
                    PUBLISHED
                </span>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Manage Subjects</h1>
                <p class="mt-2 text-sm text-gray-600">{{ curriculum.name }} - {{ curriculum.getDisplayName() }}</p>
            </div>
            <div class="flex space-x-3">
                {% if curriculum.department and curriculum.department.id %}
                    <a href="{{ path('admin_curricula_by_department', {departmentId: curriculum.department.id}) }}" 
                       class="bg-gray-700 text-white px-6 py-3 rounded-lg font-medium hover:bg-gray-800 transition duration-150 shadow-md inline-flex items-center">
                        <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        Back to Department
                    </a>
                {% else %}
                    <a href="{{ path('admin_curricula') }}" 
                       class="bg-gray-700 text-white px-6 py-3 rounded-lg font-medium hover:bg-gray-800 transition duration-150 shadow-md inline-flex items-center">
                        <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        Back to Curricula
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Total Terms -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total Terms</p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">{{ statistics.total_terms }}</p>
                </div>
                <div class="p-3 bg-indigo-50 rounded-lg">
                    <svg class="h-8 w-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Total Subjects -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total Subjects</p>
                    <p class="text-3xl font-bold text-indigo-600 mt-2">{{ statistics.total_subjects }}</p>
                </div>
                <div class="p-3 bg-indigo-50 rounded-lg">
                    <svg class="h-8 w-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Total Units -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total Units</p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">{{ statistics.total_units }}</p>
                </div>
                <div class="p-3 bg-indigo-50 rounded-lg">
                    <svg class="h-8 w-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-8">
        <div class="flex flex-wrap gap-3">
            <button type="button" 
                    onclick="openGenerateTermsModal()"
                    class="inline-flex items-center px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg shadow-sm transition">
                <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Generate Default Terms
            </button>
            
            <button type="button" 
                    onclick="openAddTermModal()"
                    class="inline-flex items-center px-4 py-2.5 bg-white border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 shadow-sm transition">
                <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Add Custom Term
            </button>

            <button type="button" 
                    onclick="openDirectAddSubjectModal()"
                    class="inline-flex items-center px-4 py-2.5 bg-white border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 shadow-sm transition">
                <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
                Add Subject
            </button>

            <button type="button" 
                    onclick="openUploadCurriculumModal()"
                    class="inline-flex items-center px-4 py-2.5 bg-white border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 shadow-sm transition">
                <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                </svg>
                Upload Curriculum
            </button>
        </div>
    </div>

    <!-- Terms List -->
    <div class="space-y-6">
        {% if terms is empty %}
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <h3 class="mt-2 text-lg font-medium text-gray-900">No terms created yet</h3>
                <p class="mt-1 text-sm text-gray-500">Get started by generating default terms or adding a custom term.</p>
            </div>
        {% else %}
            {% for term in terms %}
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden term-card" data-semester="{{ term.semester }}">
                    <!-- Term Header -->
                    <div class="border-l-4 border-l-indigo-400 bg-gray-50 border-b px-6 py-4">
                        <div class="flex items-center justify-between">
                            <div>
                                <h3 class="text-base font-semibold text-gray-900">{{ term.getDisplayName() }}</h3>
                                <p class="text-gray-500 text-sm mt-0.5">
                                    {{ term.curriculumSubjects|length }} subject(s) &middot; {{ term.getTotalUnits() }} units
                                </p>
                            </div>
                            <div class="flex space-x-2">
                                <button type="button"
                                        onclick="openAddSubjectModal({{ term.id }})"
                                        class="bg-white text-gray-700 border border-gray-300 px-3 py-1.5 rounded-lg text-sm font-medium hover:bg-gray-50 transition shadow-sm">
                                    <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                                    </svg>
                                    Add Subject
                                </button>
                                <form method="POST" action="{{ path('admin_curriculum_terms_delete', {id: term.id}) }}" 
                                      onsubmit="return confirm('Are you sure you want to delete this term and all its subjects?');"
                                      class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_term_' ~ term.id) }}">
                                    <button type="submit"
                                            class="text-red-500 border border-red-200 bg-white px-2 py-1.5 rounded-lg hover:bg-red-50 transition shadow-sm">
                                        <svg class="w-5 h-5 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Subjects Table -->
                    <div class="p-6">
                        {% if term.curriculumSubjects is empty %}
                            <div class="text-center py-8">
                                <svg class="mx-auto h-10 w-10 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                                </svg>
                                <p class="mt-2 text-sm text-gray-500">No subjects added to this term yet.</p>
                                <button type="button"
                                        onclick="openAddSubjectModal({{ term.id }})"
                                        class="mt-3 inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition text-sm">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                                    </svg>
                                    Add Subject
                                </button>
                            </div>
                        {% else %}
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject Title</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Units</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hours</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        {% for curriculumSubject in term.curriculumSubjects %}
                                            {% set subject = curriculumSubject.subject %}
                                            <tr class="hover:bg-gray-50">
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <span class="text-sm font-medium text-gray-900">{{ subject.code }}</span>
                                                </td>
                                                <td class="px-6 py-4">
                                                    <div class="text-sm font-medium text-gray-900">{{ subject.title }}</div>
                                                    {% if subject.description %}
                                                        <div class="text-sm text-gray-500">{{ subject.description|slice(0, 60) }}{% if subject.description|length > 60 %}...{% endif %}</div>
                                                    {% endif %}
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-50 text-indigo-700">
                                                        {{ subject.units }} units
                                                    </span>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                    <div>Lec: {{ subject.lectureHours }}h</div>
                                                    <div>Lab: {{ subject.labHours }}h</div>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    {% if subject.type == 'lecture' %}
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-700">Lecture</span>
                                                    {% elseif subject.type == 'laboratory' %}
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-50 text-emerald-700">Laboratory</span>
                                                    {% else %}
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-violet-50 text-violet-700">Lecture+Lab</span>
                                                    {% endif %}
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                    <form method="POST" 
                                                          action="{{ path('admin_curriculum_subjects_remove', {id: curriculumSubject.id}) }}" 
                                                          onsubmit="return confirm('Remove this subject from the term?');"
                                                          class="inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('remove_subject_' ~ curriculumSubject.id) }}">
                                                        <button type="submit"
                                                                class="text-red-600 hover:text-red-900 p-2 hover:bg-red-50 rounded-lg transition">
                                                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                                            </svg>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>

    <!-- Generate Terms Modal -->
    <div id="generateTermsModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-lg bg-white">
            <div class="mt-3">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Generate Default Terms</h3>
                <form method="POST" action="{{ path('admin_curriculum_terms_generate', {id: curriculum.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('generate_terms_' ~ curriculum.id) }}">
                    
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Number of Years</label>
                        <select name="years" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                            <option value="4">4 Years</option>
                            <option value="5">5 Years</option>
                            <option value="6">6 Years</option>
                        </select>
                        <p class="mt-1 text-sm text-gray-500">This will create 1st Sem, 2nd Sem, and Summer terms for each year.</p>
                    </div>

                    <div class="flex justify-end space-x-3">
                        <button type="button" 
                                onclick="closeGenerateTermsModal()"
                                class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition">
                            Cancel
                        </button>
                        <button type="submit"
                                class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                            Generate Terms
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Add Term Modal -->
    <div id="addTermModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-lg bg-white">
            <div class="mt-3">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Add Custom Term</h3>
                <form method="POST" action="{{ path('admin_curriculum_terms_add', {id: curriculum.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('add_curriculum_term_' ~ curriculum.id) }}">
                    
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Year Level</label>
                        <input type="number" 
                               name="year_level" 
                               min="1" 
                               max="6" 
                               required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                    </div>

                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Semester</label>
                        <select name="semester" 
                                required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                            <option value="1st">1st Semester</option>
                            <option value="2nd">2nd Semester</option>
                            <option value="summer">Summer</option>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Custom Term Name (Optional)</label>
                        <input type="text" 
                               name="term_name" 
                               placeholder="e.g., Special Term"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                    </div>

                    <div class="flex justify-end space-x-3">
                        <button type="button" 
                                onclick="closeAddTermModal()"
                                class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition">
                            Cancel
                        </button>
                        <button type="submit"
                                class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
                            Add Term
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Add Subjects Modal (Modern Design) -->
    <div id="addSubjectModal" class="hidden fixed inset-0 bg-black bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-8 mx-auto p-0 border-0 w-11/12 max-w-6xl shadow-2xl rounded-xl bg-white">
            <!-- Modal Header -->
            <div class="flex items-center justify-between p-6 border-b border-gray-200">
                <h3 class="text-2xl font-bold text-blue-600">Add Subjects</h3>
                <button onclick="closeAddSubjectModal()" class="text-gray-400 hover:text-gray-600 transition">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>

            <!-- Term Selector (shown when no specific term is selected) -->
            <div id="termSelectorContainer" class="hidden p-6 bg-blue-50 border-b border-blue-200">
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    Select Term <span class="text-red-500">*</span>
                </label>
                <select id="termSelector" 
                        onchange="handleTermSelection()"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">-- Select a term --</option>
                    {% for term in terms %}
