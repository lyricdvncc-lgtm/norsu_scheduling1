        document.addEventListener('DOMContentLoaded', function() {
            // User Profile Dropdown
            const dropdownContainer = document.getElementById('userDropdownContainer');
            const dropdownToggle = document.getElementById('userDropdownToggle');
            const dropdownArrow = document.getElementById('userDropdownArrow');
            const dropdownMenu = document.getElementById('userDropdownMenu');
            
            let isDropdownOpen = false;
            
            // Function to show dropdown
            function showDropdown() {
                if (isDropdownOpen) return;
                
                isDropdownOpen = true;
                dropdownMenu.classList.remove('hidden');
                dropdownArrow.classList.add('rotate-180');
                
                // Trigger animation
                setTimeout(() => {
                    dropdownMenu.classList.remove('opacity-0', 'scale-95');
                    dropdownMenu.classList.add('opacity-100', 'scale-100');
                }, 10);
            }
            
            // Function to hide dropdown
            function hideDropdown() {
                if (!isDropdownOpen) return;
                
                isDropdownOpen = false;
                dropdownMenu.classList.remove('opacity-100', 'scale-100');
                dropdownMenu.classList.add('opacity-0', 'scale-95');
                dropdownArrow.classList.remove('rotate-180');
                
                // Hide after animation
                setTimeout(() => {
                    dropdownMenu.classList.add('hidden');
                }, 200);
            }
            
            // Function to toggle dropdown
            function toggleDropdown(event) {
                event.preventDefault();
                event.stopPropagation();
                
                if (isDropdownOpen) {
                    hideDropdown();
                } else {
                    showDropdown();
                }
            }
            
            // Add click handlers ONLY to the specific dropdown elements
            if (dropdownToggle) {
                dropdownToggle.addEventListener('click', toggleDropdown);
            }
            
            if (dropdownArrow) {
                dropdownArrow.addEventListener('click', toggleDropdown);
            }
            
            // Close dropdown when clicking outside - but ONLY if dropdown is open
            document.addEventListener('click', function(event) {
                if (!isDropdownOpen) return;
                
                // Check if click is inside the dropdown container
                if (!dropdownContainer.contains(event.target)) {
                    hideDropdown();
                }
            });
        });

        // Department Selection Modal Functions
        // Use var instead of let to avoid redeclaration errors on navigation
        var departmentsData = departmentsData || []; // Store departments globally for filtering
        var collegesData = collegesData || []; // Store colleges globally

        function openDepartmentModal() {
            document.getElementById('departmentModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
            
            // Load colleges and departments via AJAX
            loadModalData();
        }

        async function loadModalData() {
            try {
                // Load both colleges and departments in parallel
                const [collegesResponse, departmentsResponse] = await Promise.all([
                    fetch('/admin/schedule/api/colleges'),
                    fetch('/admin/schedule/api/departments')
                ]);
                
                if (!collegesResponse.ok || !departmentsResponse.ok) {
                    throw new Error('Failed to load data');
                }
                
                collegesData = await collegesResponse.json();
                departmentsData = await departmentsResponse.json();
                
                renderColleges(collegesData);
                renderDepartments(departmentsData);
            } catch (error) {
                console.error('Error loading modal data:', error);
                const grid = document.getElementById('departments-grid');
                grid.innerHTML = `
                    <div class="col-span-2 text-center py-8 text-red-500">
                        <svg class="mx-auto h-12 w-12 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <p class="mt-2">Failed to load data</p>
                        <button onclick="loadModalData()" class="mt-2 text-blue-600 hover:underline">Try Again</button>
                    </div>
                `;
            }
        }

        function renderColleges(colleges) {
            const select = document.getElementById('modal-college-select');
            
            // Keep the "All Colleges" option and add real colleges
            select.innerHTML = '<option value="">All Colleges</option>';
            
            colleges.forEach(college => {
                const option = document.createElement('option');
                option.value = college.id;
                option.textContent = `${college.code} - ${college.name}`;
                select.appendChild(option);
            });
        }

        async function loadDepartments() {
            const grid = document.getElementById('departments-grid');
            
            try {
                const response = await fetch('/admin/schedule/api/departments');
                if (!response.ok) throw new Error('Failed to load departments');
                
                departmentsData = await response.json();
                renderDepartments(departmentsData);
            } catch (error) {
                console.error('Error loading departments:', error);
                grid.innerHTML = `
                    <div class="col-span-2 text-center py-8 text-red-500">
                        <svg class="mx-auto h-12 w-12 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <p class="mt-2">Failed to load departments</p>
                        <button onclick="loadDepartments()" class="mt-2 text-blue-600 hover:underline">Try Again</button>
                    </div>
                `;
            }
        }

        function renderDepartments(departments) {
            const grid = document.getElementById('departments-grid');
            
            if (departments.length === 0) {
                grid.innerHTML = `
                    <div class="col-span-2 text-center py-8 text-gray-500">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                        <p class="mt-2">No departments found</p>
                    </div>
                `;
                return;
            }

            grid.innerHTML = departments.map(dept => `
                <button type="button" 
                        onclick="navigateToSchedule(${dept.id})"
                        data-college-id="${dept.collegeId || ''}"
                        class="department-modal-card text-left p-4 border border-gray-200 rounded-lg hover:border-blue-500 hover:bg-blue-50 transition group">
                    <div class="flex items-start justify-between">
                        <div>
                            <h3 class="font-semibold text-gray-900">${dept.name}</h3>
                            ${dept.college ? `<p class="text-sm text-gray-500 mt-1">${dept.college}</p>` : ''}
                        </div>
                        <div class="flex-shrink-0">
                            <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </div>
                    </div>
                </button>
            `).join('');
        }

        function closeDepartmentModal() {
            document.getElementById('departmentModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function filterDepartmentsByCollege() {
            const collegeSelect = document.getElementById('modal-college-select');
            const selectedCollege = collegeSelect.value;
            const departmentCards = document.querySelectorAll('.department-modal-card');
            
            departmentCards.forEach(card => {
                const cardCollegeId = card.dataset.collegeId;
                // Show if no filter selected OR if college IDs match
                if (!selectedCollege || cardCollegeId === selectedCollege) {
                    card.classList.remove('hidden');
                } else {
                    card.classList.add('hidden');
                }
            });
        }

        function navigateToSchedule(departmentId) {
            window.location.href = `/admin/schedule?department=${departmentId}`;
        }
    </script>

