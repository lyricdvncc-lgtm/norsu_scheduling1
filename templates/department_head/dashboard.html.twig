{% extends "department_head/base.html.twig" %}

{% block title %}Department Head Dashboard - Smart Scheduling System{% endblock %}

{% block main_content %}
    <!-- Welcome Section -->
    <div class="mb-8">
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="gradient-bg px-8 py-12 text-white relative">
                <div class="absolute inset-0 bg-black bg-opacity-10"></div>
                <div class="relative">
                    <h1 class="text-3xl font-bold mb-2">Welcome back, {{ app.user.firstName }}!</h1>
                    <p class="text-lg opacity-90">{{ dashboard_data.department.name }} Department</p>
                    <p class="text-sm opacity-75 mt-1">Here's what's happening in your department today</p>
                </div>
                <div class="absolute -bottom-6 -right-6 opacity-20">
                    <svg class="w-32 h-32" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Faculty -->
        <div class="stats-card bg-white rounded-2xl shadow-sm border border-gray-100 p-6 relative overflow-hidden">
            <div class="gradient-primary absolute inset-0 opacity-5"></div>
            <div class="relative">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Total Faculty</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">{{ dashboard_data.total_faculty }}</p>
                        <p class="text-sm text-green-600 mt-2 flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                            </svg>
                            +{{ dashboard_data.this_month_faculty }} this month
                        </p>
                    </div>
                    <div class="gradient-primary p-4 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Schedules -->
        <div class="stats-card bg-white rounded-2xl shadow-sm border border-gray-100 p-6 relative overflow-hidden">
            <div class="gradient-success absolute inset-0 opacity-5"></div>
            <div class="relative">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Active Schedules</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">{{ dashboard_data.active_schedules }}</p>
                        <p class="text-sm text-green-600 mt-2 flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                            </svg>
                            {{ dashboard_data.total_schedules }} total
                        </p>
                    </div>
                    <div class="gradient-success p-4 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Approvals -->
        <div class="stats-card bg-white rounded-2xl shadow-sm border border-gray-100 p-6 relative overflow-hidden">
            <div class="gradient-warning absolute inset-0 opacity-5"></div>
            <div class="relative">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Pending Approvals</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">{{ dashboard_data.pending_schedules }}</p>
                        <p class="text-sm text-amber-600 mt-2 flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            {{ dashboard_data.conflicted_schedules }} conflicts
                        </p>
                    </div>
                    <div class="gradient-warning p-4 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Room Utilization -->
        <div class="stats-card bg-white rounded-2xl shadow-sm border border-gray-100 p-6 relative overflow-hidden">
            <div class="gradient-primary absolute inset-0 opacity-5"></div>
            <div class="relative">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Room Utilization</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">{{ dashboard_data.room_utilization }}%</p>
                        <p class="text-sm text-blue-600 mt-2 flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                            </svg>
                            {{ dashboard_data.total_rooms }} rooms
                        </p>
                    </div>
                    <div class="gradient-primary p-4 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column - Quick Actions and Recent Activity -->
        <div class="lg:col-span-2 space-y-8">
            <!-- Quick Actions -->
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6">Quick Actions</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <button class="group p-6 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl border border-blue-100 hover:border-blue-200 transition-all duration-200 hover:shadow-md">
                        <div class="gradient-primary p-3 rounded-lg w-fit mb-4 group-hover:scale-110 transition-transform duration-200">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                        </div>
                        <h3 class="font-semibold text-gray-900 mb-2">Add Faculty</h3>
                        <p class="text-sm text-gray-600">Register new faculty member</p>
                    </button>

                    <button class="group p-6 bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl border border-green-100 hover:border-green-200 transition-all duration-200 hover:shadow-md">
                        <div class="gradient-success p-3 rounded-lg w-fit mb-4 group-hover:scale-110 transition-transform duration-200">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        <h3 class="font-semibold text-gray-900 mb-2">Create Schedule</h3>
                        <p class="text-sm text-gray-600">Design new class schedule</p>
                    </button>

                    <button class="group p-6 bg-gradient-to-br from-amber-50 to-yellow-50 rounded-xl border border-amber-100 hover:border-amber-200 transition-all duration-200 hover:shadow-md">
                        <div class="gradient-warning p-3 rounded-lg w-fit mb-4 group-hover:scale-110 transition-transform duration-200">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                            </svg>
                        </div>
                        <h3 class="font-semibold text-gray-900 mb-2">Book Room</h3>
                        <p class="text-sm text-gray-600">Reserve classroom space</p>
                    </button>

                    <button class="group p-6 bg-gradient-to-br from-purple-50 to-violet-50 rounded-xl border border-purple-100 hover:border-purple-200 transition-all duration-200 hover:shadow-md">
                        <div class="gradient-bg p-3 rounded-lg w-fit mb-4 group-hover:scale-110 transition-transform duration-200">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                            </svg>
                        </div>
                        <h3 class="font-semibold text-gray-900 mb-2">View Reports</h3>
                        <p class="text-sm text-gray-600">Department analytics</p>
                    </button>

                    <button class="group p-6 bg-gradient-to-br from-red-50 to-rose-50 rounded-xl border border-red-100 hover:border-red-200 transition-all duration-200 hover:shadow-md">
                        <div class="gradient-danger p-3 rounded-lg w-fit mb-4 group-hover:scale-110 transition-transform duration-200">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z"/>
                            </svg>
                        </div>
                        <h3 class="font-semibold text-gray-900 mb-2">Resolve Conflicts</h3>
                        <p class="text-sm text-gray-600">Handle schedule issues</p>
                    </button>

                    <button class="group p-6 bg-gradient-to-br from-indigo-50 to-blue-50 rounded-xl border border-indigo-100 hover:border-indigo-200 transition-all duration-200 hover:shadow-md">
                        <div class="bg-gradient-to-r from-indigo-500 to-blue-600 p-3 rounded-lg w-fit mb-4 group-hover:scale-110 transition-transform duration-200">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                        </div>
                        <h3 class="font-semibold text-gray-900 mb-2">Settings</h3>
                        <p class="text-sm text-gray-600">Configure preferences</p>
                    </button>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-semibold text-gray-900">Recent Activity</h2>
                    <button class="text-sm text-blue-600 hover:text-blue-700 font-medium">View all</button>
                </div>
                
                <div class="space-y-4">
                    {% if dashboard_data.recent_activities|length > 0 %}
                        {% for activity in dashboard_data.recent_activities %}
                            <!-- Activity Item -->
                            <div class="flex items-start space-x-4 p-4 bg-gray-50 rounded-xl">
                                <div class="{% if activity.type == 'faculty_added' %}gradient-primary{% elseif activity.type == 'schedule_created' %}gradient-success{% elseif activity.type == 'curriculum_published' %}gradient-warning{% else %}bg-gradient-to-r from-purple-500 to-indigo-600{% endif %} p-2 rounded-lg">
                                    {% if activity.icon == 'user-add' %}
                                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                                        </svg>
                                    {% elseif activity.icon == 'calendar' %}
                                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                        </svg>
                                    {% elseif activity.icon == 'document' %}
                                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                        </svg>
                                    {% endif %}
                                </div>
                                <div class="flex-1">
                                    <p class="text-sm font-medium text-gray-900">{{ activity.title }}</p>
                                    <p class="text-xs text-gray-500">{{ activity.description }}</p>
                                    <p class="text-xs text-gray-400 mt-1">
                                        {% set diff = date().diff(activity.date) %}
                                        {% if diff.days == 0 %}
                                            {% if diff.h == 0 %}
                                                {% if diff.i == 0 %}
                                                    Just now
                                                {% elseif diff.i == 1 %}
                                                    1 minute ago
                                                {% else %}
                                                    {{ diff.i }} minutes ago
                                                {% endif %}
                                            {% elseif diff.h == 1 %}
                                                1 hour ago
                                            {% else %}
                                                {{ diff.h }} hours ago
                                            {% endif %}
                                        {% elseif diff.days == 1 %}
                                            Yesterday at {{ activity.date|date('g:i A') }}
                                        {% elseif diff.days < 7 %}
                                            {{ diff.days }} days ago
                                        {% else %}
                                            {{ activity.date|date('M d, Y') }} at {{ activity.date|date('g:i A') }}
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-center py-8">
                            <p class="text-gray-500">No recent activity</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Right Column - Pending Approvals and Faculty Workload -->
        <div class="space-y-8">
            <!-- Pending Approvals -->
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-semibold text-gray-900">Pending Approvals</h2>
                    <span class="bg-amber-100 text-amber-800 text-xs font-medium px-3 py-1 rounded-full">{{ dashboard_data.pending_schedules }} pending</span>
                </div>

                <div class="space-y-4">
                    {% if dashboard_data.pending_schedules > 0 %}
                        <div class="text-center py-8">
                            <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                            </svg>
                            <p class="text-gray-900 font-medium mb-2">{{ dashboard_data.pending_schedules }} schedules need review</p>
                            <p class="text-sm text-gray-500">Visit the schedules page to review and approve</p>
                        </div>
                    {% else %}
                        <div class="text-center py-8">
                            <svg class="w-16 h-16 mx-auto text-green-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <p class="text-gray-900 font-medium mb-2">All caught up!</p>
                            <p class="text-sm text-gray-500">No pending approvals at the moment</p>
                        </div>
                    {% endif %}
                </div>

                <a href="{{ path('department_head_schedules') }}" class="block w-full mt-6 text-center text-sm text-blue-600 hover:text-blue-700 font-medium py-2 border border-blue-200 rounded-xl hover:bg-blue-50 transition-colors duration-200">
                    View All Schedules
                </a>
            </div>

            <!-- Faculty Workload -->
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6">Faculty Workload</h2>
                
                <div class="space-y-6">
                    {% if dashboard_data.faculty_loads|length > 0 %}
                        {% for load_data in dashboard_data.faculty_loads %}
                            <!-- Faculty Member -->
                            <div class="flex items-center space-x-4">
                                <div class="h-10 w-10 rounded-full {% if load_data.percentage >= 100 %}gradient-danger{% elseif load_data.percentage >= 85 %}gradient-warning{% else %}gradient-success{% endif %} flex items-center justify-center text-white font-medium">
                                    {{ load_data.faculty.firstName|first }}{{ load_data.faculty.lastName|first }}
                                </div>
                                <div class="flex-1">
                                    <div class="flex items-center justify-between mb-1">
                                        <p class="text-sm font-medium text-gray-900">{{ load_data.faculty.firstName }} {{ load_data.faculty.lastName }}</p>
                                        <span class="text-xs text-gray-500">{{ load_data.current_load }}/{{ load_data.max_load }} hrs</span>
                                    </div>
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        <div class="{% if load_data.percentage >= 100 %}gradient-danger{% elseif load_data.percentage >= 85 %}gradient-warning{% else %}gradient-success{% endif %} h-2 rounded-full" style="width: {{ load_data.percentage > 100 ? 100 : load_data.percentage }}%"></div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-center py-8">
                            <p class="text-gray-500">No faculty workload data available</p>
                        </div>
                    {% endif %}
                </div>

                <a href="{{ path('department_head_reports_faculty_workload') }}" class="block w-full mt-6 text-center text-sm text-blue-600 hover:text-blue-700 font-medium py-2 border border-blue-200 rounded-xl hover:bg-blue-50 transition-colors duration-200">
                    View Detailed Workload Report
                </a>
            </div>
        </div>
    </div>
{% endblock %}