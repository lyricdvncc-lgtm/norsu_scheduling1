// Auto-save functionality
function autoSaveForm() {
    const formData = new FormData(document.querySelector('form'));
    const autoSaveData = {};
    
    // Only save non-sensitive fields
    const fieldsToSave = [
        'user_form[username]',
        'user_form[email]',
        'user_form[firstName]',
        'user_form[lastName]',
        'user_form[employeeId]',
        'user_form[position]',
        'user_form[role]',
        'user_form[college]',
        'user_form[department]',
        'user_form[isActive]'
    ];
    
    fieldsToSave.forEach(fieldName => {
        const value = formData.get(fieldName);
        if (value) {
            autoSaveData[fieldName] = value;
        }
    });
    
    // Save to localStorage with timestamp
    localStorage.setItem('userCreateForm_autoSave', JSON.stringify({
        data: autoSaveData,
        timestamp: Date.now(),
        url: window.location.pathname
    }));
    
    showAutoSaveIndicator();
}

// Restore auto-saved data
function restoreAutoSavedData() {
    const saved = localStorage.getItem('userCreateForm_autoSave');
    if (!saved) return false;
    
    try {
        const savedData = JSON.parse(saved);
        
        // Check if data is recent (within 1 hour) and for same URL
        const ageLimit = 60 * 60 * 1000; // 1 hour
        const age = Date.now() - savedData.timestamp;
        
        if (age > ageLimit || savedData.url !== window.location.pathname) {
            localStorage.removeItem('userCreateForm_autoSave');
            return false;
        }
        
        // Show restoration prompt
        if (confirm('We found previously entered data from this session. Would you like to restore it?')) {
            Object.entries(savedData.data).forEach(([fieldName, value]) => {
                const field = document.querySelector(`[name="${fieldName}"]`);
                if (field) {
                    if (field.type === 'checkbox') {
                        field.checked = value === '1';
                    } else {
                        field.value = value;
                    }
                    
                    // Trigger change event to update dependent fields
                    field.dispatchEvent(new Event('change', { bubbles: true }));
                }
            });
            
            updateFormProgress();
            showNotification('Previously entered data has been restored', 'success');
            return true;
        }
    } catch (error) {
        console.error('Error restoring auto-saved data:', error);
        localStorage.removeItem('userCreateForm_autoSave');
    }
    
    return false;
}

