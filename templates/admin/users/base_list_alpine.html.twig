{% extends 'admin/base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block main_content %}
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div class="flex-1 min-w-0">
                <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">{{ page_title }}</h1>
                {% if user_type_description is defined %}
                    <p class="mt-2 text-sm text-gray-500">{{ user_type_description }}</p>
                {% endif %}
            </div>
            {% block page_actions %}
            <div class="mt-5 flex lg:mt-0 lg:ml-4">
                {% if user_type == 'all' %}
                    <a href="{{ path('admin_users_create') }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800">
                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        Add New User
                    </a>
                {% endif %}
            </div>
            {% endblock %}
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        {% block stats_cards %}
        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
                        {% block stat_icon %}
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                        </svg>
                        {% endblock %}
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">{{ user_type == 'all' ? 'Total Users' : page_title }}</p>
                    <p class="text-2xl font-bold text-gray-900">{{ statistics.total ?? '0' }}</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">Active</p>
                    <p class="text-2xl font-bold text-gray-900">{{ statistics.active ?? '0' }}</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">Inactive</p>
                    <p class="text-2xl font-bold text-gray-900">{{ statistics.inactive ?? '0' }}</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">This Month</p>
                    <p class="text-2xl font-bold text-gray-900">{{ statistics.thisMonth ?? '0' }}</p>
                </div>
            </div>
        </div>
        {% endblock %}
    </div>

    <script>
        window.usersTableData = {
            users: [
                {% for user in users %}
                {
                    id: {{ user.id }},
                    username: '{{ user.username|e('js') }}',
                    fullName: '{{ user.fullName|e('js') }}',
                    email: '{{ user.email|e('js') }}',
                    employeeId: '{{ user.employeeId|default('')|e('js') }}',
                    role: {{ user.role }},
                    roleDisplayName: '{{ user.roleDisplayName|e('js') }}',
                    departmentName: '{{ user.department ? user.department.name|e('js') : '' }}',
                    departmentId: {{ user.department ? user.department.id : 'null' }},
                    collegeId: {{ (user.department and user.department.college) ? user.department.college.id : 'null' }},
                    isActive: {{ user.isActive ? 'true' : 'false' }},
                    deactivateToken: '{{ csrf_token('deactivate_user_' ~ user.id) }}',
                    activateToken: '{{ csrf_token('activate_user_' ~ user.id) }}',
                    deleteToken: '{{ csrf_token('delete_user_' ~ user.id) }}'
                }{{ not loop.last ? ',' : '' }}
                {% endfor %}
            ],
            colleges: [
                {% if colleges is defined %}
                    {% for college in colleges %}
                    { id: {{ college.id }}, name: '{{ college.name|e('js') }}' }{{ not loop.last ? ',' : '' }}
                    {% endfor %}
                {% endif %}
            ],
            departments: [
                {% if departments is defined %}
                    {% for department in departments %}
                    { id: {{ department.id }}, name: '{{ department.name|e('js') }}', collegeId: {{ department.college.id }} }{{ not loop.last ? ',' : '' }}
                    {% endfor %}
                {% endif %}
            ]
        };
    </script>

    <!-- Users DataTable with Alpine.js -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden" 
         x-data="{
            allData: window.usersTableData.users,
            colleges: window.usersTableData.colleges,
            allDepartments: window.usersTableData.departments,
            filteredData: [],
            paginatedData: [],
            availableDepartments: [],
            search: '',
            statusFilter: 'all',
            roleFilter: 'all',
            collegeFilter: 'all',
            departmentFilter: 'all',
            sortField: 'username',
            sortDirection: 'asc',
            perPage: 99999,
            currentPage: 1,
            totalPages: 1,
            totalFiltered: 0,
            startEntry: 0,
            endEntry: 0,
            
            init() {
                this.availableDepartments = [...this.allDepartments];
                this.filterData();
            },
            
            filterData() {
                let filtered = [...this.allData];
                
                if (this.search) {
                    const searchLower = this.search.toLowerCase();
                    filtered = filtered.filter(user => 
                        user.username.toLowerCase().includes(searchLower) ||
                        user.fullName.toLowerCase().includes(searchLower) ||
                        user.email.toLowerCase().includes(searchLower) ||
                        user.employeeId.toLowerCase().includes(searchLower) ||
                        user.departmentName.toLowerCase().includes(searchLower)
                    );
                }
                
                if (this.roleFilter !== 'all') {
                    filtered = filtered.filter(user => user.role == this.roleFilter);
                }
                
                if (this.statusFilter !== 'all') {
                    filtered = filtered.filter(user => {
                        if (this.statusFilter === 'active') return user.isActive;
                        if (this.statusFilter === 'inactive') return !user.isActive;
                        return true;
                    });
                }
                
                if (this.collegeFilter !== 'all') {
                    filtered = filtered.filter(user => user.collegeId == this.collegeFilter);
                }
                
                if (this.departmentFilter !== 'all') {
                    filtered = filtered.filter(user => user.departmentId == this.departmentFilter);
                }
                
                filtered.sort((a, b) => {
                    let aVal = a[this.sortField] || '';
                    let bVal = b[this.sortField] || '';
                    
                    if (typeof aVal === 'string') aVal = aVal.toLowerCase();
                    if (typeof bVal === 'string') bVal = bVal.toLowerCase();
                    
                    if (aVal < bVal) return this.sortDirection === 'asc' ? -1 : 1;
                    if (aVal > bVal) return this.sortDirection === 'asc' ? 1 : -1;
                    return 0;
                });
                
                this.filteredData = filtered;
                this.totalFiltered = filtered.length;
                this.currentPage = 1;
                this.updatePagination();
            },
            
            updatePagination() {
                this.totalPages = Math.ceil(this.totalFiltered / this.perPage) || 1;
                const start = (this.currentPage - 1) * this.perPage;
                const end = start + this.perPage;
                this.paginatedData = this.filteredData.slice(start, end);
                this.startEntry = this.totalFiltered > 0 ? start + 1 : 0;
                this.endEntry = Math.min(end, this.totalFiltered);
            },
            
            sortBy(field) {
                if (this.sortField === field) {
                    this.sortDirection = this.sortDirection === 'asc' ? 'desc' : 'asc';
                } else {
                    this.sortField = field;
                    this.sortDirection = 'asc';
                }
                this.filterData();
            },
            
            onCollegeChange() {
                if (this.collegeFilter === 'all') {
                    this.availableDepartments = [...this.allDepartments];
                } else {
                    this.availableDepartments = this.allDepartments.filter(
                        dept => dept.collegeId == this.collegeFilter
                    );
                    if (this.departmentFilter !== 'all') {
                        const exists = this.availableDepartments.some(d => d.id == this.departmentFilter);
                        if (!exists) this.departmentFilter = 'all';
                    }
                }
                this.filterData();
            },
            
            onDepartmentChange() {
                if (this.departmentFilter !== 'all') {
                    const dept = this.allDepartments.find(d => d.id == this.departmentFilter);
                    if (dept && dept.collegeId) {
                        this.collegeFilter = dept.collegeId.toString();
                        this.availableDepartments = this.allDepartments.filter(
                            d => d.collegeId == dept.collegeId
                        );
                    }
                }
                this.filterData();
            },
            
            clearFilters() {
                this.search = '';
                this.statusFilter = 'all';
                this.roleFilter = 'all';
                this.collegeFilter = 'all';
                this.departmentFilter = 'all';
                this.availableDepartments = [...this.allDepartments];
                this.filterData();
            },
            
            getRoleLabel(role) {
                const labels = { '1': 'Administrator', '2': 'Department Head', '3': 'Faculty' };
                return labels[role] || role;
            },
            
            getCollegeName(collegeId) {
                const college = this.colleges.find(c => c.id == collegeId);
                return college ? college.name : collegeId;
            },
            
            getDepartmentName(deptId) {
                const dept = this.allDepartments.find(d => d.id == deptId);
                return dept ? dept.name : deptId;
            }
         }">
        
        <!-- Filters Bar -->
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <div class="flex items-center justify-between gap-4">
                <h3 class="text-lg font-semibold text-gray-900">{{ user_type == 'all' ? 'Users' : page_title }} Directory</h3>
                
                <div class="flex items-center gap-3">
                    <!-- Search -->
                    <div class="relative">
                        <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-4 w-4 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                        <input type="text" 
                               x-model="search" 
                               @input.debounce.300ms="filterData()"
                               placeholder="Search users..." 
                               style="padding-left: 2.25rem !important;"
                               class="w-56 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3 bg-white hover:bg-gray-50 transition-colors">
                    </div>

                    <!-- Role Filter -->
                    {% if user_type == 'all' %}
                    <div class="filter-group">
                        <label class="sr-only">Role</label>
                        <select x-model="roleFilter" @change="filterData()" class="w-32 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3 pr-8 bg-white hover:bg-gray-50 transition-colors">
                            <option value="all">All Roles</option>
                            <option value="1">Admin</option>
                            <option value="2">Dept Head</option>
                            <option value="3">Faculty</option>
                        </select>
                    </div>
                    {% endif %}
                    
                    <!-- Status Filter -->
                    <div class="filter-group">
                        <label class="sr-only">Status</label>
                        <select x-model="statusFilter" @change="filterData()" class="w-32 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3 pr-8 bg-white hover:bg-gray-50 transition-colors">
                            <option value="all">All Status</option>
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                        </select>
                    </div>

                    <!-- College Filter -->
                    {% if user_type in ['all', 'department_heads', 'faculty'] %}
                    <div class="filter-group">
                        <label class="sr-only">College</label>
                        <select x-model="collegeFilter" @change="onCollegeChange()" class="w-48 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3 pr-8 bg-white hover:bg-gray-50 transition-colors">
                            <option value="all">All Colleges</option>
                            <template x-for="college in colleges" :key="college.id">
                                <option :value="college.id" x-text="college.name"></option>
                            </template>
                        </select>
                    </div>
                    {% endif %}

                    <!-- Department Filter -->
                    {% if user_type in ['all', 'department_heads', 'faculty'] %}
                    <div class="filter-group">
                        <label class="sr-only">Department</label>
                        <select x-model="departmentFilter" @change="onDepartmentChange()" class="w-48 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3 pr-8 bg-white hover:bg-gray-50 transition-colors">
                            <option value="all">All Departments</option>
                            <template x-for="dept in availableDepartments" :key="dept.id">
                                <option :value="dept.id" x-text="dept.name"></option>
                            </template>
                        </select>
                    </div>
                    {% endif %}

                    <!-- Clear Filters Button -->
                    <button type="button" @click="clearFilters()" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                        <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                        Clear
                    </button>
                </div>
            </div>
        </div>


        
        <!-- Table -->
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-100" @click="sortBy('username')">
                            <div class="flex items-center gap-2">
                                <span>Username</span>
                                <span class="flex flex-col">
                                    <svg class="w-3 h-3" :class="sortField === 'username' && sortDirection === 'asc' ? 'text-blue-600' : 'text-gray-400'" fill="currentColor" viewBox="0 0 20 20"><path d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L10 6.414l-3.293 3.293a1 1 0 01-1.414 0z"/></svg>
                                    <svg class="w-3 h-3 -mt-1" :class="sortField === 'username' && sortDirection === 'desc' ? 'text-blue-600' : 'text-gray-400'" fill="currentColor" viewBox="0 0 20 20"><path d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L10 13.586l3.293-3.293a1 1 0 011.414 0z"/></svg>
                                </span>
                            </div>
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-100" @click="sortBy('fullName')">
                            <div class="flex items-center gap-2">
                                <span>Name</span>
                                <span class="flex flex-col">
                                    <svg class="w-3 h-3" :class="sortField === 'fullName' && sortDirection === 'asc' ? 'text-blue-600' : 'text-gray-400'" fill="currentColor" viewBox="0 0 20 20"><path d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L10 6.414l-3.293 3.293a1 1 0 01-1.414 0z"/></svg>
                                    <svg class="w-3 h-3 -mt-1" :class="sortField === 'fullName' && sortDirection === 'desc' ? 'text-blue-600' : 'text-gray-400'" fill="currentColor" viewBox="0 0 20 20"><path d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L10 13.586l3.293-3.293a1 1 0 011.414 0z"/></svg>
                                </span>
                            </div>
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Employee ID</th>
                        {% if user_type == 'all' %}
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
                        {% endif %}
                        {% if user_type in ['all', 'department_heads', 'faculty'] %}
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Department</th>
                        {% endif %}
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-100" @click="sortBy('isActive')">
                            <div class="flex items-center gap-2">
                                <span>Status</span>
                                <span class="flex flex-col">
                                    <svg class="w-3 h-3" :class="sortField === 'isActive' && sortDirection === 'asc' ? 'text-blue-600' : 'text-gray-400'" fill="currentColor" viewBox="0 0 20 20"><path d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L10 6.414l-3.293 3.293a1 1 0 01-1.414 0z"/></svg>
                                    <svg class="w-3 h-3 -mt-1" :class="sortField === 'isActive' && sortDirection === 'desc' ? 'text-blue-600' : 'text-gray-400'" fill="currentColor" viewBox="0 0 20 20"><path d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L10 13.586l3.293-3.293a1 1 0 011.414 0z"/></svg>
                                </span>
                            </div>
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <template x-if="paginatedData.length === 0">
                        <tr>
                            <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                                </svg>
                                <p class="mt-2 text-sm font-medium">No users found</p>
                                <p class="text-xs text-gray-400">Try adjusting your filters</p>
                            </td>
                        </tr>
                    </template>
                    <template x-for="user in paginatedData" :key="user.id">
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900" x-text="user.username"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900" x-text="user.fullName"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500" x-text="user.email"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500" x-text="user.employeeId"></div>
                            </td>
                            {% if user_type == 'all' %}
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full"
                                      :class="{
                                          'bg-red-100 text-red-800': user.role == 1,
                                          'bg-yellow-100 text-yellow-800': user.role == 2,
                                          'bg-green-100 text-green-800': user.role == 3
                                      }"
                                      x-text="user.roleDisplayName"></span>
                            </td>
                            {% endif %}
                            {% if user_type in ['all', 'department_heads', 'faculty'] %}
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-500" x-text="user.departmentName || '-'"></div>
                            </td>
                            {% endif %}
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full"
                                      :class="user.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'"
                                      x-text="user.isActive ? 'Active' : 'Inactive'"></span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <div class="flex items-center justify-end gap-2">
                                    <a :href="`{{ path('admin_users_view', {id: '__ID__'}) }}`.replace('__ID__', user.id)" 
                                       class="text-blue-600 hover:text-blue-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-blue-50 transition" 
                                       title="View">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                        </svg>
                                    </a>
