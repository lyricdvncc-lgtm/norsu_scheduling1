                document.querySelectorAll('form').forEach(function(form) {
                    // Skip edit forms
                    if (form.getAttribute('data-edit-form') === 'true' || 
                        form.getAttribute('data-turbo') === 'false' || 
                        (form.action && typeof form.action === 'string' && form.action.includes('/edit'))) {
                        return; // Don't reset edit forms
                    }
                    
                    // Check if reset method exists before calling it
                    if (typeof form.reset === 'function') {
                        form.reset();
                    }
                    // Explicitly clear all fields
                    form.querySelectorAll('input, textarea, select').forEach(function(field) {
                        if (field.type !== 'hidden' && field.type !== 'submit' && field.type !== 'button') {
                            field.value = '';
                            if (field.type === 'checkbox' || field.type === 'radio') {
                                field.checked = false;
                            }
                        }
                    });
