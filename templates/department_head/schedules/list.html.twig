{% extends 'department_head/base.html.twig' %}

{% block title %}Department Schedules{% endblock %}

{% block main_content %}
<div 
    class="bg-white rounded-lg shadow-sm p-6"
    x-data="{ viewMode: 'table' }"
    x-init="console.log('Alpine initialized', viewMode)"
>
    <!-- Header - Responsive -->
    <div class="mb-6">
        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
            <h1 class="text-2xl font-bold text-gray-900">Department Schedules</h1>
            
            <!-- Button Group - Stacks on mobile, side-by-side on desktop -->
            <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
                <!-- Create Schedule Button - Full width on mobile -->
                <a href="{{ path('department_head_schedules_create') }}" 
                   class="px-4 py-2.5 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors flex items-center justify-center gap-2 shadow-sm hover:shadow-md text-sm sm:text-base font-medium">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    <span>Create Schedule</span>
                </a>
                
                <!-- View Toggle Buttons - Side by side even on mobile -->
                <div class="flex gap-2">
                    <button 
                        @click="viewMode = 'table'" 
                        :class="viewMode === 'table' ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'"
                        class="flex-1 sm:flex-none px-3 sm:px-4 py-2.5 rounded-lg transition-colors flex items-center justify-center gap-2 shadow-sm text-sm sm:text-base font-medium"
                        type="button"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                        </svg>
                        <span>Table</span>
                    </button>
                    <button 
                        @click="viewMode = 'calendar'" 
                        :class="viewMode === 'calendar' ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'"
                        class="flex-1 sm:flex-none px-3 sm:px-4 py-2.5 rounded-lg transition-colors flex items-center justify-center gap-2 shadow-sm text-sm sm:text-base font-medium"
                        type="button"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <span>Calendar</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Table View -->
    <div 
        x-data="schedulesTable()"
        x-show="viewMode === 'table'"
        x-transition
    >
        <!-- Filters and Search -->
        <div class="mb-6 grid grid-cols-1 md:grid-cols-4 gap-4">
            <!-- Search -->
            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
                <input 
                    type="text" 
                    x-model="search"
                    @input.debounce.300ms="filterData()"
                    placeholder="Search subject, section, room, or faculty..."
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                >
            </div>

            <!-- Semester Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Semester</label>
                <select 
                    x-model="filters.semester"
                    @change="filterData()"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                >
                    <option value="">All Semesters</option>
                    <option value="First">First Semester</option>
                    <option value="Second">Second Semester</option>
                    <option value="Summer">Summer</option>
                </select>
            </div>

            <!-- Status Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                <select 
                    x-model="filters.status"
                    @change="filterData()"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                >
                    <option value="">All Status</option>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>
        </div>

        <!-- Active Filters -->
        <div class="mb-4 flex flex-wrap gap-2" x-show="hasActiveFilters()">
            <span class="text-sm text-gray-600">Active filters:</span>
            <template x-if="filters.semester">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-indigo-100 text-indigo-800">
                    Semester: <span class="font-semibold ml-1" x-text="filters.semester"></span>
                    <button @click="filters.semester = ''; filterData()" class="ml-2 hover:text-indigo-600">×</button>
                </span>
            </template>
            <template x-if="filters.status">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-indigo-100 text-indigo-800">
                    Status: <span class="font-semibold ml-1 capitalize" x-text="filters.status"></span>
                    <button @click="filters.status = ''; filterData()" class="ml-2 hover:text-indigo-600">×</button>
                </span>
            </template>
            <template x-if="search">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-indigo-100 text-indigo-800">
                    Search: <span class="font-semibold ml-1" x-text="search"></span>
                    <button @click="search = ''; filterData()" class="ml-2 hover:text-indigo-600">×</button>
                </span>
            </template>
            <button @click="clearFilters()" class="text-sm text-indigo-600 hover:text-indigo-800 font-medium">
                Clear all
            </button>
        </div>

        <!-- Per Page and Results Info -->
        <div class="mb-4 flex justify-between items-center">
            <div class="flex items-center gap-2">
                <label class="text-sm text-gray-700">Show</label>
                <select 
                    x-model.number="perPage"
                    @change="currentPage = 1; filterData()"
                    class="px-3 py-1 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                >
                    <option :value="10">10</option>
                    <option :value="25">25</option>
                    <option :value="50">50</option>
                    <option :value="100">100</option>
                </select>
                <label class="text-sm text-gray-700">entries</label>
            </div>
            <div class="text-sm text-gray-700">
                Showing <span x-text="getShowingStart()"></span> to <span x-text="getShowingEnd()"></span> of <span x-text="filteredData.length"></span> schedules
            </div>
        </div>

        <!-- Table -->
        <div class="overflow-x-auto border border-gray-200 rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th @click="sortBy('subject')" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">
                            <div class="flex items-center gap-1">
                                Subject
                                <svg class="w-4 h-4" :class="{'text-indigo-600': sortField === 'subject'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                                </svg>
                            </div>
                        </th>
                        <th @click="sortBy('section')" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">
                            <div class="flex items-center gap-1">
                                Section
                                <svg class="w-4 h-4" :class="{'text-indigo-600': sortField === 'section'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                                </svg>
                            </div>
                        </th>
                        <th @click="sortBy('room')" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">
                            <div class="flex items-center gap-1">
                                Room
                                <svg class="w-4 h-4" :class="{'text-indigo-600': sortField === 'room'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                                </svg>
                            </div>
                        </th>
                        <th @click="sortBy('faculty')" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">
                            <div class="flex items-center gap-1">
                                Faculty
                                <svg class="w-4 h-4" :class="{'text-indigo-600': sortField === 'faculty'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                                </svg>
                            </div>
                        </th>
                        <th @click="sortBy('schedule')" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">
                            <div class="flex items-center gap-1">
                                Schedule
                                <svg class="w-4 h-4" :class="{'text-indigo-600': sortField === 'schedule'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                                </svg>
                            </div>
                        </th>
                        <th @click="sortBy('semester')" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">
                            <div class="flex items-center gap-1">
                                Semester
                                <svg class="w-4 h-4" :class="{'text-indigo-600': sortField === 'semester'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                                </svg>
                            </div>
                        </th>
                        <th @click="sortBy('status')" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100">
                            <div class="flex items-center gap-1">
                                Status
                                <svg class="w-4 h-4" :class="{'text-indigo-600': sortField === 'status'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                                </svg>
                            </div>
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <!-- Use separate tbody for each group -->
                <template x-for="(group, groupIndex) in getGroupedPaginatedData()" :key="'group-' + groupIndex">
                    <tbody class="bg-white">
                        <!-- Header Row -->
                        <tr class="bg-gray-100 border-t-2 border-gray-300">
                            <td colspan="8" class="px-6 py-3">
                                <button 
                                    @click="toggleGroup(group.subjectCode)" 
                                    class="flex items-center gap-2 w-full text-left"
                                    type="button"
                                >
                                    <svg class="w-5 h-5 transition-transform" :class="{'rotate-90': isGroupExpanded(group.subjectCode)}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                    </svg>
                                    <span class="font-bold text-base" :class="getYearColor(group.subjectCode)" x-text="group.subjectCode"></span>
                                    <span class="text-sm text-gray-600" x-text="'- ' + group.subjectTitle"></span>
                                    <span class="ml-auto text-xs text-gray-500 bg-gray-200 px-2 py-1 rounded-full" x-text="group.schedules.length + ' section(s)'"></span>
                                </button>
                            </td>
                        </tr>
                        
                        <!-- Schedule Rows -->
                        <template x-for="(schedule, schedIndex) in group.schedules" :key="'sched-' + schedIndex">
                            <tr x-show="isGroupExpanded(group.subjectCode)" class="hover:bg-gray-50 border-b border-gray-200">
                                <td class="px-6 py-4 whitespace-nowrap pl-16">
                                    <div class="text-sm font-bold" :class="getYearColor(schedule.subjectCode)" x-text="schedule.subjectCode + '-' + schedule.section"></div>
                                    <div class="text-sm text-gray-600" x-text="schedule.subject"></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900" x-text="schedule.section"></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900" x-text="schedule.room"></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900" x-text="schedule.faculty"></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900" x-text="schedule.dayPattern"></div>
                                    <div class="text-sm text-gray-500" x-text="schedule.time"></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900" x-text="schedule.semester"></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span 
                                        x-text="schedule.status === 'active' ? 'Active' : 'Inactive'"
                                        :class="schedule.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'"
                                        class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full"
                                    ></span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex items-center justify-end gap-1">
                                        <a 
                                            :href="`{{ path('department_head_schedules_view', {'id': '__ID__'}) }}`.replace('__ID__', schedule.id)" 
                                            class="inline-flex items-center justify-center w-8 h-8 border border-gray-300 rounded-md text-gray-700 bg-white hover:bg-gray-50 transition"
                                            title="View Details"
                                        >
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                            </svg>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        </template>
                    </tbody>
                </template>
                <tbody class="bg-white">
                    <!-- Empty State -->
                    <tr x-show="getGroupedPaginatedData().length === 0">
                        <td colspan="8" class="px-6 py-12 text-center">
                                <div class="text-gray-500">
                                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                    <p class="mt-2 text-sm">No schedules found</p>
                                </div>
                            </td>
                        </tr>
                    </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="mt-4 flex justify-between items-center">
            <div class="text-sm text-gray-700">
                Page <span x-text="currentPage"></span> of <span x-text="totalPages()"></span>
            </div>
            <div class="flex gap-1">
                <button 
                    @click="currentPage = 1" 
                    :disabled="currentPage === 1"
                    :class="currentPage === 1 ? 'opacity-50 cursor-not-allowed' : 'hover:bg-gray-100'"
                    class="px-3 py-1 border border-gray-300 rounded-lg text-sm"
                >
                    First
                </button>
                <button 
                    @click="currentPage--" 
                    :disabled="currentPage === 1"
                    :class="currentPage === 1 ? 'opacity-50 cursor-not-allowed' : 'hover:bg-gray-100'"
                    class="px-3 py-1 border border-gray-300 rounded-lg text-sm"
                >
                    Previous
                </button>
                
                <template x-for="page in getPageNumbers()" :key="page">
                    <button 
                        @click="if(page !== '...') currentPage = page"
                        :class="page === currentPage ? 'bg-indigo-600 text-white' : page === '...' ? 'cursor-default' : 'hover:bg-gray-100'"
                        class="px-3 py-1 border border-gray-300 rounded-lg text-sm"
                        x-text="page"
                    ></button>
                </template>

                <button 
                    @click="currentPage++" 
                    :disabled="currentPage === totalPages()"
                    :class="currentPage === totalPages() ? 'opacity-50 cursor-not-allowed' : 'hover:bg-gray-100'"
                    class="px-3 py-1 border border-gray-300 rounded-lg text-sm"
                >
                    Next
                </button>
                <button 
                    @click="currentPage = totalPages()" 
                    :disabled="currentPage === totalPages()"
                    :class="currentPage === totalPages() ? 'opacity-50 cursor-not-allowed' : 'hover:bg-gray-100'"
                    class="px-3 py-1 border border-gray-300 rounded-lg text-sm"
                >
                    Last
                </button>
            </div>
        </div>
    </div>

    <!-- Calendar View -->
    <div 
        x-show="viewMode === 'calendar'"
        x-transition
    >
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
            <svg class="mx-auto h-12 w-12 text-yellow-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Calendar View</h3>
            <p class="text-gray-600">Calendar view is coming soon. You can use the table view to manage schedules.</p>
        </div>
    </div>
</div>

<script>
function schedulesTable() {
    return {
        search: '',
        filters: {
            semester: '',
            status: ''
        },
        sortField: 'subject',
        sortDirection: 'asc',
        currentPage: 1,
        perPage: 25,
        allData: [
            {% if schedules is empty %}
                // NO SCHEDULES PASSED FROM CONTROLLER
            {% else %}
            {% for schedule in schedules %}
            {
                id: {{ schedule.id }},
                subject: '{{ schedule.subject.title|escape('js') }}',
                subjectCode: '{{ schedule.subject.code|escape('js') }}',
                section: '{{ schedule.section|default('N/A')|escape('js') }}',
                room: '{{ schedule.room.code|escape('js') }}',
                faculty: '{{ schedule.faculty ? schedule.faculty.fullName|escape('js') : 'TBA' }}',
                dayPattern: '{{ schedule.dayPatternLabel|escape('js') }}',
                time: '{{ schedule.startTime|date('g:i A') }} - {{ schedule.endTime|date('g:i A') }}',
                semester: '{{ schedule.semester|escape('js') }}',
                academicYear: '{{ schedule.academicYear.year|escape('js') }}',
                status: '{{ schedule.status|escape('js') }}',
                enrolledStudents: {{ schedule.enrolledStudents|default(0) }},
                isConflicted: {{ schedule.isConflicted ? 'true' : 'false' }}
            }{{ not loop.last ? ',' : '' }}
            {% endfor %}
            {% endif %}
        ],
        filteredData: [],
        expandedGroups: {},

        init() {
            this.filteredData = [...this.allData];
            // Initialize all groups as expanded
            this.initializeExpandedGroups();
        },

        initializeExpandedGroups() {
            const groups = this.getGroupedPaginatedData();
            const newExpanded = {};
            groups.forEach(group => {
                newExpanded[group.subjectCode] = true;
            });
            this.expandedGroups = newExpanded;
        },

        toggleGroup(subjectCode) {
            this.expandedGroups[subjectCode] = !this.expandedGroups[subjectCode];
        },

        isGroupExpanded(subjectCode) {
            return this.expandedGroups[subjectCode] === true;
        },

        getYearColor(subjectCode) {
            const match = subjectCode.match(/\d+/);
            if (!match) return 'text-gray-900';
            const num = parseInt(match[0]);
            if (num >= 100 && num < 200) return 'text-blue-600';
            if (num >= 200 && num < 300) return 'text-green-600';
            if (num >= 300 && num < 400) return 'text-orange-600';
            if (num >= 400) return 'text-red-600';
            return 'text-gray-900';
        },

        filterData() {
            this.filteredData = this.allData.filter(schedule => {
                // Search filter
                if (this.search) {
                    const searchLower = this.search.toLowerCase();
                    const matchesSearch = 
                        schedule.subject.toLowerCase().includes(searchLower) ||
                        schedule.subjectCode.toLowerCase().includes(searchLower) ||
                        schedule.section.toLowerCase().includes(searchLower) ||
                        schedule.room.toLowerCase().includes(searchLower) ||
                        schedule.faculty.toLowerCase().includes(searchLower);
                    if (!matchesSearch) return false;
                }

                // Semester filter
                if (this.filters.semester && schedule.semester !== this.filters.semester) {
                    return false;
                }

                // Status filter
                if (this.filters.status && schedule.status !== this.filters.status) {
                    return false;
                }

                return true;
            });

            this.sortData();
            this.currentPage = 1;
            // Re-initialize expanded groups after filtering
            this.$nextTick(() => {
                this.initializeExpandedGroups();
            });
        },

        sortBy(field) {
            if (this.sortField === field) {
                this.sortDirection = this.sortDirection === 'asc' ? 'desc' : 'asc';
            } else {
                this.sortField = field;
                this.sortDirection = 'asc';
            }
            this.sortData();
        },

        sortData() {
            this.filteredData.sort((a, b) => {
                let aVal = a[this.sortField];
                let bVal = b[this.sortField];

                if (typeof aVal === 'string') {
                    aVal = aVal.toLowerCase();
                    bVal = bVal.toLowerCase();
                }

                if (aVal < bVal) return this.sortDirection === 'asc' ? -1 : 1;
                if (aVal > bVal) return this.sortDirection === 'asc' ? 1 : -1;
                return 0;
            });
        },

        paginatedData() {
            const start = (this.currentPage - 1) * this.perPage;
            const end = start + this.perPage;
            return this.filteredData.slice(start, end);
        },

        getGroupedPaginatedData() {
            const paginated = this.paginatedData();
            const grouped = {};
            
            paginated.forEach(schedule => {
                const code = schedule.subjectCode;
                if (!grouped[code]) {
                    grouped[code] = {
                        subjectCode: code,
                        subjectTitle: schedule.subject,
                        schedules: []
                    };
                }
                grouped[code].schedules.push(schedule);
            });

            // Sort schedules within each group by section
            Object.values(grouped).forEach(group => {
                group.schedules.sort((a, b) => {
                    return a.section.localeCompare(b.section);
                });
            });

            // Convert to array for Alpine.js x-for iteration
            return Object.values(grouped);
        },

        getFlattenedRows() {
            const groups = this.getGroupedPaginatedData();
            const rows = [];
            
            groups.forEach(group => {
                // Add header row
                rows.push({
                    type: 'header',
                    group: group
                });
                
                // Add schedule rows
                group.schedules.forEach(schedule => {
                    rows.push({
                        type: 'schedule',
                        group: group,
                        schedule: schedule
                    });
                });
            });
            
            return rows;
        },

        totalPages() {
            return Math.ceil(this.filteredData.length / this.perPage) || 1;
        },

        getShowingStart() {
            return this.filteredData.length === 0 ? 0 : (this.currentPage - 1) * this.perPage + 1;
        },

        getShowingEnd() {
            const end = this.currentPage * this.perPage;
            return end > this.filteredData.length ? this.filteredData.length : end;
        },

        getPageNumbers() {
            const total = this.totalPages();
            const current = this.currentPage;
            const delta = 2;
            const range = [];
            const rangeWithDots = [];

            for (let i = 1; i <= total; i++) {
                if (i === 1 || i === total || (i >= current - delta && i <= current + delta)) {
                    range.push(i);
                }
            }

            let prev = 0;
            for (const i of range) {
                if (prev && i - prev > 1) {
                    rangeWithDots.push('...');
                }
                rangeWithDots.push(i);
                prev = i;
            }

            return rangeWithDots;
        },

        hasActiveFilters() {
            return this.filters.semester || this.filters.status || this.search;
        },

        clearFilters() {
            this.search = '';
            this.filters.semester = '';
            this.filters.status = '';
            this.filterData();
        }
    };
}
