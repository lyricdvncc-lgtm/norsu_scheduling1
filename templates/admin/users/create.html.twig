        departmentSelect.classList.remove('opacity-50', 'cursor-not-allowed');
        console.log('Department select enabled');
        
        // Function to update department options based on selected college
        function updateDepartmentOptions() {
            const selectedCollege = collegeSelect.value;
            const currentDepartmentId = departmentSelect.value;
            
            console.log('ðŸ”„ updateDepartmentOptions called');
            console.log('Selected college ID:', selectedCollege, '(type:', typeof selectedCollege, ')');
            console.log('Current department ID:', currentDepartmentId);
            
            // Try both string and numeric keys for compatibility
            const collegeKey = selectedCollege;
            const collegeKeyNum = parseInt(selectedCollege, 10);
            console.log('Trying keys:', collegeKey, 'and', collegeKeyNum);
            console.log('Checking if departmentsByCollege[' + selectedCollege + '] exists:', !!departmentsByCollege[selectedCollege]);
            console.log('Checking if departmentsByCollege[' + collegeKeyNum + '] exists:', !!departmentsByCollege[collegeKeyNum]);
            
            // Clear current department options
            departmentSelect.innerHTML = '<option value="">Select a department</option>';
            console.log('Cleared department options');
            
            // Find the departments - try both string and numeric keys
            let departments = null;
            if (selectedCollege && departmentsByCollege[selectedCollege]) {
