    $('#roleFilter').on('change', function() {
        const roleText = $(this).val();
        table.column(5).search(roleText).draw();
    });

    // Status filter - search by status text
    $('#statusFilter').on('change', function() {
        const statusText = $(this).val();
        table.column(-2).search(statusText).draw();
    });

    // College filter - filters departments AND table by college
    $('#collegeFilter').on('change', function() {
        const collegeId = $(this).val();
        filterDepartmentsByCollege();
        
        if (collegeId) {
            // Get all departments for this college
            const collegeDepts = [];
            $('#departmentFilter option').each(function() {
                const deptCollegeId = $(this).data('college-id');
                if (deptCollegeId == collegeId) {
                    collegeDepts.push($(this).text().trim());
                }
            });
            
            // Filter table to show only users from departments in this college
            if (collegeDepts.length > 0) {
                const searchPattern = collegeDepts.join('|');
                table.column(-3).search(searchPattern, true, false).draw();
            } else {
                table.column(-3).search('').draw();
            }
        } else {
            // Clear department filter when "All Colleges" is selected
            $('#departmentFilter').val('');
            table.column(-3).search('').draw();
        }
    });

    // Department filter - search by department text
    $('#departmentFilter').on('change', function() {
        const deptText = $(this).find('option:selected').text().trim();
        if ($(this).val() && deptText !== 'All Departments') {
            table.column(-3).search('^' + deptText + '$', true, false).draw();
        } else {
            // If "All Departments" selected but college is still selected, reapply college filter
            const collegeId = $('#collegeFilter').val();
            if (collegeId) {
                $('#collegeFilter').trigger('change');
            } else {
                table.column(-3).search('').draw();
            }
        }
    });

