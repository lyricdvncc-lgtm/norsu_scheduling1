{% extends 'admin/base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- DataTables CSS - Local -->
    <link rel="stylesheet" href="{{ asset('vendor/css/jquery.dataTables.min.css') }}">
    <style>
        /* Custom DataTables styling to match your theme */
        .dataTables_wrapper .dataTables_length {
            margin-bottom: 0;
        }
        
        .dataTables_wrapper .dataTables_length select {
            padding: 0.5rem 2.5rem 0.5rem 0.75rem;
            border-radius: 0.5rem;
            border: 1px solid #d1d5db;
            background-color: white;
            font-size: 0.875rem;
            margin: 0 0.5rem;
        }
        
        .dataTables_wrapper .dataTables_length label {
            font-size: 0.875rem;
            color: #4b5563;
            font-weight: 500;
        }
        
        .dataTables_wrapper .dataTables_filter input {
            padding: 0.5rem;
            border-radius: 0.5rem;
            border: 1px solid #d1d5db;
            margin-left: 0.5rem;
        }
        
        .dataTables_wrapper .dataTables_info {
            padding-top: 0;
            font-size: 0.875rem;
            color: #4b5563;
        }
        
        .dataTables_wrapper .dataTables_paginate {
            padding-top: 0;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.5rem 0.75rem;
            margin: 0 0.125rem;
            border-radius: 0.375rem;
            border: 1px solid #d1d5db;
            background: white;
            color: #374151;
            font-size: 0.875rem;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background: #4f46e5 !important;
            color: white !important;
            border: 1px solid #4f46e5 !important;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover:not(.disabled) {
            background: #eef2ff !important;
            color: #4f46e5 !important;
            border: 1px solid #4f46e5 !important;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button.disabled {
            opacity: 0.5;
            cursor: not-allowed;
            color: #9ca3af !important;
        }
        
        table.dataTable thead th {
            border-bottom: 2px solid #e5e7eb;
            padding: 0.75rem;
            font-weight: 600;
        }
        
        table.dataTable tbody tr:hover {
            background-color: #f9fafb;
        }
        
        /* Remove default DataTables search box since we have custom one */
        .dataTables_wrapper .dataTables_filter {
            display: none;
        }
    </style>
{% endblock %}

{% block main_content %}
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-semibold text-gray-900">{{ page_title }}</h1>
            {% if user_type_description is defined %}
                <p class="mt-1 text-sm text-gray-600">{{ user_type_description }}</p>
            {% endif %}
        </div>
        {% block page_actions %}
        <div class="flex space-x-3">
            {% if user_type == 'all' %}
                <a href="{{ path('admin_users_create') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Add New User
                </a>
            {% endif %}
        </div>
        {% endblock %}
    </div>

<!-- Statistics Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    {% block stats_cards %}
    <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <div class="flex items-center">
            <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
                    {% block stat_icon %}
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                    </svg>
                    {% endblock %}
                </div>
            </div>
            <div class="ml-4 flex-1">
                <p class="text-sm font-medium text-gray-600">{{ user_type == 'all' ? 'Total Users' : page_title }}</p>
                <p class="text-2xl font-bold text-gray-900">{{ pagination.total }}</p>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <div class="flex items-center">
            <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
            </div>
            <div class="ml-4 flex-1">
                <p class="text-sm font-medium text-gray-600">Active</p>
                <p class="text-2xl font-bold text-gray-900">{{ users|filter(u => u.isActive)|length }}</p>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <div class="flex items-center">
            <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"/>
                    </svg>
                </div>
            </div>
            <div class="ml-4 flex-1">
                <p class="text-sm font-medium text-gray-600">Inactive</p>
                <p class="text-2xl font-bold text-gray-900">{{ users|filter(u => not u.isActive)|length }}</p>
            </div>
        </div>
    </div>
    
    <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
        <div class="flex items-center">
            <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
            </div>
            <div class="ml-4 flex-1">
                <p class="text-sm font-medium text-gray-600">Recent Logins</p>
                <p class="text-2xl font-bold text-gray-900">{{ users|filter(u => u.lastLogin and u.lastLogin.format('U') > date('-7 days').format('U'))|length }}</p>
                <p class="text-xs text-gray-500 mt-1">Last 7 days</p>
            </div>
        </div>
    </div>
    {% endblock %}
</div>
<div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
    <!-- Filters Bar -->
    <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <div class="flex items-center justify-between gap-4">
            <h3 class="text-lg font-semibold text-gray-900">{{ page_title }} Directory</h3>
            
            <div class="flex items-center gap-3">
                <!-- Search Input -->
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                    </div>
                    <input type="text" id="searchInput" placeholder="Search users..." 
                           class="w-64 pl-9 pr-3 py-2 border border-gray-300 rounded-lg text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors">
                </div>

                {% if user_type == 'all' %}
                    <!-- Role Filter -->
                    <div class="filter-group">
                        <label for="roleFilter" class="sr-only">Filter by role</label>
                        <select id="roleFilter" name="role" class="w-36 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3 pr-8 bg-white hover:bg-gray-50 transition-colors">
                            <option value="">All Roles</option>
                            <option value="Administrator" {{ (filters.role|default(null)) == 1 ? 'selected' : '' }}>Administrator</option>
                            <option value="Department Head" {{ (filters.role|default(null)) == 2 ? 'selected' : '' }}>Department Head</option>
                            <option value="Faculty" {{ (filters.role|default(null)) == 3 ? 'selected' : '' }}>Faculty</option>
                        </select>
                    </div>
                {% endif %}
                
                <!-- Status Filter -->
                <div class="filter-group">
                    <label for="statusFilter" class="sr-only">Filter by status</label>
                    <select id="statusFilter" name="is_active" class="w-32 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3 pr-8 bg-white hover:bg-gray-50 transition-colors">
                        <option value="" selected>All Status</option>
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                </div>

                <!-- College Filter -->
                {% if user_type in ['all', 'department_heads', 'faculty'] %}
                <div class="filter-group">
                    <label for="collegeFilter" class="sr-only">Filter by college</label>
                    <select id="collegeFilter" name="college_id" class="w-40 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3 pr-8 bg-white hover:bg-gray-50 transition-colors">
                        <option value="">All Colleges</option>
                        {% if colleges is defined %}
                            {% for college in colleges %}
                                <option value="{{ college.id }}" {{ (filters.college_id|default(null)) == college.id ? 'selected' : '' }}>
                                    {{ college.name }}
                                </option>
                            {% endfor %}
                        {% endif %}
                    </select>
                </div>
                {% endif %}

                <!-- Department Filter -->
                {% if user_type in ['all', 'department_heads', 'faculty'] %}
                <div class="filter-group">
                    <label for="departmentFilter" class="sr-only">Filter by department</label>
                    <select id="departmentFilter" name="department_id" class="w-48 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3 pr-8 bg-white hover:bg-gray-50 transition-colors">
                        <option value="">All Departments</option>
                        {% if departments is defined %}
                            {% for department in departments %}
                                <option value="{{ department.id }}" 
                                        data-college-id="{{ department.college.id }}"
                                        {{ (filters.department_id|default(null)) == department.id ? 'selected' : '' }}>
                                    {{ department.name }}
                                </option>
                            {% endfor %}
                        {% endif %}
                    </select>
                </div>
                {% endif %}

                <!-- Clear Filters Button -->
                <button id="clearFilters" type="button" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                    <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                    Clear
                </button>
            </div>
        </div>
    </div>

    <!-- Table -->
    <!-- Table -->
    <!-- Table -->
    <div class="overflow-x-auto">
        <table id="usersTable" class="min-w-full divide-y divide-gray-200 display">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-32">Username</th>
                    <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-36">Name</th>
                    <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-44">Email</th>
                    <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-28">Employee ID</th>
                    {% if user_type == 'all' %}
                    <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-32">Role</th>
                    {% endif %}
                    {% if user_type in ['all', 'department_heads', 'faculty'] %}
                    <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Department</th>
                    {% endif %}
                    <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-20">Status</th>
                    <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-24" data-orderable="false">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for user in users %}
                <tr class="hover:bg-gray-50">
                    <td class="px-3 py-3 whitespace-nowrap text-sm font-medium text-gray-900">{{ user.username }}</td>
                    <td class="px-3 py-3 whitespace-nowrap text-sm text-gray-900">{{ user.fullName ?: '-' }}</td>
                    <td class="px-3 py-3 whitespace-nowrap text-sm text-gray-900">{{ user.email }}</td>
                    <td class="px-3 py-3 whitespace-nowrap text-sm text-gray-900">{{ user.employeeId ?: '-' }}</td>
                    {% if user_type == 'all' %}
                    <td class="px-3 py-3 whitespace-nowrap">
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full {{ user.role == 1 ? 'bg-red-100 text-red-800' : (user.role == 2 ? 'bg-yellow-100 text-yellow-800' : 'bg-blue-100 text-blue-800') }}">
                            {{ user.roleDisplayName }}
                        </span>
                    </td>
                    {% endif %}
                    {% if user_type in ['all', 'department_heads', 'faculty'] %}
                    <td class="px-3 py-3 text-sm text-gray-900">
                        {% if user.department %}
                            <div class="truncate max-w-xs" title="{{ user.department.name }}">{{ user.department.name }}</div>
                        {% else %}
                            <span class="text-gray-400">-</span>
                        {% endif %}
                    </td>
                    {% endif %}
                    <td class="px-3 py-3 whitespace-nowrap">
                        {% if user.isActive %}
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Active</span>
                        {% else %}
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Inactive</span>
                        {% endif %}
                    </td>
                    <td class="px-3 py-3 whitespace-nowrap text-sm font-medium">
                        <div class="flex items-center gap-2">
                            <a href="{{ path('admin_users_view', {id: user.id}) }}" 
                               class="text-indigo-600 hover:text-indigo-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-indigo-50 transition" 
                               title="View">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                </svg>
                            </a>
                            <a href="{{ path('admin_users_edit', {id: user.id, return_url: app.request.uri}) }}" 
                               class="text-gray-600 hover:text-gray-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-gray-100 transition" 
                               title="Edit">
                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                            </a>
                            {% if user.isActive %}
                                <form method="POST" action="{{ path('admin_users_deactivate', {id: user.id}) }}" 
                                      class="inline m-0">
                                    <input type="hidden" name="_token" value="{{ csrf_token('deactivate_user_' ~ user.id) }}">
                                    <button type="submit" 
                                            class="text-yellow-600 hover:text-yellow-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-yellow-50 transition" 
                                            title="Deactivate" 
                                            onclick="return confirm('Are you sure you want to deactivate this user?')">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"/>
                                        </svg>
                                    </button>
                                </form>
                            {% else %}
                                <form method="POST" action="{{ path('admin_users_activate', {id: user.id}) }}" 
                                      class="inline m-0">
                                    <input type="hidden" name="_token" value="{{ csrf_token('activate_user_' ~ user.id) }}">
                                    <button type="submit" 
                                            class="text-green-600 hover:text-green-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-green-50 transition" 
                                            title="Activate">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                        </svg>
                                    </button>
                                </form>
                            {% endif %}
                            <form method="POST" action="{{ path('admin_users_delete', {id: user.id}) }}" 
                                  class="inline m-0">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_user_' ~ user.id) }}">
                                <button type="submit" 
                                        class="text-red-600 hover:text-red-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-red-50 transition" 
                                        title="Delete" 
                                        onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="{% if user_type == 'all' %}8{% else %}7{% endif %}" class="px-3 py-12 text-center">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                        </svg>
                        <h3 class="mt-2 text-sm font-medium text-gray-900">No {{ page_title|lower }} found</h3>
                        <p class="mt-1 text-sm text-gray-500">{% if user_type == 'all' %}Get started by creating a new user.{% else %}No {{ page_title|lower }} match your current filters.{% endif %}</p>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Old pagination removed - DataTables handles pagination now -->
</div>

