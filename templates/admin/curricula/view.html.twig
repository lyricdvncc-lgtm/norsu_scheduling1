{% extends 'admin/base.html.twig' %}

{% block main_content %}
<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="bg-white rounded-xl shadow-lg p-8 mb-8 border border-gray-200">
        <div class="flex justify-between items-start">
            <div class="flex-1">
                <div class="flex items-center space-x-3 mb-3">
                    <h1 class="text-3xl font-bold text-gray-900">{{ curriculum.name }}</h1>
                    {% if curriculum.isPublished %}
                        <span class="px-3 py-1.5 bg-green-100 text-green-800 text-sm font-medium rounded-full">
                            <i class="fas fa-check-circle mr-1"></i>Published
                        </span>
                    {% else %}
                        <span class="px-3 py-1.5 bg-yellow-100 text-yellow-800 text-sm font-medium rounded-full">
                            <i class="fas fa-edit mr-1"></i>Draft
                        </span>
                    {% endif %}
                </div>
                <div class="flex items-center space-x-4 text-gray-600">
                    <span><i class="fas fa-hashtag mr-1"></i>ID: {{ curriculum.id }}</span>
                    <span><i class="fas fa-code-branch mr-1"></i>Version {{ curriculum.version ?? 1 }}</span>
                </div>
            </div>
            <div class="flex space-x-3">
                <a href="{{ path('admin_curriculum_subjects', {id: curriculum.id}) }}" class="bg-green-600 text-white px-5 py-3 rounded-lg font-medium hover:bg-green-700 transition duration-150 shadow-md">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    Manage Subjects
                </a>
                <button type="button" onclick="openUploadModal()" class="bg-blue-600 text-white px-5 py-3 rounded-lg font-medium hover:bg-blue-700 transition duration-150 shadow-md">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                    </svg>
                    Upload Curriculum
                </button>
                <a href="{{ path('admin_curricula_edit', {id: curriculum.id}) }}" class="bg-white text-orange-600 px-5 py-3 rounded-lg font-medium hover:bg-orange-50 transition duration-150 shadow-md">
                    <i class="fas fa-edit mr-2"></i>Edit
                </a>
                {% if curriculum.department and curriculum.department.id %}
                    <a href="{{ path('admin_curricula_by_department', {departmentId: curriculum.department.id}) }}" class="bg-orange-800 text-white px-5 py-3 rounded-lg font-medium hover:bg-orange-900 transition duration-150 shadow-md">
                        <i class="fas fa-arrow-left mr-2"></i>Back
                    </a>
                {% else %}
                    <a href="{{ path('admin_curricula') }}" class="bg-orange-800 text-white px-5 py-3 rounded-lg font-medium hover:bg-orange-900 transition duration-150 shadow-md">
                        <i class="fas fa-arrow-left mr-2"></i>Back to Curricula
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Flash Messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-6 p-4 rounded-lg {% if label == 'success' %}bg-green-50 border border-green-200 text-green-800{% elseif label == 'error' %}bg-red-50 border border-red-200 text-red-800{% else %}bg-blue-50 border border-blue-200 text-blue-800{% endif %}">
                <i class="fas {% if label == 'success' %}fa-check-circle{% elseif label == 'error' %}fa-exclamation-circle{% else %}fa-info-circle{% endif %} mr-2"></i>
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Curriculum Information -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-orange-50 to-orange-100 px-6 py-4 border-b border-orange-200">
                    <h2 class="text-xl font-bold text-orange-900">
                        <i class="fas fa-info-circle mr-2"></i>Curriculum Details
                    </h2>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-1">Curriculum Name</label>
                        <p class="text-gray-900 text-lg">{{ curriculum.name }}</p>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-1">Version</label>
                            <p class="text-gray-900">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-orange-100 text-orange-800">
                                    v{{ curriculum.version ?? 1 }}
                                </span>
                            </p>
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-1">Status</label>
                            <p class="text-gray-900">
                                {% if curriculum.isPublished %}
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                        <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>Published
                                    </span>
                                {% else %}
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                                        <span class="w-2 h-2 bg-yellow-500 rounded-full mr-2"></span>Draft
                                    </span>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    {% if curriculum.effectiveYearId %}
                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            <div>
                                <label class="block text-sm font-semibold text-blue-900">Effective Academic Year</label>
                                <p class="text-blue-700 font-medium">
                                    {# This will be populated by the service layer #}
                                    {% if curriculum.effectiveYearId %}
                                        Academic Year ID: {{ curriculum.effectiveYearId }}
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    {% if curriculum.notes %}
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Notes</label>
                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                            <p class="text-gray-700 whitespace-pre-wrap">{{ curriculum.notes }}</p>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Department Information -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-purple-50 to-purple-100 px-6 py-4 border-b border-purple-200">
                    <h2 class="text-xl font-bold text-purple-900">
                        <i class="fas fa-building mr-2"></i>Department & College
                    </h2>
                </div>
                <div class="p-6">
                    {% set department = curriculum.department %}
                    {% set college = department ? department.college : null %}
                    
                    {# Display department and college information #}
                    {% if department %}
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">Department</label>
                                <div class="flex items-center space-x-3">
                                    <span class="px-3 py-1 bg-purple-100 text-purple-800 text-sm font-medium rounded">
                                        {{ department.name }}
                                    </span>
                                </div>
                                {% if college %}
                                <p class="mt-2 text-sm text-gray-600">
                                    <i class="fas fa-university mr-1"></i>{{ college.name }}
                                </p>
                                {% endif %}
                            </div>
                        </div>
                    {% else %}
                        <p class="text-gray-500 italic">No department assigned</p>
                    {% endif %}
                </div>
            </div>

            <!-- Timeline -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-blue-50 to-blue-100 px-6 py-4 border-b border-blue-200">
                    <h2 class="text-xl font-bold text-blue-900">
                        <i class="fas fa-clock mr-2"></i>Timeline
                    </h2>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-plus text-green-600"></i>
                                </div>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm font-semibold text-gray-900">Created</p>
                                <p class="text-sm text-gray-500">{{ curriculum.createdAt|date('F d, Y \\a\\t g:i A') }}</p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-edit text-blue-600"></i>
                                </div>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm font-semibold text-gray-900">Last Updated</p>
                                <p class="text-sm text-gray-500">{{ curriculum.updatedAt|date('F d, Y \\a\\t g:i A') }}</p>
                            </div>
                        </div>

                        {% if curriculum.deletedAt %}
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-trash text-red-600"></i>
                                </div>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm font-semibold text-gray-900">Deleted</p>
                                <p class="text-sm text-gray-500">{{ curriculum.deletedAt|date('F d, Y \\a\\t g:i A') }}</p>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1 space-y-6">
            <!-- Quick Actions -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-slate-700 to-slate-800 px-6 py-4 border-b border-slate-600">
                    <h2 class="text-lg font-bold text-white">
                        <i class="fas fa-bolt mr-2"></i>Quick Actions
                    </h2>
                </div>
                <div class="p-4 space-y-3">
                    <a href="{{ path('admin_curricula_edit', {id: curriculum.id}) }}" class="block w-full bg-orange-600 text-white px-4 py-3 rounded-lg font-medium hover:bg-orange-700 transition duration-150 text-center">
                        <i class="fas fa-edit mr-2"></i>Edit Curriculum
                    </a>

                    <form method="post" action="{{ path('admin_curricula_toggle_publish', {id: curriculum.id}) }}" class="w-full">
                        <input type="hidden" name="_token" value="{{ csrf_token('toggle_publish_curriculum_' ~ curriculum.id) }}">
                        <button type="submit" class="w-full {% if curriculum.isPublished %}bg-yellow-600 hover:bg-yellow-700{% else %}bg-green-600 hover:bg-green-700{% endif %} text-white px-4 py-3 rounded-lg font-medium transition duration-150">
                            <i class="fas {% if curriculum.isPublished %}fa-times-circle{% else %}fa-check-circle{% endif %} mr-2"></i>
                            {% if curriculum.isPublished %}Unpublish{% else %}Publish{% endif %}
                        </button>
                    </form>

                    <form method="post" action="{{ path('admin_curricula_delete', {id: curriculum.id}) }}" class="w-full" onsubmit="return confirm('Are you sure you want to delete this curriculum? This action cannot be undone.');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_curriculum_' ~ curriculum.id) }}">
                        <button type="submit" class="w-full bg-red-600 text-white px-4 py-3 rounded-lg font-medium hover:bg-red-700 transition duration-150">
                            <i class="fas fa-trash mr-2"></i>Delete Curriculum
                        </button>
                    </form>
                </div>
            </div>

            <!-- Statistics -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 px-6 py-4 border-b border-indigo-500">
                    <h2 class="text-lg font-bold text-white">
                        <i class="fas fa-chart-bar mr-2"></i>Statistics
                    </h2>
                </div>
                <div class="p-4 space-y-4">
                    <div class="bg-gray-50 rounded-lg p-4">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Curriculum ID</span>
                            <span class="text-lg font-bold text-gray-900">#{{ curriculum.id }}</span>
                        </div>
                    </div>

                    <div class="bg-gray-50 rounded-lg p-4">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Version</span>
                            <span class="text-lg font-bold text-gray-900">{{ curriculum.version ?? 1 }}</span>
                        </div>
                    </div>

                    <div class="bg-gray-50 rounded-lg p-4">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Status</span>
                            <span class="text-lg font-bold {% if curriculum.isPublished %}text-green-600{% else %}text-yellow-600{% endif %}">
                                {% if curriculum.isPublished %}Published{% else %}Draft{% endif %}
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Information -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-info-circle text-blue-600"></i>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-semibold text-blue-800 mb-1">About Curricula</h3>
                        <p class="text-sm text-blue-700">
                            Curricula define the course structure and requirements for specific academic programs within departments.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Curriculum Subjects Section -->
    <div class="mt-8">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="bg-gradient-to-r from-purple-50 to-purple-100 px-6 py-4 border-b border-purple-200">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-bold text-purple-900">
                        <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                        Curriculum Subjects
                    </h2>
                    <div class="flex items-center space-x-2">
                        <span class="px-3 py-1 bg-purple-200 text-purple-800 text-sm font-semibold rounded-full">
                            {{ curriculum.totalSubjects ?? 0 }} Subjects
                        </span>
                        <span class="px-3 py-1 bg-purple-200 text-purple-800 text-sm font-semibold rounded-full">
                            {{ curriculum.totalUnits ?? 0 }} Units
                        </span>
                    </div>
                </div>
            </div>
            <div class="p-6">
                {% set terms = curriculum.curriculumTerms %}
                {% if terms is not empty %}
                    <!-- Display by Terms -->
                    <div class="space-y-6">
                        {% for term in terms %}
                            <div class="border-l-4 border-purple-500 bg-purple-50 p-4 rounded-r-lg">
                                <div class="flex items-center justify-between mb-4">
                                    <h3 class="text-lg font-bold text-purple-900">
                                        {{ term.displayName }}
                                    </h3>
                                    <div class="flex items-center space-x-2">
                                        <span class="text-sm text-purple-700">
                                            {{ term.curriculumSubjects|length }} subjects
                                        </span>
                                        <span class="text-sm text-purple-700">•</span>
                                        <span class="text-sm text-purple-700">
                                            {{ term.getTotalUnits() }} units
                                        </span>
                                    </div>
                                </div>

                                {% if term.curriculumSubjects is not empty %}
                                    <div class="overflow-x-auto">
                                        <table class="min-w-full divide-y divide-gray-200">
                                            <thead class="bg-gray-50">
                                                <tr>
                                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
                                                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject Title</th>
                                                    <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Units</th>
                                                    <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Lec</th>
                                                    <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Lab</th>
                                                    <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                                    <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                                </tr>
                                            </thead>
                                            <tbody class="bg-white divide-y divide-gray-200">
                                                {% for curriculumSubject in term.curriculumSubjects %}
                                                    {% set subject = curriculumSubject.subject %}
                                                    <tr class="hover:bg-gray-50 transition">
                                                        <td class="px-4 py-3 whitespace-nowrap">
                                                            <span class="text-sm font-semibold text-purple-700">{{ subject.code }}</span>
                                                        </td>
                                                        <td class="px-4 py-3">
                                                            <div class="text-sm font-medium text-gray-900">{{ subject.title }}</div>
                                                        </td>
                                                        <td class="px-4 py-3 text-center whitespace-nowrap">
                                                            <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs font-semibold rounded">{{ subject.units }}</span>
                                                        </td>
                                                        <td class="px-4 py-3 text-center whitespace-nowrap">
                                                            <span class="text-sm text-gray-700">{{ subject.lectureHours }}h</span>
                                                        </td>
                                                        <td class="px-4 py-3 text-center whitespace-nowrap">
                                                            <span class="text-sm text-gray-700">{{ subject.labHours }}h</span>
                                                        </td>
                                                        <td class="px-4 py-3 text-center whitespace-nowrap">
                                                            <span class="text-xs px-2 py-1 bg-gray-100 text-gray-700 rounded capitalize">
                                                                {{ subject.type|replace({'_': ' '}) }}
                                                            </span>
                                                        </td>
                                                        <td class="px-4 py-3 text-center whitespace-nowrap">
                                                            <span class="inline-flex items-center px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-semibold rounded">
                                                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                                                </svg>
                                                                Required
                                                            </span>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                {% else %}
                                    <p class="text-center text-gray-500 py-4">No subjects in this term</p>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <!-- Empty State -->
                    <div class="text-center py-12">
                        <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                        <h3 class="mt-4 text-lg font-medium text-gray-900">No subjects yet</h3>
                        <p class="mt-2 text-sm text-gray-500">Get started by uploading a curriculum file or managing subjects manually.</p>
                        <div class="mt-6 flex justify-center space-x-3">
                            <button type="button" onclick="openUploadModal()" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                                </svg>
                                Upload Curriculum
                            </button>
                            <a href="{{ path('admin_curriculum_subjects', {id: curriculum.id}) }}" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                                </svg>
                                Manage Manually
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Upload Curriculum Modal -->
    <div id="uploadModal" class="hidden fixed inset-0 bg-black bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-0 border-0 w-11/12 max-w-4xl shadow-2xl rounded-xl bg-white">
            <!-- Modal Header -->
            <div class="flex items-center justify-between p-6 border-b border-gray-200 bg-gradient-to-r from-blue-50 to-blue-100">
                <div>
                    <h3 class="text-2xl font-bold text-blue-900">Upload Curriculum</h3>
                    <p class="text-sm text-blue-700 mt-1">Import subjects from Excel or CSV file</p>
                </div>
                <button onclick="closeUploadModal()" class="text-gray-400 hover:text-gray-600 transition">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
