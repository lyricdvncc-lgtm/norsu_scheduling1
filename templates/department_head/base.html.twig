    <script>
        function toggleMobileMenu() {
            const overlay = document.getElementById('mobile-menu-overlay');
            overlay.classList.toggle('hidden');
        }
        
        // Close dropdown on navigation
        document.addEventListener('DOMContentLoaded', function() {
            // Close dropdown when clicking any navigation link
            const navLinks = document.querySelectorAll('a[href]');
            navLinks.forEach(link => {
                link.addEventListener('click', function() {
                    // This will trigger before navigation
                    const dropdowns = document.querySelectorAll('[x-data]');
                    dropdowns.forEach(dropdown => {
                        // Reset Alpine data
                        if (window.Alpine && dropdown.__x) {
                            dropdown.__x.$data.open = false;
                        }
                    });
                });
            });
        });
        
        // Handle Turbo navigation if using Turbo
        document.addEventListener('turbo:before-visit', function() {
            const dropdowns = document.querySelectorAll('[x-data]');
            dropdowns.forEach(dropdown => {
                if (window.Alpine && dropdown.__x) {
                    dropdown.__x.$data.open = false;
                }
            });
        });
        
        // Ensure dropdown is closed after page load
        document.addEventListener('turbo:load', function() {
            setTimeout(() => {
                const dropdowns = document.querySelectorAll('[x-data]');
                dropdowns.forEach(dropdown => {
                    if (window.Alpine && dropdown.__x) {
                        dropdown.__x.$data.open = false;
                    }
                });
            }, 0);
        });
    </script>
    
