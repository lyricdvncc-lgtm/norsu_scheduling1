        async function saveSubjects() {
            // Validate that a term is selected
            if (!currentTermId) {
                alert('Please select a term first. Use "Add Custom Term" or "Generate Default Terms" to create terms, then click "Add Subject" on a specific term.');
                return;
            }
            
            // Collect all course data
            const courseItems = document.querySelectorAll('.course-item');
            const courses = [];
            
            // Validate and collect data
            let isValid = true;
            courseItems.forEach((item, index) => {
                const code = item.querySelector('input[name="course_code[]"]').value.trim();
                const title = item.querySelector('input[name="course_title[]"]').value.trim();
                const units = item.querySelector('input[name="units[]"]').value;
                const lec = item.querySelector('input[name="lec[]"]').value;
                const lab = item.querySelector('input[name="lab[]"]').value;
                const courseType = item.querySelector('select[name="course_type[]"]').value;
                const required = item.querySelector('input[name="required[]"]').checked;
                
                if (!code || !title || !units) {
                    isValid = false;
                    alert(`Please fill in all required fields for Course ${index + 1}`);
                    return;
                }
                
                courses.push({
                    code,
                    title,
                    units: parseInt(units),
                    lecture_hours: parseInt(lec),
                    lab_hours: parseInt(lab),
                    type: courseType,
                    is_required: required
                });
            });
            
            if (!isValid) return;
            
            // Use the new batch endpoint
            try {
                const response = await fetch(`/admin/curricula/terms/${currentTermId}/subjects/add-batch`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ courses })
                });
                
                // Get response text first
                const responseText = await response.text();
                
                // Check if response is ok
                if (!response.ok) {
                    console.error('Server error:', responseText);
                    throw new Error(`Server returned ${response.status}: ${response.statusText}`);
                }
                
                // Try to parse as JSON
                let data;
                try {
                    data = JSON.parse(responseText);
                } catch (jsonError) {
                    console.error('Invalid JSON response:', responseText);
                    throw new Error('Server returned invalid response. Please check the browser console for details.');
                }
                
                if (data.success) {
                    // Show success message without blocking
                    const successMsg = document.createElement('div');
                    successMsg.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg z-50 animate-fade-in';
                    successMsg.innerHTML = `
                        <div class="flex items-center">
                            <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span>Successfully added ${data.added_count} subject(s)!</span>
                        </div>
                    `;
                    document.body.appendChild(successMsg);
                    setTimeout(() => successMsg.remove(), 3000);
                    
                    // Show warnings if any
                    if (data.errors && data.errors.length > 0) {
                        const warningMsg = document.createElement('div');
                        warningMsg.className = 'fixed top-20 right-4 bg-yellow-500 text-white px-6 py-4 rounded-lg shadow-lg z-50 animate-fade-in max-w-md';
                        warningMsg.innerHTML = `
                            <div class="font-semibold mb-2">Warnings:</div>
                            <ul class="text-sm list-disc list-inside">
                                ${data.errors.map(err => `<li>${err}</li>`).join('')}
                            </ul>
                        `;
                        document.body.appendChild(warningMsg);
                        setTimeout(() => warningMsg.remove(), 5000);
                    }
                    
                    closeAddSubjectModal();
                    // Explicitly redirect to Manage Subjects page to ensure we stay here
                    setTimeout(() => {
                        window.location.href = '{{ path('admin_curriculum_subjects', {id: curriculum.id}) }}';
                    }, 1500);
                } else {
                    // Show error message
                    const errorMsg = document.createElement('div');
                    errorMsg.className = 'fixed top-4 right-4 bg-red-500 text-white px-6 py-4 rounded-lg shadow-lg z-50 max-w-md';
                    errorMsg.innerHTML = `
                        <div class="flex items-start">
                            <svg class="w-6 h-6 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <div>
                                <div class="font-semibold mb-1">Error: ${data.message}</div>
                                ${data.errors && data.errors.length > 0 ? `
                                    <ul class="text-sm list-disc list-inside mt-2">
                                        ${data.errors.map(err => `<li>${err}</li>`).join('')}
                                    </ul>
                                ` : ''}
                            </div>
                        </div>
                    `;
                    document.body.appendChild(errorMsg);
                    setTimeout(() => errorMsg.remove(), 5000);
                }
            } catch (error) {
                console.error('Error:', error);
                const errorMsg = document.createElement('div');
                errorMsg.className = 'fixed top-4 right-4 bg-red-500 text-white px-6 py-4 rounded-lg shadow-lg z-50 max-w-md';
                errorMsg.innerHTML = `
                    <div class="flex items-start">
                        <svg class="w-6 h-6 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <div class="font-semibold mb-1">Error</div>
                            <div class="text-sm">${error.message || 'Error adding subjects. Please try again.'}</div>
                        </div>
                    </div>
                `;
                document.body.appendChild(errorMsg);
                setTimeout(() => errorMsg.remove(), 8000);
            }
        }

        // Upload Curriculum Modal Functions
        let selectedCurriculumFile = null;

        function openUploadCurriculumModal() {
            document.getElementById('uploadCurriculumModal').classList.remove('hidden');
