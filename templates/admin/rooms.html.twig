{% extends 'admin/base.html.twig' %}

{% block title %}Rooms Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- DataTables CSS - Local -->
    <link rel="stylesheet" href="{{ asset('vendor/css/jquery.dataTables.min.css') }}">
    <style>
        /* Override DataTables default row striping (uses box-shadow on cells) */
        table.dataTable tbody tr {
            background-color: #ffffff !important;
        }
        table.dataTable tbody tr > * {
            box-shadow: none !important;
        }
        table.dataTable tbody tr:hover {
            background-color: #f9fafb !important;
        }
    </style>
{% endblock %}

{% block main_content %}
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div class="flex-1 min-w-0">
                <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">
                    Rooms Management
                </h1>
                <p class="mt-2 text-sm text-gray-500">
                    Manage classrooms, laboratories, auditoriums, and office spaces
                </p>
            </div>
            <div class="mt-5 flex lg:mt-0 lg:ml-4">
                <a href="{{ path('admin_rooms_create') }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Add New Room
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">Total Rooms</p>
                    <p class="text-2xl font-bold text-gray-900">{{ statistics.total }}</p>
                    <p class="text-xs text-green-600 mt-1">{{ statistics.active }} active</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">Total Capacity</p>
                    <p class="text-2xl font-bold text-gray-900">{{ statistics.total_capacity }}</p>
                    <p class="text-xs text-gray-500 mt-1">Across all rooms</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">Buildings</p>
                    <p class="text-2xl font-bold text-gray-900">{{ buildings|length }}</p>
                    <p class="text-xs text-gray-500 mt-1">{{ statistics.building_counts|length }} locations</p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">Recently Added</p>
                    <p class="text-2xl font-bold text-gray-900">{{ statistics.recent }}</p>
                    <p class="text-xs text-gray-500 mt-1">Last 7 days</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Rooms Table -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
        <!-- Filters Bar -->
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <div class="flex items-center justify-between gap-4">
                <h3 class="text-lg font-semibold text-gray-900">Rooms Directory</h3>
                
                <div class="flex items-center gap-3" id="filtersContainer">
                    
                    <!-- Department Filter -->
                    <div class="filter-group">
                        <label for="departmentFilter" class="sr-only">Filter by department</label>
                        <select id="departmentFilter" class="w-48 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3 pr-8 bg-white hover:bg-gray-50 transition-colors">
                            <option value="">All Departments</option>
                            {% for dept in departments %}
                                <option value="{{ dept.id }}">
                                    {{ dept.code }} - {{ dept.name }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    
                    <!-- Type Filter -->
                    <div class="filter-group">
                        <label for="typeFilter" class="sr-only">Filter by room type</label>
                        <select id="typeFilter" class="w-40 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3 pr-8 bg-white hover:bg-gray-50 transition-colors">
                            <option value="" selected>All Types</option>
                            <option value="Classroom">Classroom</option>
                            <option value="Laboratory">Laboratory</option>
                            <option value="Auditorium">Auditorium</option>
                            <option value="Office">Office</option>
                        </select>
                    </div>

                    <!-- Status Filter -->
                    <div class="filter-group">
                        <label for="statusFilter" class="sr-only">Filter by status</label>
                        <select id="statusFilter" class="w-32 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3 pr-8 bg-white hover:bg-gray-50 transition-colors">
                            <option value="" selected>All Status</option>
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </div>

                    <!-- Clear Filters Button -->
                    <button type="button" id="clearFilters" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                        <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                        Clear
                    </button>
                </div>
            </div>
        </div>

        <!-- Table Content -->
        <div class="overflow-x-auto">
            <table id="roomsTable" class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Room Info</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Department</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Building/Floor</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Capacity</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% if rooms is empty %}
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center">
                                <p class="text-gray-500">No rooms found</p>
                                <a href="{{ path('admin_rooms_create') }}" class="mt-4 inline-flex items-center px-4 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
                                    Add New Room
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        {% for room in rooms %}
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10 bg-blue-100 rounded-lg flex items-center justify-center">
                                            <span class="text-xl">{{ room.typeIcon }}</span>
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900">{{ room.name }}</div>
                                            <div class="text-sm text-gray-500">{{ room.code }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full {{ room.typeBadgeClass }}">
                                        {{ room.type|default('N/A')|capitalize }}
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm text-gray-900">{{ room.department ? room.department.code : 'N/A' }}</div>
                                    {% if room.departmentGroup %}
                                        <div class="text-xs text-blue-600 mt-1" title="Shared via department group">
                                            <span class="inline-flex items-center">
                                                <svg class="h-3 w-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                                </svg>
                                                {{ room.departmentGroup.name }}
                                            </span>
                                        </div>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm text-gray-900">{{ room.building|default('N/A') }}</div>
                                    <div class="text-sm text-gray-500">{{ room.floor|default('N/A') }}</div>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-900">{{ room.capacity|default('N/A') }}</td>
                                <td class="px-6 py-4">
                                    {% if room.isActive %}
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Active</span>
                                    {% else %}
                                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Inactive</span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2">
                                        <a href="{{ path('admin_rooms_view', {id: room.id}) }}" 
                                           class="text-indigo-600 hover:text-indigo-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-indigo-50 transition" 
                                           title="View">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                            </svg>
                                        </a>
                                        <a href="{{ path('admin_rooms_schedule_pdf', {id: room.id}) }}" 
                                           target="_blank"
                                           class="text-green-600 hover:text-green-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-green-50 transition" 
                                           title="Download Schedule PDF">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                            </svg>
                                        </a>
                                        <a href="{{ path('admin_rooms_history', {id: room.id}) }}" 
                                           class="text-purple-600 hover:text-purple-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-purple-50 transition" 
                                           title="View History">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                        </a>
                                        <a href="{{ path('admin_rooms_edit', {id: room.id}) }}" 
                                           class="text-gray-600 hover:text-gray-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-gray-100 transition" 
                                           title="Edit">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                            </svg>
                                        </a>
                                        <form method="POST" action="{{ path('admin_rooms_delete', {id: room.id}) }}" class="inline m-0 delete-form" onsubmit="return confirm('Delete this room?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete_room_' ~ room.id) }}">
                                            <button type="submit" 
                                                    class="text-red-600 hover:text-red-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-red-50 transition" 
                                                    title="Delete">
                                                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('vendor/js/jquery.min.js') }}"></script>
<script src="{{ asset('vendor/js/jquery.dataTables.min.js') }}"></script>

<script>
$(document).ready(function() {
    // Get URL parameters
    const urlParams = new URLSearchParams(window.location.search);
    
    {% if rooms is not empty %}
    // Destroy existing DataTable if it exists
    if ($.fn.DataTable.isDataTable('#roomsTable')) {
        $('#roomsTable').DataTable().destroy();
    }
    
    // Get sort order from URL or use default
    const sortCol = parseInt(urlParams.get('sort_col')) || 0;
    const sortDir = urlParams.get('sort_dir') || 'asc';
    
    // Initialize DataTable
    const table = $('#roomsTable').DataTable({
        paging: false,
        info: false,
        lengthChange: false,
        order: [[sortCol, sortDir]],
        columnDefs: [{ orderable: false, targets: 6 }],
        dom: 'frt',
        language: {
            search: "_INPUT_",
            searchPlaceholder: "Search rooms..."
        },
        drawCallback: function() {
            // Ensure search box is properly styled after any redraw
            $('.dataTables_filter input').addClass('w-64 pl-9 pr-3 py-2 border border-gray-300 rounded-lg text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors');
        }
    });
    
    // Move and style search box
    $('.dataTables_filter').prependTo('#filtersContainer');
    $('.dataTables_filter').addClass('relative').prepend('<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"><svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg></div>');
    $('.dataTables_filter input').addClass('w-64 pl-9 pr-3 py-2 border border-gray-300 rounded-lg text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors');
    
    // Restore search from URL
    const searchParam = urlParams.get('search');
    if (searchParam) {
        $('.dataTables_filter input').val(searchParam);
        table.search(searchParam).draw();
    }
    
    // Custom search function for department filtering
    let currentDeptFilter = '';
    $.fn.dataTable.ext.search.push(
        function(settings, data, dataIndex) {
            if (!currentDeptFilter) {
                return true; // Show all if no filter
            }
            const deptColumn = data[2]; // Column 2 is department
            // Check if department code appears in the column
            return deptColumn.includes(currentDeptFilter);
        }
    );
    
    // Restore department filter from URL
    const deptParam = urlParams.get('department_id');
    if (deptParam) {
        $('#departmentFilter').val(deptParam);
        const selectedDept = $('#departmentFilter option:selected').text();
        if (selectedDept && selectedDept !== 'All Departments') {
            currentDeptFilter = selectedDept.split(' - ')[0].trim();
            table.draw();
        }
    }
    
    // Restore type filter from URL
    const typeParam = urlParams.get('type');
    if (typeParam) {
        $('#typeFilter').val(typeParam);
        table.column(1).search(typeParam).draw();
    }
    
    // Restore status filter from URL
    const statusParam = urlParams.get('is_active');
    if (statusParam) {
        const statusValue = statusParam === '1' ? 'Active' : 'Inactive';
        $('#statusFilter').val(statusValue);
        table.column(5).search(statusValue).draw();
    }
    
    // ===== EVENT HANDLERS =====
    
    // Save sort order to URL when clicking column headers
    table.on('order.dt', function() {
        const order = table.order();
        if (order.length > 0) {
            const url = new URL(window.location);
            url.searchParams.set('sort_col', order[0][0]);
            url.searchParams.set('sort_dir', order[0][1]);
            window.history.replaceState({}, '', url);
        }
    });
    
    // Update URL when search changes (debounced)
    let searchTimeout;
    $(document).on('keyup search', '.dataTables_filter input', function() {
        clearTimeout(searchTimeout);
        const searchValue = $(this).val();
        searchTimeout = setTimeout(function() {
            const url = new URL(window.location);
            if (searchValue) {
                url.searchParams.set('search', searchValue);
            } else {
                url.searchParams.delete('search');
            }
            window.history.replaceState({}, '', url);
        }, 300);
    });
    
    // Department filter (client-side, NO page reload!)
    $('#departmentFilter').on('change', function() {
        const departmentId = $(this).val();
        const selectedText = $(this).find('option:selected').text();
        
        if (departmentId) {
            // Extract department code (e.g., "BSIT" from "BSIT - Information Technology")
            currentDeptFilter = selectedText.split(' - ')[0].trim();
        } else {
            // Clear department filter
            currentDeptFilter = '';
        }
        
        table.draw();
        
        // Update URL without reload
        const url = new URL(window.location);
        if (departmentId) {
            url.searchParams.set('department_id', departmentId);
        } else {
            url.searchParams.delete('department_id');
        }
        window.history.replaceState({}, '', url);
    });
    
    // Type filter (client-side)
    $('#typeFilter').on('change', function() {
        const typeValue = $(this).val();
        table.column(1).search(typeValue).draw();
        
        const url = new URL(window.location);
        if (typeValue) {
            url.searchParams.set('type', typeValue);
        } else {
            url.searchParams.delete('type');
        }
        window.history.replaceState({}, '', url);
    });
    
    // Status filter (client-side)
    $('#statusFilter').on('change', function() {
        const statusValue = $(this).val();
        table.column(5).search(statusValue).draw();
        
        const url = new URL(window.location);
        if (statusValue) {
            url.searchParams.set('is_active', statusValue === 'Active' ? '1' : '0');
        } else {
            url.searchParams.delete('is_active');
        }
        window.history.replaceState({}, '', url);
    });
    
    // Clear all filters
    $('#clearFilters').on('click', function() {
        $('#departmentFilter').val('');
        $('#typeFilter').val('');
        $('#statusFilter').val('');
        table.search('').columns().search('').draw();
        $('.dataTables_filter input').val('');
        
        // Clear URL parameters
        window.history.replaceState({}, '', '{{ path("admin_rooms") }}');
    });
    
    {% endif %}
    
    // Prevent Enter key from submitting forms
    $('body').on('keypress', 'input:not([type="submit"])', function(e) {
        if (e.which === 13) {
            e.preventDefault();
            return false;
        }
    });
});
</script>
{% endblock %}
