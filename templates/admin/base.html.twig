    <!-- Preserve sidebar scroll position across page loads -->
    <script>
        (function() {
            var sidebar = document.getElementById('desktop-sidebar');
            if (!sidebar) return;

            // Restore scroll position instantly before paint  sidebar appears exactly where it was
            var saved = sessionStorage.getItem('sidebarScrollTop');
            if (saved !== null) {
                sidebar.scrollTop = parseInt(saved, 10);
            }

            // Continuously save scroll position so it's always up to date
            var ticking = false;
            sidebar.addEventListener('scroll', function() {
                if (!ticking) {
                    ticking = true;
                    requestAnimationFrame(function() {
                        sessionStorage.setItem('sidebarScrollTop', sidebar.scrollTop);
                        ticking = false;
                    });
                }
            }, { passive: true });

            // Also save on navigation
            window.addEventListener('beforeunload', function() {
                sessionStorage.setItem('sidebarScrollTop', sidebar.scrollTop);
            });
        })();
    </script>

