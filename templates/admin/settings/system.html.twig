    {% extends 'admin/base.html.twig' %}

{% block title %}System Settings - Smart Scheduling System{% endblock %}

{% block main_content %}
<div class="py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
        <!-- Page Header -->
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-900">System Settings</h1>
            <p class="mt-1 text-sm text-gray-600">Manage system-wide configuration and active semester</p>
        </div>

        <!-- Active Semester Status Card -->
        <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl shadow-lg p-6 mb-6">
            <div class="flex items-center justify-between">
                <div>
                    <div class="flex items-center">
                        <svg class="h-8 w-8 text-white mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <div>
                            <h2 class="text-lg font-medium text-white">Current Active Semester</h2>
                            <p class="text-blue-100 text-sm">All schedule operations are performed in this semester</p>
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    {% if hasActiveSemester %}
                        <div class="text-2xl font-bold text-white">{{ activeSemesterDisplay }}</div>
                        {% if auto_transition_status.has_dates %}
                            <p class="text-blue-100 text-sm mt-1">
                                {{ auto_transition_status.semester_start }} &mdash; {{ auto_transition_status.semester_end }}
                                {% if auto_transition_status.days_remaining is not null %}
                                    {% if auto_transition_status.is_expired %}
                                        <span class="inline-flex items-center ml-2 px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Expired</span>
                                    {% elseif auto_transition_status.days_remaining <= 14 %}
                                        <span class="inline-flex items-center ml-2 px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">{{ auto_transition_status.days_remaining }} days left</span>
                                    {% else %}
                                        <span class="inline-flex items-center ml-2 px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">{{ auto_transition_status.days_remaining }} days left</span>
                                    {% endif %}
                                {% endif %}
                            </p>
                        {% endif %}
                        <div class="flex items-center justify-end mt-1">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                <svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                </svg>
                                Active
                            </span>
                        </div>
                    {% else %}
                        <div class="text-xl font-medium text-white">No Active Semester Set</div>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800 mt-1">
                            <svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                            </svg>
                            Configuration Required
                        </span>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Change Active Semester Section -->
        <div class="bg-white shadow-md rounded-xl overflow-hidden mb-6">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h3 class="text-lg font-semibold text-gray-900">Change Active Semester</h3>
                <p class="text-sm text-gray-600 mt-1">Select the academic year and semester to activate</p>
            </div>
            
            <div class="p-6">
                <form id="semesterChangeForm" class="space-y-6" data-edit-form="true">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Academic Year Selection -->
                        <div>
                            <label for="academic_year" class="block text-sm font-medium text-gray-700 mb-2">
                                Academic Year <span class="text-red-500">*</span>
                            </label>
                            <select id="academic_year" name="academic_year_id" 
                                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                                <option value="">Select Academic Year</option>
                                {% for year in academic_years %}
                                    <option value="{{ year.id }}" {% if active_year and active_year.id == year.id %}selected{% endif %}>
                                        {{ year.year }}{% if year.isCurrent %} (Current){% endif %}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <!-- Semester Selection -->
                        <div>
                            <label for="semester" class="block text-sm font-medium text-gray-700 mb-2">
                                Semester <span class="text-red-500">*</span>
                            </label>
                            <select id="semester" name="semester" 
                                    class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                                <option value="">Select Semester</option>
                                {% for sem in available_semesters %}
                                    <option value="{{ sem }}" {% if active_semester == sem %}selected{% endif %}>
                                        {{ sem }} Semester
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <!-- Semester Date Ranges (all 3 semesters) -->
                    <div id="semesterDatesSection" class="hidden">
                        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                            <div class="flex items-center mb-4">
                                <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                                <h4 class="text-sm font-semibold text-blue-800">Semester Date Ranges</h4>
                                <span class="ml-2 text-xs text-blue-600">(Used for auto-transition)</span>
                            </div>

                            <div class="space-y-4">
                                <!-- 1st Semester Dates -->
                                <div class="bg-white rounded-lg p-3 border border-blue-100">
                                    <div class="flex items-center justify-between mb-2">
                                        <h5 class="text-xs font-semibold text-gray-600 uppercase tracking-wider">1st Semester</h5>
                                        <button type="button" data-clear-semester="1st" title="Clear 1st Semester dates"
                                                class="clear-semester-btn text-xs text-gray-400 cursor-not-allowed px-2 py-0.5 rounded transition-colors">
                                            <svg class="inline h-3.5 w-3.5 mr-0.5 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                            Clear
                                        </button>
                                    </div>
                                    <div class="grid grid-cols-2 gap-3">
                                        <div>
                                            <label for="semester_1st_start" class="block text-xs font-medium text-gray-500 mb-1">Start Date</label>
                                            <input type="date" id="semester_1st_start" name="semester_1st_start"
                                                   class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                                        </div>
                                        <div>
                                            <label for="semester_1st_end" class="block text-xs font-medium text-gray-500 mb-1">End Date</label>
                                            <input type="date" id="semester_1st_end" name="semester_1st_end"
                                                   class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                                        </div>
                                    </div>
                                </div>

                                <!-- 2nd Semester Dates -->
                                <div class="bg-white rounded-lg p-3 border border-blue-100">
                                    <div class="flex items-center justify-between mb-2">
                                        <h5 class="text-xs font-semibold text-gray-600 uppercase tracking-wider">2nd Semester</h5>
                                        <button type="button" data-clear-semester="2nd" title="Clear 2nd Semester dates"
                                                class="clear-semester-btn text-xs text-gray-400 cursor-not-allowed px-2 py-0.5 rounded transition-colors">
                                            <svg class="inline h-3.5 w-3.5 mr-0.5 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                            Clear
                                        </button>
                                    </div>
                                    <div class="grid grid-cols-2 gap-3">
                                        <div>
                                            <label for="semester_2nd_start" class="block text-xs font-medium text-gray-500 mb-1">Start Date</label>
                                            <input type="date" id="semester_2nd_start" name="semester_2nd_start"
                                                   class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                                        </div>
                                        <div>
                                            <label for="semester_2nd_end" class="block text-xs font-medium text-gray-500 mb-1">End Date</label>
                                            <input type="date" id="semester_2nd_end" name="semester_2nd_end"
                                                   class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                                        </div>
                                    </div>
                                </div>

                                <!-- Summer Dates -->
                                <div class="bg-white rounded-lg p-3 border border-blue-100">
                                    <div class="flex items-center justify-between mb-2">
                                        <h5 class="text-xs font-semibold text-gray-600 uppercase tracking-wider">Summer</h5>
                                        <button type="button" data-clear-semester="Summer" title="Clear Summer dates"
                                                class="clear-semester-btn text-xs text-gray-400 cursor-not-allowed px-2 py-0.5 rounded transition-colors">
                                            <svg class="inline h-3.5 w-3.5 mr-0.5 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                            Clear
                                        </button>
                                    </div>
                                    <div class="grid grid-cols-2 gap-3">
                                        <div>
                                            <label for="semester_summer_start" class="block text-xs font-medium text-gray-500 mb-1">Start Date</label>
                                            <input type="date" id="semester_summer_start" name="semester_summer_start"
                                                   class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                                        </div>
                                        <div>
                                            <label for="semester_summer_end" class="block text-xs font-medium text-gray-500 mb-1">End Date</label>
                                            <input type="date" id="semester_summer_end" name="semester_summer_end"
                                                   class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Date sequence warnings -->
                            <div id="dateSequenceWarning" class="hidden mt-3 bg-red-50 border border-red-200 rounded-lg p-3">
                                <div class="flex items-start">
                                    <svg class="h-4 w-4 text-red-500 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                    </svg>
                                    <div>
                                        <p class="text-xs font-semibold text-red-700">Date sequence error</p>
                                        <p class="text-xs text-red-600 mt-0.5" id="dateSequenceWarningText"></p>
                                    </div>
                                </div>
                            </div>

                            <p class="mt-3 text-xs text-blue-600">
                                <svg class="inline h-3.5 w-3.5 mr-1 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                Dates must follow the sequence: 1st Semester &rarr; 2nd Semester &rarr; Summer. The system auto-transitions when the active semester ends.
                            </p>
                        </div>
                    </div>

                    <!-- Warning Message -->
                    <div id="warningMessage" class="hidden bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-lg">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium text-yellow-800">Important</h3>
                                <div class="mt-2 text-sm text-yellow-700" id="warningContent">
                                    <!-- Warning content will be inserted here -->
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex items-center justify-end space-x-4 pt-4 border-t border-gray-200">
                        <button type="button" id="previewButton"
                                class="px-6 py-2.5 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                            <svg class="inline-block h-5 w-5 mr-2 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                            Preview Changes
                        </button>
                        <button type="submit" id="applyButton"
                                class="px-6 py-2.5 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors disabled:bg-gray-400 disabled:cursor-not-allowed">
                            <svg class="inline-block h-5 w-5 mr-2 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            Apply Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Information Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Current Schedules Card -->
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-blue-100 rounded-lg p-3">
                            <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Active Schedules</p>
                            <p class="text-2xl font-bold text-gray-900" id="currentScheduleCount">--</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Academic Years Card -->
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-green-100 rounded-lg p-3">
                            <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Academic Years</p>
                            <p class="text-2xl font-bold text-gray-900">{{ academic_years|length }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- System Status Card -->
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 bg-purple-100 rounded-lg p-3">
                            <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">System Status</p>
                            <p class="text-lg font-semibold text-green-600">Operational</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Semester Timeline Card -->
        {% if hasActiveSemester %}
        <div class="mt-6 bg-white shadow-md rounded-xl overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900">
                            <svg class="inline h-5 w-5 mr-1 -mt-0.5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                            </svg>
                            Semester Timeline
                        </h3>
                        <p class="text-sm text-gray-600 mt-0.5">Auto-transition chain: 1st &rarr; 2nd &rarr; Summer &rarr; next year</p>
                    </div>
                    {% if auto_transition_status.has_dates %}
                        {% if auto_transition_status.is_expired %}
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                                <svg class="h-4 w-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                </svg>
                                Transition Pending
                            </span>
                        {% else %}
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                <svg class="h-4 w-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                </svg>
                                Active
                            </span>
                        {% endif %}
                    {% else %}
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-600">
                            <svg class="h-4 w-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                            </svg>
                            No Dates Set
                        </span>
                    {% endif %}
                </div>
            </div>
            <div class="p-6">
                {% if auto_transition_status.all_semesters|length > 0 %}
                    {# Full semester timeline showing all 3 semesters #}
                    <div class="space-y-0">
                        {% for semKey, sem in auto_transition_status.all_semesters %}
                            <div class="relative flex items-start">
                                {# Timeline connector line #}
                                {% if not loop.last %}
                                    <div class="absolute left-[19px] top-10 w-0.5 h-full
                                        {% if sem.status == 'completed' or sem.status == 'active' %}bg-blue-300{% else %}bg-gray-200{% endif %}
                                    "></div>
                                {% endif %}

                                {# Timeline dot #}
                                <div class="relative flex-shrink-0 w-10 flex justify-center pt-1 z-10">
                                    {% if sem.is_active %}
                                        <div class="h-5 w-5 rounded-full bg-blue-600 border-4 border-blue-200 ring-2 ring-blue-600"></div>
                                    {% elseif sem.status == 'completed' %}
                                        <div class="h-5 w-5 rounded-full bg-green-500 border-2 border-green-200 flex items-center justify-center">
                                            <svg class="h-3 w-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                            </svg>
                                        </div>
                                    {% elseif sem.has_dates %}
                                        <div class="h-5 w-5 rounded-full bg-gray-300 border-2 border-gray-200"></div>
                                    {% else %}
                                        <div class="h-5 w-5 rounded-full border-2 border-gray-300 border-dashed bg-white"></div>
                                    {% endif %}
                                </div>

                                {# Semester card #}
                                <div class="flex-1 ml-3 pb-5">
                                    <div class="rounded-lg border p-4
                                        {% if sem.is_active and not sem.is_expired %}
                                            border-blue-300 bg-blue-50 shadow-sm
                                        {% elseif sem.is_active and sem.is_expired %}
                                            border-red-300 bg-red-50
                                        {% elseif sem.status == 'completed' %}
                                            border-green-200 bg-green-50/50
                                        {% elseif sem.has_dates %}
                                            border-gray-200 bg-gray-50
                                        {% else %}
                                            border-gray-200 bg-gray-50 border-dashed
                                        {% endif %}
                                    ">
                                        <div class="flex items-center justify-between flex-wrap gap-2">
                                            <div class="flex items-center">
                                                <h4 class="text-sm font-semibold
                                                    {% if sem.is_active %}text-blue-800{% elseif sem.status == 'completed' %}text-green-700{% else %}text-gray-700{% endif %}
                                                ">{{ sem.label }}</h4>

                                                {% if sem.is_active %}
                                                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-600 text-white">
                                                        Current
                                                    </span>
                                                {% elseif sem.status == 'completed' %}
                                                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">
                                                        Completed
                                                    </span>
                                                {% elseif sem.status == 'upcoming' %}
                                                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                                                        Upcoming
                                                    </span>
                                                {% endif %}
                                            </div>

                                            {% if sem.has_dates %}
                                                <div class="text-right">
                                                    {% if sem.is_active and sem.is_expired %}
                                                        <span class="text-xs font-medium text-red-600">Expired &mdash; transition pending</span>
                                                    {% elseif sem.is_active and sem.days_remaining is not null %}
                                                        <span class="text-xs font-medium
                                                            {% if sem.days_remaining <= 14 %}text-yellow-600{% else %}text-blue-600{% endif %}
                                                        ">{{ sem.days_remaining }} day{{ sem.days_remaining != 1 ? 's' : '' }} remaining</span>
                                                    {% endif %}
                                                </div>
                                            {% endif %}
                                        </div>

                                        {% if sem.has_dates %}
                                            <p class="mt-1 text-sm {% if sem.is_active %}text-blue-700{% elseif sem.status == 'completed' %}text-green-600{% else %}text-gray-500{% endif %}">
                                                {{ sem.start }} &mdash; {{ sem.end }}
                                            </p>
                                        {% else %}
                                            <p class="mt-1 text-xs text-gray-400 italic">No dates configured</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    {# Next semester info #}
                    {% if auto_transition_status.next_semester %}
                        <div class="mt-2 flex items-center text-sm text-gray-500 ml-12">
                            <svg class="h-4 w-4 mr-1.5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                            </svg>
                            Next transition: <span class="ml-1 font-medium text-indigo-600">{{ auto_transition_status.next_semester }}</span>
                        </div>
                    {% endif %}

                    {% if auto_transition_status.is_expired %}
                        <div class="mt-4 bg-red-50 border border-red-200 rounded-lg p-4">
                            <div class="flex">
                                <svg class="h-5 w-5 text-red-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                </svg>
                                <div class="ml-3">
                                    <h3 class="text-sm font-medium text-red-800">Semester has expired!</h3>
                                    <p class="mt-1 text-sm text-red-700">
                                        The current semester's end date has passed. The system will automatically transition to 
                                        <strong>{{ auto_transition_status.next_semester ?? 'the next semester' }}</strong> on the next scheduled check.
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% else %}
                    <div class="text-center py-6">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <p class="mt-2 text-sm text-gray-500">No semester dates configured.</p>
                        <p class="text-xs text-gray-400 mt-1">Set start and end dates above when changing the active semester to enable auto-transition.</p>
                    </div>
                {% endif %}
            </div>
        </div>
        {% endif %}
    </div>
</div>

