        function removeCourse(button) {
            const courseItem = button.closest('.course-item');
            const coursesContainer = document.getElementById('coursesContainer');
            
            // Don't allow removing if only one course remains
            if (coursesContainer.querySelectorAll('.course-item').length <= 1) {
                alert('You must have at least one course.');
                return;
            }
            
            courseItem.remove();
            reindexCourses();
        }

        function reindexCourses() {
            const courseItems = document.querySelectorAll('.course-item');
            courseItems.forEach((item, index) => {
                const newIndex = index + 1;
                item.dataset.courseIndex = newIndex;
                item.querySelector('h4').textContent = `Course ${newIndex}`;
            });
            courseCounter = courseItems.length;
        }

        function duplicateCourse(button) {
            const courseItem = button.closest('.course-item');
            const coursesContainer = document.getElementById('coursesContainer');
            
            // Clone the course item
            const clone = courseItem.cloneNode(true);
            
            // Increment counter and update the clone
            courseCounter++;
            clone.dataset.courseIndex = courseCounter;
            clone.querySelector('h4').textContent = `Course ${courseCounter}`;
            
            // Clear some values in the clone (keep units, lec, lab, year, semester, type)
            clone.querySelector('input[name="course_code[]"]').value = '';
            clone.querySelector('input[name="course_title[]"]').value = '';
            
            coursesContainer.appendChild(clone);
        }

