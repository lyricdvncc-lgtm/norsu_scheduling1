{% extends 'admin/base.html.twig' %}

{% block title %}Colleges Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- DataTables CSS - Local -->
    <link rel="stylesheet" href="{{ asset('vendor/css/jquery.dataTables.min.css') }}">
    <style>
        /* Custom DataTables styling to match your theme */
        .dataTables_wrapper .dataTables_length select {
            padding: 0.25rem 2rem 0.25rem 0.5rem;
            border-radius: 0.375rem;
            border: 1px solid #d1d5db;
        }
        .dataTables_wrapper .dataTables_filter input {
            padding: 0.5rem;
            border-radius: 0.5rem;
            border: 1px solid #d1d5db;
            margin-left: 0.5rem;
        }
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.25rem 0.75rem;
            margin: 0 0.125rem;
            border-radius: 0.375rem;
        }
        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background: #4f46e5 !important;
            color: white !important;
            border: 1px solid #4f46e5 !important;
        }
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: #e0e7ff !important;
            color: #4f46e5 !important;
            border: 1px solid #4f46e5 !important;
        }
        table.dataTable thead th {
            border-bottom: 2px solid #e5e7eb;
        }
        /* Override DataTables default row striping (uses box-shadow on cells) */
        table.dataTable tbody tr {
            background-color: #ffffff !important;
        }
        table.dataTable tbody tr > * {
            box-shadow: none !important;
        }
        table.dataTable tbody tr:hover {
            background-color: #f9fafb !important;
        }
    </style>
{% endblock %}

{% block main_content %}
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div class="flex-1 min-w-0">
                <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">
                    Colleges Management
                </h1>
                <div class="mt-3 flex flex-col sm:flex-row sm:flex-wrap sm:space-x-6">
                    <div class="mt-2 flex items-center text-sm text-gray-600">
                        <svg class="flex-shrink-0 mr-2 h-4 w-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                        </svg>
                        Academic Institution Management
                    </div>
                    <div class="mt-2 flex items-center text-sm text-gray-600">
                        <svg class="flex-shrink-0 mr-2 h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        {{ statistics.active }} Active Colleges
                    </div>
                </div>
            </div>
            <div class="mt-5 lg:mt-0 lg:ml-4">
                <a href="{{ path('admin_colleges_create') }}" class="inline-flex items-center px-6 py-3 border border-transparent rounded-xl shadow-sm text-sm font-medium text-white gradient-primary hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Add New College
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Total Colleges -->
        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100 hover:shadow-xl transition-shadow duration-300">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">Total Colleges</p>
                    <p class="text-2xl font-bold text-gray-900">{{ statistics.total }}</p>
                    <p class="text-xs text-green-600 flex items-center mt-1">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17l5-5 5 5"/>
                        </svg>
                        {{ statistics.active }} active
                    </p>
                </div>
            </div>
        </div>

        <!-- Total Departments -->
        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100 hover:shadow-xl transition-shadow duration-300">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">Total Departments</p>
                    <p class="text-2xl font-bold text-gray-900">{{ statistics.total_departments }}</p>
                    <p class="text-xs text-gray-500 mt-1">
                        {{ statistics.active_departments }} active departments
                    </p>
                </div>
            </div>
        </div>

        <!-- Active Faculty -->
        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100 hover:shadow-xl transition-shadow duration-300">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                        </svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">Active Faculty</p>
                    <p class="text-2xl font-bold text-gray-900">{{ statistics.active_faculty }}</p>
                    <p class="text-xs text-blue-600 flex items-center mt-1">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                        </svg>
                        {{ statistics.total_faculty }} total faculty
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Colleges Table -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
        <!-- Search Bar and Filters Row -->
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <div class="flex items-center justify-between gap-4">
                <h3 class="text-lg font-semibold text-gray-900">Colleges Directory</h3>
                
                <div class="flex items-center gap-3">
                    <!-- Search Input -->
                    <div class="relative flex items-center">
                        <svg class="absolute left-4 h-4 w-4 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                        <input type="text" id="searchInput" placeholder="Search colleges..." 
                               value="{{ filters.search ?? '' }}"
                               onkeypress="if(event.keyCode==13) return false;"
                               style="padding-left: 2.5rem !important;"
                               class="block w-64 pr-3 py-2 border border-gray-300 rounded-lg text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                    </div>

                    <!-- Status Filter -->
                    <div class="filter-group">
                        <label for="statusFilter" class="sr-only">Filter by status</label>
                        <select id="statusFilter" name="is_active" class="w-32 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm py-2 px-3 pr-8 bg-white hover:bg-gray-50 transition-colors">
                            <option value="" selected>All Status</option>
                            <option value="1" {{ filters.is_active == '1' ? 'selected' : '' }}>Active</option>
                            <option value="0" {{ filters.is_active == '0' ? 'selected' : '' }}>Inactive</option>
                        </select>
                    </div>

                    <!-- Clear Filters Button -->
                    <button type="button" id="clearFilters" class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                        Clear Filters
                    </button>
                </div>
            </div>
        </div>

        <!-- Table Content -->        <!-- Table Content -->
        <div class="overflow-x-auto">
            <table id="collegesTable" class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            College Information
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Code
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Dean
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Status
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-orderable="false">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% if colleges is empty %}
                        <tr class="no-colleges-row">
                            <td colspan="5" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center">
                                    <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                                    </svg>
                                    <p class="text-gray-500 text-lg font-medium">No colleges found</p>
                                    <p class="text-gray-400 text-sm mt-1">Try adjusting your search or filters</p>
                                    <a href="{{ path('admin_colleges_create') }}" class="mt-4 inline-flex items-center px-4 py-2 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
                                        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                                        </svg>
                                        Add New College
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        {% for college in colleges %}
                            <tr class="hover:bg-gray-50 transition-colors duration-200">
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-12 w-12">
                                            {% if college.logo %}
                                                <img src="{{ asset('images/' ~ college.logo) }}" alt="{{ college.name }} logo" class="h-12 w-12 rounded-xl object-cover border border-gray-200">
                                            {% else %}
                                                <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center">
                                                    <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/>
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                                                    </svg>
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900">{{ college.name }}</div>
                                            <div class="text-sm text-gray-500">
                                                {% if college.description %}
                                                    {{ college.description|length > 50 ? college.description|slice(0, 50) ~ '...' : college.description }}
                                                {% else %}
                                                    Created {{ college.createdAt|date('M d, Y') }}
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-gray-100 text-gray-800">
                                        {{ college.code }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        {{ college.dean ?? 'Not assigned' }}
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {% if college.isActive %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 8 8">
                                                <circle cx="4" cy="4" r="3"/>
                                            </svg>
                                            Active
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 8 8">
                                                <circle cx="4" cy="4" r="3"/>
                                            </svg>
                                            Inactive
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <div class="flex items-center gap-2">
                                        <a href="{{ path('admin_colleges_view', {id: college.id}) }}" 
                                           class="text-indigo-600 hover:text-indigo-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-indigo-50 transition" 
                                           title="View">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                            </svg>
                                        </a>
                                        <a href="{{ path('admin_colleges_edit', {id: college.id}) }}" 
                                           class="text-gray-600 hover:text-gray-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-gray-100 transition" 
                                           title="Edit">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                                            </svg>
                                        </a>
                                        {% if college.isActive %}
                                            <form method="post" action="{{ path('admin_colleges_deactivate', {id: college.id}) }}" class="inline m-0" onsubmit="return confirm('Are you sure you want to deactivate this college?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('deactivate_college_' ~ college.id) }}">
                                                <button type="submit" 
                                                        class="text-yellow-600 hover:text-yellow-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-yellow-50 transition" 
                                                        title="Deactivate">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                                                    </svg>
                                                </button>
                                            </form>
                                        {% else %}
                                            <form method="post" action="{{ path('admin_colleges_activate', {id: college.id}) }}" class="inline m-0">
                                                <input type="hidden" name="_token" value="{{ csrf_token('activate_college_' ~ college.id) }}">
                                                <button type="submit" 
                                                        class="text-green-600 hover:text-green-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-green-50 transition" 
                                                        title="Activate">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                    </svg>
                                                </button>
                                            </form>
                                        {% endif %}
                                        <form method="post" action="{{ path('admin_colleges_delete', {id: college.id}) }}" class="inline m-0" onsubmit="return confirm('Are you sure you want to delete this college? This action cannot be undone.');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete_college_' ~ college.id) }}">
                                            <button type="submit" 
                                                    class="text-red-600 hover:text-red-900 inline-flex items-center justify-center w-8 h-8 rounded-lg hover:bg-red-50 transition" 
                                                    title="Delete">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<!-- jQuery (required for DataTables) - Local -->
<script src="{{ asset('vendor/js/jquery.min.js') }}"></script>
<!-- DataTables JS - Local -->
<script src="{{ asset('vendor/js/jquery.dataTables.min.js') }}"></script>

<script>
$(document).ready(function() {
    // Prevent any accidental form submissions on the page
    $('body').on('keypress', 'input:not([type="submit"])', function(e) {
        if (e.keyCode === 13) {
            e.preventDefault();
            return false;
        }
    });
    
    // Check if table has actual data rows (not the "no colleges" message row)
    const hasNoCollegesRow = $('#collegesTable tbody tr.no-colleges-row').length > 0;
    
    if (hasNoCollegesRow) {
        console.log('No colleges to display - DataTables not initialized');
        return;
    }
    
    // Check if DataTable already exists and destroy it
    if ($.fn.DataTable.isDataTable('#collegesTable')) {
        $('#collegesTable').DataTable().destroy();
    }
    
    // Initialize DataTables with clean, simple configuration
    const table = $('#collegesTable').DataTable({
        paging: false,
        info: false,
        lengthChange: false,
        order: [[0, 'asc']],
        columnDefs: [
            { orderable: false, targets: -1 }
        ],
        language: {
            search: "Search:",
            zeroRecords: "No matching colleges found"
        },
        dom: 'rt'
    });

    // Connect custom search input to DataTables search
    $('#searchInput').on('input', function() {
        table.search(this.value).draw();
    });

    // Force status filter to "All Status" on page load
    $('#statusFilter').val('');

    // Status filter - convert value to status text for searching
    $('#statusFilter').on('change', function() {
        const filterValue = $(this).val();
        let statusText = '';
        
        if (filterValue === '1') {
            statusText = 'Active';
        } else if (filterValue === '0') {
            statusText = 'Inactive';
        }
        
        table.column(-2).search(statusText).draw();
    });

    // Clear filters button
    $('#clearFilters').on('click', function() {
        $('#searchInput').val('');
        $('#statusFilter').val('');
        table.search('').columns().search('').draw();
    });
});
</script>
{% endblock %}